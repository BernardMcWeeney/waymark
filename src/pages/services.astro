function getServiceTypeBadge(type: ServiceType): string {
	const badges: Record<ServiceType, string> = {
		assessment: "type-badge type-badge-assessment",
		implementation: "type-badge type-badge-implementation",
		managed: "type-badge type-badge-managed",
	};
	return badges[type];
}

function getServiceTypeLabel(type: ServiceType): string {
	const labels: Record<ServiceType, string> = {
		assessment: "Assessment",
		implementation: "Implementation",
		managed: "Managed",
	};
	return labels[type];
}
