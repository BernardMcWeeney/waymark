<BaseLayout title={title} description={description}>
	<!-- Hero Section -->
	<section class="hero">
		<div class="container-wide">
			<div class="hero-content">
				<span class="badge badge-primary">Productized Services</span>
				<h1 class="hero-title">
					Security Services with <span class="hero-title-accent">Clear Outcomes</span>
				</h1>
				<p class="hero-description">
					Fixed scope. Defined deliverables. Predictable pricing. Every service designed to deliver measurable results for your business.
				</p>
				<div class="hero-actions">
					<a href="#flagship" class="btn btn-primary">
						View Flagship Products
						<svg class="w-4 h-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
							<path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
						</svg>
					</a>
					<a href="#plans" class="btn btn-secondary">
						See Recurring Plans
					</a>
				</div>
			</div>
		</div>
	</section>

	<!-- Flagship Products Section -->
	<section id="flagship" class="section-padding scroll-mt-24">
		<div class="container-wide">
			<div class="section-header">
				<span class="badge badge-primary">Featured</span>
				<h2 class="section-title">Flagship Products</h2>
				<p class="section-description">
					Our most popular services. Each designed to deliver specific outcomes with clear deliverables.
				</p>
			</div>

			<div class="flagship-grid">
				{FLAGSHIP_SERVICES.map((service) => (
					<div class="flagship-card group">
						<div class="flagship-card-header">
							<div class="icon-box">
								<svg class="w-5 h-5" style="color: var(--brand-primary);" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5" set:html={getIcon(service.icon)} />
