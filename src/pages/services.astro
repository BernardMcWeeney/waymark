<BaseLayout title={title} description={description}>
	<!-- Hero Section -->
	<section class="relative py-20 lg:py-28 overflow-hidden">
		<div class="absolute inset-0 bg-theme-secondary">
			<div class="absolute top-1/4 right-1/4 w-96 h-96 bg-brand-500/5 rounded-full blur-3xl"></div>
			<div class="absolute bottom-1/4 left-1/4 w-96 h-96 bg-accent-500/5 rounded-full blur-3xl"></div>
		</div>

		<div class="container-wide relative z-10">
			<div class="max-w-4xl">
				<span class="badge-brand mb-6">Productized Services</span>
				<h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 text-theme-primary">
					Security Services with <span class="gradient-text">Clear Outcomes</span>
				</h1>
				<p class="text-xl text-theme-secondary max-w-2xl mb-8">
					Fixed scope. Defined deliverables. Predictable pricing. Every service designed to deliver measurable results for your business.
				</p>
				<div class="flex flex-wrap gap-4">
					<a href="#flagship" class="btn-primary">
						View Flagship Products
						<svg class="w-4 h-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
							<path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
						</svg>
					</a>
					<a href="#plans" class="btn-secondary">
						See Recurring Plans
					</a>
				</div>
			</div>
		</div>
	</section>

	<!-- Flagship Products Section -->
	<section id="flagship" class="section-padding scroll-mt-24">
		<div class="container-wide">
			<div class="text-center max-w-3xl mx-auto mb-16">
				<span class="badge-brand mb-4">Featured</span>
				<h2 class="text-3xl md:text-4xl font-bold mb-4 text-theme-primary">Flagship Products</h2>
				<p class="text-lg text-theme-secondary">
					Our most popular services. Each designed to deliver specific outcomes with clear deliverables.
