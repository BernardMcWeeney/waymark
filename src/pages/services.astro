---
import BaseLayout from '../layouts/BaseLayout.astro';
import ServiceCard from '../components/ServiceCard.astro';

const title = "IT Security & Consulting Services";
const description = "Comprehensive IT security services including assessments, managed security, network consulting, and 24/7 monitoring.";

const services = [
	{
		id: "assessment",
		title: "Security Assessment",
		description: "Comprehensive evaluation of your security posture with actionable recommendations.",
		icon: "shield",
		features: [
			"Vulnerability assessment and penetration testing",
			"Security architecture review",
			"Policy and procedure audit",
			"Compliance gap analysis",
			"Executive summary with prioritized roadmap",
		],
	},
	{
		id: "microsoft-365",
		title: "Microsoft 365 Security",
		description: "Complete security solutions for your Microsoft 365 environment.",
		icon: "microsoft",
		features: [
			"Advanced Threat Protection configuration",
			"Identity and access management",
			"Data loss prevention policies",
			"Email security and anti-phishing",
			"Security score optimization",
		],
	},
	{
		id: "networking",
		title: "Network Infrastructure",
		description: "Design, deploy, and manage enterprise-grade network solutions.",
		icon: "network",
		features: [
			"Network architecture design",
			"Ubiquiti deployment and support",
			"VPN and secure remote access",
			"Network segmentation and VLANs",
			"WiFi site surveys and optimization",
		],
	},
	{
		id: "monitoring",
		title: "24/7 Security Monitoring",
		description: "Round-the-clock security operations center monitoring and response.",
		icon: "monitor",
		features: [
			"Real-time threat detection",
			"Security event correlation",
			"Incident response and containment",
			"Monthly security reports",
			"Dedicated security analyst",
		],
	},
	{
		id: "consulting",
		title: "Security Consulting",
		description: "Strategic security guidance and virtual CISO services.",
		icon: "chart",
		features: [
			"Security strategy development",
			"Board and executive briefings",
			"Vendor selection assistance",
			"Security awareness training",
			"Incident response planning",
		],
	},
	{
		id: "compliance",
		title: "Compliance Services",
		description: "Navigate complex regulatory requirements with expert guidance.",
		icon: "lock",
		features: [
			"GDPR compliance implementation",
			"HIPAA security requirements",
			"SOC 2 preparation",
			"ISO 27001 certification support",
			"Ongoing compliance monitoring",
		],
	},
];

const process = [
	{
		step: "01",
		title: "Discovery",
		description: "We learn about your business, current infrastructure, and security needs.",
	},
	{
		step: "02",
		title: "Assessment",
		description: "Our team evaluates your security posture and identifies vulnerabilities.",
	},
	{
		step: "03",
		title: "Planning",
		description: "We develop a customized security roadmap aligned with your goals.",
	},
	{
		step: "04",
		title: "Implementation",
		description: "Expert deployment of security solutions with minimal disruption.",
	},
	{
		step: "05",
		title: "Monitoring",
		description: "Continuous monitoring and optimization of your security environment.",
	},
];
---

<BaseLayout title={title} description={description}>
	<!-- Hero Section -->
	<section class="relative py-24 lg:py-32 overflow-hidden">
		<div class="absolute inset-0">
			<div class="absolute inset-0 bg-gradient-to-br from-slate-950 via-slate-900 to-slate-950"></div>
			<div class="absolute top-1/4 right-1/4 w-96 h-96 bg-brand-500/10 rounded-full blur-3xl"></div>
		</div>

		<div class="container-wide relative z-10">
			<div class="max-w-4xl">
				<span class="badge-brand mb-6">Our Services</span>
				<h1 class="text-5xl md:text-6xl font-bold text-white mb-6">
					Security Services That Protect & Empower
				</h1>
				<p class="text-xl text-slate-400 max-w-2xl">
					From assessment to implementation and ongoing management, we provide end-to-end security services tailored to your business needs.
				</p>
			</div>
		</div>
	</section>

	<!-- Services Grid -->
	<section class="section-padding">
		<div class="container-wide">
			<div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
				{services.map((service) => (
					<div id={service.id} class="card p-8 scroll-mt-24">
						<div class="flex items-start gap-4 mb-6">
							<div class="w-12 h-12 rounded-xl bg-gradient-to-br from-brand-500/20 to-accent-500/20 flex items-center justify-center flex-shrink-0">
								{service.icon === "shield" && (
									<svg class="w-6 h-6 text-brand-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
										<path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
									</svg>
								)}
								{service.icon === "microsoft" && (
									<svg class="w-6 h-6 text-brand-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
										<path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6A2.25 2.25 0 016 3.75h2.25A2.25 2.25 0 0110.5 6v2.25a2.25 2.25 0 01-2.25 2.25H6a2.25 2.25 0 01-2.25-2.25V6zM3.75 15.75A2.25 2.25 0 016 13.5h2.25a2.25 2.25 0 012.25 2.25V18a2.25 2.25 0 01-2.25 2.25H6A2.25 2.25 0 013.75 18v-2.25zM13.5 6a2.25 2.25 0 012.25-2.25H18A2.25 2.25 0 0120.25 6v2.25A2.25 2.25 0 0118 10.5h-2.25a2.25 2.25 0 01-2.25-2.25V6zM13.5 15.75a2.25 2.25 0 012.25-2.25H18a2.25 2.25 0 012.25 2.25V18A2.25 2.25 0 0118 20.25h-2.25A2.25 2.25 0 0113.5 18v-2.25z" />
									</svg>
								)}
								{service.icon === "network" && (
									<svg class="w-6 h-6 text-brand-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
										<path stroke-linecap="round" stroke-linejoin="round" d="M8.288 15.038a5.25 5.25 0 017.424 0M5.106 11.856c3.807-3.808 9.98-3.808 13.788 0M1.924 8.674c5.565-5.565 14.587-5.565 20.152 0M12.53 18.22l-.53.53-.53-.53a.75.75 0 011.06 0z" />
									</svg>
								)}
								{service.icon === "monitor" && (
									<svg class="w-6 h-6 text-brand-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
										<path stroke-linecap="round" stroke-linejoin="round" d="M9 17.25v1.007a3 3 0 01-.879 2.122L7.5 21h9l-.621-.621A3 3 0 0115 18.257V17.25m6-12V15a2.25 2.25 0 01-2.25 2.25H5.25A2.25 2.25 0 013 15V5.25m18 0A2.25 2.25 0 0018.75 3H5.25A2.25 2.25 0 003 5.25m18 0V12a2.25 2.25 0 01-2.25 2.25H5.25A2.25 2.25 0 013 12V5.25" />
									</svg>
								)}
								{service.icon === "chart" && (
									<svg class="w-6 h-6 text-brand-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
										<path stroke-linecap="round" stroke-linejoin="round" d="M3 13.125C3 12.504 3.504 12 4.125 12h2.25c.621 0 1.125.504 1.125 1.125v6.75C7.5 20.496 6.996 21 6.375 21h-2.25A1.125 1.125 0 013 19.875v-6.75zM9.75 8.625c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125v11.25c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 01-1.125-1.125V8.625zM16.5 4.125c0-.621.504-1.125 1.125-1.125h2.25C20.496 3 21 3.504 21 4.125v15.75c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 01-1.125-1.125V4.125z" />
									</svg>
								)}
								{service.icon === "lock" && (
									<svg class="w-6 h-6 text-brand-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
										<path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" />
									</svg>
								)}
							</div>
							<div>
								<h3 class="text-2xl font-bold text-white mb-2">{service.title}</h3>
								<p class="text-slate-400">{service.description}</p>
							</div>
						</div>
						<ul class="space-y-3">
							{service.features.map((feature) => (
								<li class="flex items-center gap-3 text-slate-300 text-sm">
									<svg class="w-5 h-5 text-accent-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
										<path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
									</svg>
									{feature}
								</li>
							))}
						</ul>
						<a href="/contact" class="btn-secondary mt-6">
							Learn More
							<svg class="w-4 h-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
								<path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
							</svg>
						</a>
					</div>
				))}
			</div>
		</div>
	</section>

	<!-- Process Section -->
	<section class="section-padding bg-slate-900/50">
		<div class="container-wide">
			<div class="text-center max-w-3xl mx-auto mb-16">
				<h2 class="text-4xl font-bold text-white mb-6">Our Process</h2>
				<p class="text-xl text-slate-400">
					A proven approach to implementing security solutions that deliver results.
				</p>
			</div>

			<div class="grid grid-cols-1 md:grid-cols-5 gap-8">
				{process.map((item, index) => (
					<div class="text-center">
						<div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-brand-500 to-accent-500 flex items-center justify-center mx-auto mb-4">
							<span class="text-white font-bold">{item.step}</span>
						</div>
						<h3 class="text-lg font-semibold text-white mb-2">{item.title}</h3>
						<p class="text-slate-400 text-sm">{item.description}</p>
						{index < process.length - 1 && (
							<div class="hidden md:block absolute top-8 right-0 w-8">
								<svg class="w-8 h-8 text-slate-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
								</svg>
							</div>
						)}
					</div>
				))}
			</div>
		</div>
	</section>

	<!-- CTA Section -->
	<section class="section-padding">
		<div class="container-wide">
			<div class="relative rounded-3xl bg-gradient-to-br from-brand-900/50 to-slate-900 border border-brand-800/30 overflow-hidden">
				<div class="absolute inset-0">
					<div class="absolute top-0 right-0 w-96 h-96 bg-brand-500/10 rounded-full blur-3xl"></div>
					<div class="absolute bottom-0 left-0 w-96 h-96 bg-accent-500/10 rounded-full blur-3xl"></div>
				</div>

				<div class="relative z-10 px-8 py-16 md:px-16 md:py-24 text-center">
					<h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
						Ready to Get Started?
					</h2>
					<p class="text-xl text-slate-300 mb-10 max-w-2xl mx-auto">
						Contact us for a free consultation and discover how our services can protect your business.
					</p>
					<a href="/contact" class="btn-primary btn-lg">
						Schedule Consultation
						<svg class="w-5 h-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
							<path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
						</svg>
					</a>
				</div>
			</div>
		</div>
	</section>
</BaseLayout>
