function getServiceTypeBadge(type: ServiceType): { label: string; class: string } {
	const badges: Record<ServiceType, { label: string; class: string }> = {
		assessment: { label: "Assessment", class: "badge-brand" },
		implementation: { label: "Implementation", class: "badge-accent" },
		managed: { label: "Managed", class: "badge-neutral" },
	};
	return badges[type];
}
