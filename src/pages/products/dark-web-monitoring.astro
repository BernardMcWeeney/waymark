---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { PRODUCTS } from '../../consts';

const product = PRODUCTS.find(p => p.id === 'dark-web-monitoring')!;
const title = product.title;
const description = product.description;

const features = [
	{
		title: 'Credential Monitoring',
		description: 'Continuous scanning of dark web marketplaces, paste sites, and underground forums for leaked employee credentials.',
	},
	{
		title: 'Executive Protection',
		description: 'VIP monitoring for C-suite executives with priority alerting and dedicated threat analysis.',
	},
	{
		title: 'Brand Protection',
		description: 'Detect domain spoofing, brand impersonation, and counterfeit goods targeting your organization.',
	},
	{
		title: 'Data Leak Detection',
		description: 'Identify leaked source code, intellectual property, customer data, and sensitive documents.',
	},
	{
		title: 'Instant Alerts',
		description: 'Real-time notifications via email, SMS, and Slack when threats are detected.',
	},
	{
		title: 'Threat Intelligence',
		description: 'Monthly threat reports with analysis and actionable recommendations from our security analysts.',
	},
];

const monitoringTypes = [
	{ type: 'Credentials', desc: 'Email/password combinations', count: '12.4B+' },
	{ type: 'Domains', desc: 'Lookalike domains', count: '500M+' },
	{ type: 'Documents', desc: 'Leaked files & data', count: '89M+' },
	{ type: 'Sources', desc: 'Dark web sources monitored', count: '10K+' },
];

const pricing = [
	{
		name: 'Business',
		description: 'Essential dark web monitoring for growing businesses',
		price: '499',
		period: '/month',
		features: [
			'Up to 100 monitored emails',
			'5 monitored domains',
			'Weekly scanning',
			'Email alerts',
			'Monthly summary reports',
		],
		popular: false,
	},
	{
		name: 'Professional',
		description: 'Advanced monitoring with executive protection',
		price: '999',
		period: '/month',
		features: [
			'Up to 500 monitored emails',
			'25 monitored domains',
			'Daily scanning',
			'Real-time alerts (Email, SMS, Slack)',
			'Executive VIP monitoring',
			'Weekly threat reports',
			'Analyst support',
		],
		popular: true,
	},
	{
		name: 'Enterprise',
		description: 'Full-scale protection with dedicated resources',
		price: 'Custom',
		period: '',
		features: [
			'Unlimited monitored emails',
			'Unlimited domains',
			'Continuous scanning',
			'Custom integrations',
			'Dedicated threat analyst',
			'Takedown services',
			'Executive briefings',
		],
		popular: false,
	},
];
---

<BaseLayout title={title} description={description}>
	<!-- Hero Section -->
	<section class="relative py-24 lg:py-32 overflow-hidden">
		<div class="absolute inset-0">
			<div class="absolute inset-0 bg-slate-950"></div>
			<div class="absolute inset-0 bg-[linear-gradient(rgba(59,130,246,0.03)_1px,transparent_1px),linear-gradient(90deg,rgba(59,130,246,0.03)_1px,transparent_1px)] bg-[size:60px_60px]"></div>
			<div class="absolute bottom-0 right-1/4 w-[500px] h-[500px] bg-red-500/5 rounded-full blur-[120px]"></div>
		</div>

		<div class="container-wide relative z-10">
			<div class="grid lg:grid-cols-2 gap-16 items-center">
				<div>
					<div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-red-500/10 border border-red-500/20 text-red-400 text-sm font-medium mb-6">
						<svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
							<path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
							<path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
						</svg>
						Threat Intelligence
					</div>
					<h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6">
						{title}
					</h1>
					<p class="text-xl text-slate-400 mb-8">
						{description}
					</p>
					<div class="flex flex-wrap gap-4">
						<a href="/contact" class="btn-primary btn-lg">
							Start Monitoring
							<svg class="w-5 h-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
								<path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
							</svg>
						</a>
						<a href="#pricing" class="btn-secondary btn-lg">
							View Pricing
						</a>
					</div>
				</div>

				<!-- Dark Web Visual -->
				<div class="relative">
					<div class="rounded-2xl bg-slate-900 border border-slate-800 p-6 shadow-2xl">
						<div class="flex items-center justify-between mb-6">
							<div class="flex items-center gap-2">
								<span class="w-2 h-2 rounded-full bg-red-500 animate-pulse"></span>
								<span class="text-sm text-slate-400">Live Monitoring</span>
							</div>
							<span class="text-xs text-slate-500">Last scan: 2 min ago</span>
						</div>

						<!-- Alert -->
						<div class="bg-red-500/10 border border-red-500/20 rounded-xl p-4 mb-4">
							<div class="flex items-start gap-3">
								<div class="w-10 h-10 rounded-full bg-red-500/20 flex items-center justify-center flex-shrink-0">
									<svg class="w-5 h-5 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
										<path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
									</svg>
								</div>
								<div class="flex-1">
									<p class="text-sm text-red-400 font-medium mb-1">Credential Exposed</p>
									<p class="text-xs text-slate-400">j.smith@company.com found on dark web marketplace</p>
									<p class="text-xs text-slate-500 mt-1">Detected 3 hours ago</p>
								</div>
							</div>
						</div>

						<!-- Monitoring Stats -->
						<div class="grid grid-cols-2 gap-3">
							{monitoringTypes.map((item) => (
								<div class="bg-slate-800/50 rounded-lg p-3">
									<p class="text-lg font-bold text-white">{item.count}</p>
									<p class="text-xs text-slate-500">{item.type}</p>
								</div>
							))}
						</div>
					</div>
					<div class="absolute -top-4 -left-4 w-32 h-32 bg-red-500/10 rounded-full blur-2xl"></div>
				</div>
			</div>
		</div>
	</section>

	<!-- Features -->
	<section class="section-padding bg-slate-900/50">
		<div class="container-wide">
			<div class="max-w-3xl mb-16">
				<p class="text-sm font-medium text-brand-400 uppercase tracking-wider mb-4">Capabilities</p>
				<h2 class="text-4xl font-bold text-white mb-6">
					Comprehensive Dark Web Intelligence
				</h2>
				<p class="text-xl text-slate-400">
					Our platform monitors thousands of sources to detect threats before they impact your business.
				</p>
			</div>

			<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
				{features.map((feature) => (
					<div class="card p-6">
						<div class="w-12 h-12 rounded-xl bg-red-500/10 flex items-center justify-center mb-4">
							<svg class="w-6 h-6 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
								<path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
							</svg>
						</div>
						<h3 class="text-lg font-semibold text-white mb-2">{feature.title}</h3>
						<p class="text-slate-400 text-sm">{feature.description}</p>
					</div>
				))}
			</div>
		</div>
	</section>

	<!-- Pricing -->
	<section id="pricing" class="section-padding bg-slate-950">
		<div class="container-wide">
			<div class="text-center max-w-3xl mx-auto mb-16">
				<p class="text-sm font-medium text-brand-400 uppercase tracking-wider mb-4">Pricing</p>
				<h2 class="text-4xl font-bold text-white mb-6">
					Protect Your Digital Identity
				</h2>
				<p class="text-xl text-slate-400">
					Choose the monitoring level that fits your organization's needs.
				</p>
			</div>

			<div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
				{pricing.map((plan) => (
					<div class={`card p-8 ${plan.popular ? 'border-brand-500 relative' : ''}`}>
						{plan.popular && (
							<div class="absolute -top-4 left-1/2 -translate-x-1/2">
								<span class="px-4 py-1 rounded-full bg-brand-500 text-white text-sm font-medium">Recommended</span>
							</div>
						)}
						<div class="text-center mb-8">
							<h3 class="text-xl font-bold text-white mb-2">{plan.name}</h3>
							<p class="text-slate-400 text-sm mb-4">{plan.description}</p>
							<div class="flex items-baseline justify-center gap-1">
								{plan.price !== 'Custom' ? (
									<>
										<span class="text-4xl font-bold text-white">${plan.price}</span>
										<span class="text-slate-500">{plan.period}</span>
									</>
								) : (
									<span class="text-3xl font-bold text-white">{plan.price}</span>
								)}
							</div>
						</div>
						<ul class="space-y-3 mb-8">
							{plan.features.map((feature) => (
								<li class="flex items-center gap-3 text-sm text-slate-300">
									<svg class="w-5 h-5 text-accent-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
										<path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
									</svg>
									{feature}
								</li>
							))}
						</ul>
						<a href="/contact" class={plan.popular ? 'btn-primary w-full' : 'btn-secondary w-full'}>
							Get Started
						</a>
					</div>
				))}
			</div>
		</div>
	</section>

	<!-- CTA -->
	<section class="section-padding bg-slate-900/50">
		<div class="container-wide">
			<div class="text-center max-w-3xl mx-auto">
				<h2 class="text-4xl font-bold text-white mb-6">
					Don't Wait for a Breach
				</h2>
				<p class="text-xl text-slate-400 mb-10">
					Start monitoring the dark web today and protect your organization from credential theft and data leaks.
				</p>
				<a href="/contact" class="btn-primary btn-lg">
					Schedule a Demo
					<svg class="w-5 h-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
						<path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
					</svg>
				</a>
			</div>
		</div>
	</section>
</BaseLayout>
