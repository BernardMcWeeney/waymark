---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { PRODUCTS } from '../../consts';

const product = PRODUCTS.find(p => p.id === 'dark-web-monitoring')!;

const pricing = [
  {
    name: 'Business',
    description: 'Up to 100 emails monitored',
    price: '$499',
    unit: 'per month',
    features: [
      'Credential monitoring',
      '5 domains',
      'Weekly reports',
      'Email alerts',
    ],
  },
  {
    name: 'Professional',
    description: 'Up to 500 emails monitored',
    price: '$999',
    unit: 'per month',
    highlight: true,
    features: [
      'Executive VIP monitoring',
      '20 domains',
      'Daily reports',
      'Real-time alerts',
      'Threat intelligence',
    ],
  },
  {
    name: 'Enterprise',
    description: 'Unlimited monitoring',
    price: 'Custom',
    unit: 'contact sales',
    features: [
      'Brand monitoring',
      'Unlimited domains',
      'API access',
      'Dedicated analyst',
      'Custom integrations',
    ],
  },
];
---

<BaseLayout title={product.title} description={product.description}>
  <!-- Hero -->
  <section class="section">
    <div class="container">
      <div class="max-w-3xl">
        <p class="text-sm text-neutral-500 mb-3">Products</p>
        <h1 class="mb-4">{product.title}</h1>
        <p class="text-xl text-neutral-400 mb-8 max-w-2xl">
          {product.description}
        </p>
        <div class="flex flex-wrap gap-3">
          <a href="#pricing" class="btn-primary">See pricing</a>
          <a href="/contact" class="btn-secondary">Contact sales</a>
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works -->
  <section class="section-sm border-t border-neutral-800">
    <div class="container">
      <div class="mb-12">
        <h2 class="text-2xl mb-2">How it works</h2>
        <p class="text-neutral-500">Continuous dark web surveillance.</p>
      </div>

      <div class="diagram mb-12">
        <div class="grid md:grid-cols-4 gap-8">
          <div class="text-center">
            <div class="w-12 h-12 rounded-lg bg-neutral-800 flex items-center justify-center mx-auto mb-4">
              <span class="text-lg font-semibold text-white">1</span>
            </div>
            <h4 class="text-sm font-medium text-white mb-2">Configure</h4>
            <p class="text-xs text-neutral-500">Add domains, emails, and keywords to monitor</p>
          </div>
          <div class="text-center">
            <div class="w-12 h-12 rounded-lg bg-neutral-800 flex items-center justify-center mx-auto mb-4">
              <span class="text-lg font-semibold text-white">2</span>
            </div>
            <h4 class="text-sm font-medium text-white mb-2">Scan</h4>
            <p class="text-xs text-neutral-500">Crawlers search dark web marketplaces and forums</p>
          </div>
          <div class="text-center">
            <div class="w-12 h-12 rounded-lg bg-neutral-800 flex items-center justify-center mx-auto mb-4">
              <span class="text-lg font-semibold text-white">3</span>
            </div>
            <h4 class="text-sm font-medium text-white mb-2">Alert</h4>
            <p class="text-xs text-neutral-500">Instant notifications when your data is found</p>
          </div>
          <div class="text-center">
            <div class="w-12 h-12 rounded-lg bg-neutral-800 flex items-center justify-center mx-auto mb-4">
              <span class="text-lg font-semibold text-white">4</span>
            </div>
            <h4 class="text-sm font-medium text-white mb-2">Respond</h4>
            <p class="text-xs text-neutral-500">Remediation guidance and incident support</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features -->
  <section class="section-sm border-t border-neutral-800">
    <div class="container">
      <div class="mb-12">
        <h2 class="text-2xl mb-2">Features</h2>
        <p class="text-neutral-500">Comprehensive dark web intelligence.</p>
      </div>

      <div class="grid md:grid-cols-2 gap-x-12 gap-y-8">
        <div>
          <h3 class="text-base font-semibold text-white mb-2">Credential Monitoring</h3>
          <p class="text-sm text-neutral-500">
            Detect compromised credentials from data breaches, paste sites, and underground marketplaces.
          </p>
        </div>
        <div>
          <h3 class="text-base font-semibold text-white mb-2">Domain Surveillance</h3>
          <p class="text-sm text-neutral-500">
            Monitor for mentions in forums, exploit discussions, and attack planning activities.
          </p>
        </div>
        <div>
          <h3 class="text-base font-semibold text-white mb-2">Executive Protection</h3>
          <p class="text-sm text-neutral-500">
            VIP monitoring for C-suite. Track personal data exposure and impersonation attempts.
          </p>
        </div>
        <div>
          <h3 class="text-base font-semibold text-white mb-2">Brand Monitoring</h3>
          <p class="text-sm text-neutral-500">
            Detect fake domains, counterfeit products, and brand abuse in dark web marketplaces.
          </p>
        </div>
        <div>
          <h3 class="text-base font-semibold text-white mb-2">Real-time Alerts</h3>
          <p class="text-sm text-neutral-500">
            Instant notifications via email, Slack, or Teams when threats are detected.
          </p>
        </div>
        <div>
          <h3 class="text-base font-semibold text-white mb-2">Threat Intelligence</h3>
          <p class="text-sm text-neutral-500">
            Context-rich reports with actor profiles and remediation recommendations.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Coverage Stats -->
  <section class="section-sm border-t border-neutral-800">
    <div class="container">
      <div class="flex flex-wrap gap-12">
        <div>
          <div class="text-3xl font-semibold text-white mb-1">12.4B+</div>
          <p class="text-sm text-neutral-500">Credentials<br />indexed</p>
        </div>
        <div>
          <div class="text-3xl font-semibold text-white mb-1">10K+</div>
          <p class="text-sm text-neutral-500">Dark web<br />sources</p>
        </div>
        <div>
          <div class="text-3xl font-semibold text-white mb-1">&lt;1hr</div>
          <p class="text-sm text-neutral-500">Average<br />detection time</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Pricing -->
  <section id="pricing" class="section border-t border-neutral-800">
    <div class="container">
      <div class="mb-12">
        <h2 class="text-2xl mb-2">Pricing</h2>
        <p class="text-neutral-500">Monthly or annual billing available.</p>
      </div>

      <div class="grid md:grid-cols-3 gap-6 max-w-4xl">
        {pricing.map((plan) => (
          <div class={`card ${plan.highlight ? 'border-primary-500' : ''}`}>
            <div class="p-6">
              <h3 class="text-lg font-semibold text-white mb-1">{plan.name}</h3>
              <p class="text-sm text-neutral-500 mb-4">{plan.description}</p>

              <div class="mb-6">
                <span class="text-2xl font-semibold text-white">{plan.price}</span>
                {plan.unit !== 'contact sales' && (
                  <span class="text-sm text-neutral-500 ml-1">{plan.unit}</span>
                )}
              </div>

              <ul class="space-y-2.5 mb-6">
                {plan.features.map((feature) => (
                  <li class="flex items-start gap-2 text-sm text-neutral-400">
                    <svg class="w-4 h-4 text-neutral-500 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>

              <a href="/contact" class={plan.highlight ? 'btn-primary w-full justify-center' : 'btn-secondary w-full justify-center'}>
                {plan.price === 'Custom' ? 'Contact sales' : 'Get started'}
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section border-t border-neutral-800">
    <div class="container">
      <div class="max-w-2xl">
        <h2 class="text-2xl mb-4">Protect your organization from dark web threats</h2>
        <p class="text-neutral-500 mb-8">
          Schedule a demo to see how dark web monitoring can protect your business.
        </p>
        <div class="flex flex-wrap gap-3">
          <a href="/contact" class="btn-primary">Schedule demo</a>
          <a href="/contact" class="btn-secondary">Contact sales</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
