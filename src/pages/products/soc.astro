---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { PRODUCTS } from '../../consts';

const product = PRODUCTS.find(p => p.id === 'soc')!;

const pricing = [
  {
    name: 'Essentials',
    description: 'Core monitoring',
    price: '$2,500',
    unit: 'per month',
    features: [
      '8x5 monitoring',
      'SIEM integration',
      'Email alerts',
      'Monthly reports',
    ],
  },
  {
    name: 'Professional',
    description: 'Full coverage',
    price: '$5,000',
    unit: 'per month',
    highlight: true,
    features: [
      '24/7/365 monitoring',
      'Threat hunting',
      'Incident response',
      'Real-time alerts',
      'Weekly reports',
    ],
  },
  {
    name: 'Enterprise',
    description: 'Custom solution',
    price: 'Custom',
    unit: 'contact sales',
    features: [
      'Dedicated analyst team',
      'Custom playbooks',
      'On-site support',
      'Executive reporting',
      'Forensic analysis',
    ],
  },
];
---

<BaseLayout title="Security Operations Center" description={product.description}>
  <!-- Hero -->
  <section class="section">
    <div class="container">
      <div class="max-w-3xl">
        <p class="text-sm text-neutral-500 mb-3">Products</p>
        <h1 class="mb-4">Security Operations Center</h1>
        <p class="text-xl text-neutral-400 mb-8 max-w-2xl">
          {product.description}
        </p>
        <div class="flex flex-wrap gap-3">
          <a href="#pricing" class="btn-primary">See pricing</a>
          <a href="/contact" class="btn-secondary">Contact sales</a>
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works -->
  <section class="section-sm border-t border-neutral-800">
    <div class="container">
      <div class="mb-12">
        <h2 class="text-2xl mb-2">How it works</h2>
        <p class="text-neutral-500">Round-the-clock security monitoring.</p>
      </div>

      <div class="diagram mb-12">
        <div class="grid md:grid-cols-4 gap-8">
          <div class="text-center">
            <div class="w-12 h-12 rounded-lg bg-neutral-800 flex items-center justify-center mx-auto mb-4">
              <span class="text-lg font-semibold text-white">1</span>
            </div>
            <h4 class="text-sm font-medium text-white mb-2">Collect</h4>
            <p class="text-xs text-neutral-500">Aggregate logs and telemetry from your infrastructure</p>
          </div>
          <div class="text-center">
            <div class="w-12 h-12 rounded-lg bg-neutral-800 flex items-center justify-center mx-auto mb-4">
              <span class="text-lg font-semibold text-white">2</span>
            </div>
            <h4 class="text-sm font-medium text-white mb-2">Analyze</h4>
            <p class="text-xs text-neutral-500">Correlate events and detect anomalies with SIEM</p>
          </div>
          <div class="text-center">
            <div class="w-12 h-12 rounded-lg bg-neutral-800 flex items-center justify-center mx-auto mb-4">
              <span class="text-lg font-semibold text-white">3</span>
            </div>
            <h4 class="text-sm font-medium text-white mb-2">Investigate</h4>
            <p class="text-xs text-neutral-500">Analysts triage alerts and investigate threats</p>
          </div>
          <div class="text-center">
            <div class="w-12 h-12 rounded-lg bg-neutral-800 flex items-center justify-center mx-auto mb-4">
              <span class="text-lg font-semibold text-white">4</span>
            </div>
            <h4 class="text-sm font-medium text-white mb-2">Respond</h4>
            <p class="text-xs text-neutral-500">Contain threats and guide remediation</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Capabilities -->
  <section class="section-sm border-t border-neutral-800">
    <div class="container">
      <div class="mb-12">
        <h2 class="text-2xl mb-2">Capabilities</h2>
        <p class="text-neutral-500">Comprehensive security operations.</p>
      </div>

      <div class="grid md:grid-cols-2 gap-x-12 gap-y-8">
        <div>
          <h3 class="text-base font-semibold text-white mb-2">24/7/365 Monitoring</h3>
          <p class="text-sm text-neutral-500">
            Round-the-clock monitoring by certified analysts. Coverage that never sleeps.
          </p>
        </div>
        <div>
          <h3 class="text-base font-semibold text-white mb-2">SIEM Integration</h3>
          <p class="text-sm text-neutral-500">
            Integrate with your existing SIEM or we deploy and manage one for you.
          </p>
        </div>
        <div>
          <h3 class="text-base font-semibold text-white mb-2">Threat Hunting</h3>
          <p class="text-sm text-neutral-500">
            Proactive hunting to find advanced threats that evade detection.
          </p>
        </div>
        <div>
          <h3 class="text-base font-semibold text-white mb-2">Incident Response</h3>
          <p class="text-sm text-neutral-500">
            Rapid containment, eradication, and recovery support when incidents occur.
          </p>
        </div>
        <div>
          <h3 class="text-base font-semibold text-white mb-2">Forensic Analysis</h3>
          <p class="text-sm text-neutral-500">
            Deep-dive investigations to understand attack vectors and prevent recurrence.
          </p>
        </div>
        <div>
          <h3 class="text-base font-semibold text-white mb-2">Executive Reporting</h3>
          <p class="text-sm text-neutral-500">
            Board-ready reports with metrics that matter to leadership and compliance.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats -->
  <section class="section-sm border-t border-neutral-800">
    <div class="container">
      <div class="flex flex-wrap gap-12">
        <div>
          <div class="text-3xl font-semibold text-white mb-1">&lt;15min</div>
          <p class="text-sm text-neutral-500">Mean time<br />to detect</p>
        </div>
        <div>
          <div class="text-3xl font-semibold text-white mb-1">&lt;1hr</div>
          <p class="text-sm text-neutral-500">Mean time<br />to respond</p>
        </div>
        <div>
          <div class="text-3xl font-semibold text-white mb-1">99.99%</div>
          <p class="text-sm text-neutral-500">Platform<br />uptime</p>
        </div>
        <div>
          <div class="text-3xl font-semibold text-white mb-1">50+</div>
          <p class="text-sm text-neutral-500">Certified<br />analysts</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Certifications -->
  <section class="section-sm border-t border-neutral-800">
    <div class="container">
      <div class="mb-8">
        <h2 class="text-2xl mb-2">Analyst certifications</h2>
        <p class="text-neutral-500">Our team holds industry-recognized credentials.</p>
      </div>

      <div class="flex flex-wrap gap-3">
        <div class="badge">CISSP</div>
        <div class="badge">CISM</div>
        <div class="badge">CEH</div>
        <div class="badge">GCIH</div>
        <div class="badge">GCIA</div>
        <div class="badge">OSCP</div>
      </div>
    </div>
  </section>

  <!-- Pricing -->
  <section id="pricing" class="section border-t border-neutral-800">
    <div class="container">
      <div class="mb-12">
        <h2 class="text-2xl mb-2">Pricing</h2>
        <p class="text-neutral-500">Flexible plans for organizations of all sizes.</p>
      </div>

      <div class="grid md:grid-cols-3 gap-6 max-w-4xl">
        {pricing.map((plan) => (
          <div class={`card ${plan.highlight ? 'border-primary-500' : ''}`}>
            <div class="p-6">
              <h3 class="text-lg font-semibold text-white mb-1">{plan.name}</h3>
              <p class="text-sm text-neutral-500 mb-4">{plan.description}</p>

              <div class="mb-6">
                <span class="text-2xl font-semibold text-white">{plan.price}</span>
                {plan.unit !== 'contact sales' && (
                  <span class="text-sm text-neutral-500 ml-1">{plan.unit}</span>
                )}
              </div>

              <ul class="space-y-2.5 mb-6">
                {plan.features.map((feature) => (
                  <li class="flex items-start gap-2 text-sm text-neutral-400">
                    <svg class="w-4 h-4 text-neutral-500 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>

              <a href="/contact" class={plan.highlight ? 'btn-primary w-full justify-center' : 'btn-secondary w-full justify-center'}>
                {plan.price === 'Custom' ? 'Contact sales' : 'Get started'}
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section border-t border-neutral-800">
    <div class="container">
      <div class="max-w-2xl">
        <h2 class="text-2xl mb-4">Ready to strengthen your security operations?</h2>
        <p class="text-neutral-500 mb-8">
          Schedule a consultation to discuss your security monitoring requirements.
        </p>
        <div class="flex flex-wrap gap-3">
          <a href="/contact" class="btn-primary">Schedule consultation</a>
          <a href="/contact" class="btn-secondary">Contact sales</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
