---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { PRODUCTS } from '../../consts';

const product = PRODUCTS.find(p => p.id === 'phishing-simulation')!;
const title = product.title;
const description = product.description;

const features = [
	{
		title: 'Realistic Phishing Templates',
		description: 'Over 1,000 customizable templates mimicking real-world attacks from credential harvesting to business email compromise.',
		icon: 'template',
	},
	{
		title: 'Automated Campaigns',
		description: 'Schedule recurring campaigns with intelligent delivery timing to test employees across different scenarios.',
		icon: 'automation',
	},
	{
		title: 'Real-time Tracking',
		description: 'Monitor email opens, link clicks, and credential submissions as they happen with live dashboards.',
		icon: 'tracking',
	},
	{
		title: 'Interactive Training',
		description: 'Immediate educational intervention when employees fall for simulated attacks with engaging training modules.',
		icon: 'training',
	},
	{
		title: 'Risk Scoring',
		description: 'Identify high-risk employees and departments with comprehensive risk analytics and trending reports.',
		icon: 'score',
	},
	{
		title: 'Compliance Reporting',
		description: 'Generate audit-ready reports for SOC 2, ISO 27001, HIPAA, and other compliance frameworks.',
		icon: 'compliance',
	},
];

const pricing = [
	{
		name: 'Starter',
		description: 'For small teams getting started with security awareness',
		price: '3',
		period: 'per user/month',
		features: [
			'Up to 100 users',
			'Basic phishing templates',
			'Monthly campaigns',
			'Standard training modules',
			'Email support',
		],
		cta: 'Start Free Trial',
		popular: false,
	},
	{
		name: 'Professional',
		description: 'For growing organizations with advanced security needs',
		price: '5',
		period: 'per user/month',
		features: [
			'Up to 500 users',
			'Advanced templates library',
			'Unlimited campaigns',
			'Custom training content',
			'Risk scoring & analytics',
			'Priority support',
		],
		cta: 'Start Free Trial',
		popular: true,
	},
	{
		name: 'Enterprise',
		description: 'For large organizations requiring full customization',
		price: 'Custom',
		period: 'contact sales',
		features: [
			'Unlimited users',
			'White-label platform',
			'Custom domain spoofing',
			'API access',
			'Dedicated CSM',
			'24/7 support',
			'On-premise option',
		],
		cta: 'Contact Sales',
		popular: false,
	},
];

const stats = [
	{ value: '91%', label: 'Reduction in click rates after 12 months' },
	{ value: '1000+', label: 'Phishing templates available' },
	{ value: '45%', label: 'Average initial click rate' },
	{ value: '< 5%', label: 'Target click rate achieved' },
];
---

<BaseLayout title={title} description={description}>
	<!-- Hero Section -->
	<section class="relative py-24 lg:py-32 overflow-hidden">
		<div class="absolute inset-0">
			<div class="absolute inset-0 bg-slate-950"></div>
			<div class="absolute inset-0 bg-[linear-gradient(rgba(59,130,246,0.03)_1px,transparent_1px),linear-gradient(90deg,rgba(59,130,246,0.03)_1px,transparent_1px)] bg-[size:60px_60px]"></div>
			<div class="absolute bottom-0 left-1/4 w-[500px] h-[500px] bg-brand-500/5 rounded-full blur-[120px]"></div>
		</div>

		<div class="container-wide relative z-10">
			<div class="grid lg:grid-cols-2 gap-16 items-center">
				<div>
					<div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-brand-500/10 border border-brand-500/20 text-brand-400 text-sm font-medium mb-6">
						<svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
							<path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
						</svg>
						Security Awareness
					</div>
					<h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6">
						{title}
					</h1>
					<p class="text-xl text-slate-400 mb-8">
						{description}
					</p>
					<div class="flex flex-wrap gap-4">
						<a href="/contact" class="btn-primary btn-lg">
							Start Free Trial
							<svg class="w-5 h-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
								<path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
							</svg>
						</a>
						<a href="#pricing" class="btn-secondary btn-lg">
							View Pricing
						</a>
					</div>
				</div>

				<!-- Product Visual -->
				<div class="relative">
					<div class="rounded-2xl bg-slate-900 border border-slate-800 p-6 shadow-2xl">
						<div class="flex items-center gap-3 mb-6">
							<div class="flex gap-1.5">
								<span class="w-3 h-3 rounded-full bg-red-500"></span>
								<span class="w-3 h-3 rounded-full bg-yellow-500"></span>
								<span class="w-3 h-3 rounded-full bg-green-500"></span>
							</div>
							<span class="text-xs text-slate-500">Phishing Campaign Dashboard</span>
						</div>

						<!-- Mock Email -->
						<div class="bg-slate-800 rounded-xl p-4 mb-4">
							<div class="flex items-start gap-3">
								<div class="w-10 h-10 rounded-full bg-red-500/20 flex items-center justify-center flex-shrink-0">
									<svg class="w-5 h-5 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
										<path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
									</svg>
								</div>
								<div class="flex-1">
									<p class="text-sm text-white font-medium mb-1">Urgent: Password Reset Required</p>
									<p class="text-xs text-slate-400 mb-2">From: security@yourcompany-it.com</p>
									<p class="text-xs text-slate-500">Your password will expire in 24 hours. Click here to reset...</p>
								</div>
							</div>
						</div>

						<!-- Stats -->
						<div class="grid grid-cols-3 gap-3">
							<div class="bg-slate-800/50 rounded-lg p-3 text-center">
								<p class="text-lg font-bold text-white">2,847</p>
								<p class="text-xs text-slate-500">Sent</p>
							</div>
							<div class="bg-slate-800/50 rounded-lg p-3 text-center">
								<p class="text-lg font-bold text-yellow-400">847</p>
								<p class="text-xs text-slate-500">Opened</p>
							</div>
							<div class="bg-slate-800/50 rounded-lg p-3 text-center">
								<p class="text-lg font-bold text-red-400">127</p>
								<p class="text-xs text-slate-500">Clicked</p>
							</div>
						</div>
					</div>
					<div class="absolute -top-4 -right-4 w-32 h-32 bg-brand-500/20 rounded-full blur-2xl"></div>
				</div>
			</div>
		</div>
	</section>

	<!-- Stats -->
	<section class="py-12 bg-slate-900 border-y border-slate-800">
		<div class="container-wide">
			<div class="grid grid-cols-2 md:grid-cols-4 gap-8">
				{stats.map((stat) => (
					<div class="text-center">
						<div class="text-3xl font-bold text-white mb-1">{stat.value}</div>
						<div class="text-sm text-slate-500">{stat.label}</div>
					</div>
				))}
			</div>
		</div>
	</section>

	<!-- Features -->
	<section class="section-padding bg-slate-950">
		<div class="container-wide">
			<div class="max-w-3xl mb-16">
				<p class="text-sm font-medium text-brand-400 uppercase tracking-wider mb-4">Features</p>
				<h2 class="text-4xl font-bold text-white mb-6">
					Everything You Need to Build a Security-Aware Culture
				</h2>
				<p class="text-xl text-slate-400">
					Our comprehensive platform covers every aspect of phishing simulation and security awareness training.
				</p>
			</div>

			<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
				{features.map((feature) => (
					<div class="card p-6">
						<div class="w-12 h-12 rounded-xl bg-brand-500/10 flex items-center justify-center mb-4">
							<svg class="w-6 h-6 text-brand-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
								<path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
							</svg>
						</div>
						<h3 class="text-lg font-semibold text-white mb-2">{feature.title}</h3>
						<p class="text-slate-400 text-sm">{feature.description}</p>
					</div>
				))}
			</div>
		</div>
	</section>

	<!-- Pricing -->
	<section id="pricing" class="section-padding bg-slate-900/50">
		<div class="container-wide">
			<div class="text-center max-w-3xl mx-auto mb-16">
				<p class="text-sm font-medium text-brand-400 uppercase tracking-wider mb-4">Pricing</p>
				<h2 class="text-4xl font-bold text-white mb-6">
					Simple, Transparent Pricing
				</h2>
				<p class="text-xl text-slate-400">
					Start with a 14-day free trial. No credit card required.
				</p>
			</div>

			<div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
				{pricing.map((plan) => (
					<div class={`card p-8 ${plan.popular ? 'border-brand-500 relative' : ''}`}>
						{plan.popular && (
							<div class="absolute -top-4 left-1/2 -translate-x-1/2">
								<span class="px-4 py-1 rounded-full bg-brand-500 text-white text-sm font-medium">Most Popular</span>
							</div>
						)}
						<div class="text-center mb-8">
							<h3 class="text-xl font-bold text-white mb-2">{plan.name}</h3>
							<p class="text-slate-400 text-sm mb-4">{plan.description}</p>
							<div class="flex items-baseline justify-center gap-1">
								{plan.price !== 'Custom' ? (
									<>
										<span class="text-4xl font-bold text-white">${plan.price}</span>
										<span class="text-slate-500">/{plan.period}</span>
									</>
								) : (
									<span class="text-3xl font-bold text-white">{plan.price}</span>
								)}
							</div>
						</div>
						<ul class="space-y-3 mb-8">
							{plan.features.map((feature) => (
								<li class="flex items-center gap-3 text-sm text-slate-300">
									<svg class="w-5 h-5 text-accent-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
										<path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
									</svg>
									{feature}
								</li>
							))}
						</ul>
						<a href="/contact" class={plan.popular ? 'btn-primary w-full' : 'btn-secondary w-full'}>
							{plan.cta}
						</a>
					</div>
				))}
			</div>
		</div>
	</section>

	<!-- CTA -->
	<section class="section-padding bg-slate-950">
		<div class="container-wide">
			<div class="text-center max-w-3xl mx-auto">
				<h2 class="text-4xl font-bold text-white mb-6">
					Ready to Test Your Team?
				</h2>
				<p class="text-xl text-slate-400 mb-10">
					Start your 14-day free trial and see how your organization responds to simulated phishing attacks.
				</p>
				<a href="/contact" class="btn-primary btn-lg">
					Start Free Trial
					<svg class="w-5 h-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
						<path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
					</svg>
				</a>
			</div>
		</div>
	</section>
</BaseLayout>
