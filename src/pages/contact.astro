---
import BaseLayout from '../layouts/BaseLayout.astro';
import { COMPANY_INFO } from '../consts';

const title = "Contact Us";
const description = "Get in touch with Waymark for IT security consulting, Microsoft 365 solutions, and network infrastructure services.";

const contactMethods = [
	{
		title: "Email Us",
		description: "Send us a message and we'll respond within 24 hours.",
		value: COMPANY_INFO.email,
		href: `mailto:${COMPANY_INFO.email}`,
		icon: "email",
	},
	{
		title: "Call Us",
		description: "Speak directly with our security experts.",
		value: COMPANY_INFO.phone,
		href: `tel:${COMPANY_INFO.phone.replace(/\D/g, '')}`,
		icon: "phone",
	},
	{
		title: "Visit Us",
		description: "Come to our office for an in-person consultation.",
		value: COMPANY_INFO.address,
		icon: "location",
	},
];

const services = [
	"Security Assessment",
	"Microsoft 365 Security",
	"Network Infrastructure",
	"24/7 Monitoring",
	"Security Consulting",
	"Compliance Services",
	"Other",
];
---

<BaseLayout title={title} description={description}>
	<!-- Hero Section -->
	<section class="relative py-24 lg:py-32 overflow-hidden">
		<div class="absolute inset-0">
			<div class="absolute inset-0 bg-gradient-to-br from-slate-950 via-slate-900 to-slate-950"></div>
			<div class="absolute top-1/4 left-1/4 w-96 h-96 bg-brand-500/10 rounded-full blur-3xl"></div>
		</div>

		<div class="container-wide relative z-10">
			<div class="max-w-4xl">
				<span class="badge-brand mb-6">Contact</span>
				<h1 class="text-5xl md:text-6xl font-bold text-white mb-6">
					Let's Secure Your Business Together
				</h1>
				<p class="text-xl text-slate-400 max-w-2xl">
					Ready to strengthen your security posture? Get in touch for a free consultation with our experts.
				</p>
			</div>
		</div>
	</section>

	<!-- Contact Section -->
	<section class="section-padding">
		<div class="container-wide">
			<div class="grid lg:grid-cols-2 gap-16">
				<!-- Contact Form -->
				<div>
					<h2 class="text-3xl font-bold text-white mb-6">Send Us a Message</h2>
					<form class="space-y-6" action="#" method="POST">
						<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
							<div>
								<label for="firstName" class="block text-sm font-medium text-slate-300 mb-2">First Name</label>
								<input
									type="text"
									id="firstName"
									name="firstName"
									required
									class="w-full px-4 py-3 bg-slate-800 border border-slate-700 rounded-xl text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent transition-all"
									placeholder="John"
								/>
							</div>
							<div>
								<label for="lastName" class="block text-sm font-medium text-slate-300 mb-2">Last Name</label>
								<input
									type="text"
									id="lastName"
									name="lastName"
									required
									class="w-full px-4 py-3 bg-slate-800 border border-slate-700 rounded-xl text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent transition-all"
									placeholder="Doe"
								/>
							</div>
						</div>

						<div>
							<label for="email" class="block text-sm font-medium text-slate-300 mb-2">Email</label>
							<input
								type="email"
								id="email"
								name="email"
								required
								class="w-full px-4 py-3 bg-slate-800 border border-slate-700 rounded-xl text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent transition-all"
								placeholder="john@company.com"
							/>
						</div>

						<div>
							<label for="company" class="block text-sm font-medium text-slate-300 mb-2">Company</label>
							<input
								type="text"
								id="company"
								name="company"
								class="w-full px-4 py-3 bg-slate-800 border border-slate-700 rounded-xl text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent transition-all"
								placeholder="Acme Inc."
							/>
						</div>

						<div>
							<label for="service" class="block text-sm font-medium text-slate-300 mb-2">Service Interested In</label>
							<select
								id="service"
								name="service"
								class="w-full px-4 py-3 bg-slate-800 border border-slate-700 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent transition-all"
							>
								<option value="">Select a service</option>
								{services.map((service) => (
									<option value={service}>{service}</option>
								))}
							</select>
						</div>

						<div>
							<label for="message" class="block text-sm font-medium text-slate-300 mb-2">Message</label>
							<textarea
								id="message"
								name="message"
								rows="5"
								required
								class="w-full px-4 py-3 bg-slate-800 border border-slate-700 rounded-xl text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent transition-all resize-none"
								placeholder="Tell us about your security needs..."
							></textarea>
						</div>

						<button type="submit" class="btn-primary btn-lg w-full">
							Send Message
							<svg class="w-5 h-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
								<path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
							</svg>
						</button>
					</form>
				</div>

				<!-- Contact Info -->
				<div>
					<h2 class="text-3xl font-bold text-white mb-6">Get in Touch</h2>
					<p class="text-slate-400 mb-8">
						Prefer to reach out directly? Contact us using any of the methods below, or fill out the form and we'll get back to you within 24 hours.
					</p>

					<div class="space-y-6 mb-12">
						{contactMethods.map((method) => (
							<div class="glass-card flex gap-4">
								<div class="w-12 h-12 rounded-xl bg-gradient-to-br from-brand-500/20 to-accent-500/20 flex items-center justify-center flex-shrink-0">
									{method.icon === "email" && (
										<svg class="w-6 h-6 text-brand-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
											<path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
										</svg>
									)}
									{method.icon === "phone" && (
										<svg class="w-6 h-6 text-brand-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
											<path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
										</svg>
									)}
									{method.icon === "location" && (
										<svg class="w-6 h-6 text-brand-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
											<path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
											<path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
										</svg>
									)}
								</div>
								<div>
									<h3 class="text-lg font-semibold text-white mb-1">{method.title}</h3>
									<p class="text-slate-400 text-sm mb-2">{method.description}</p>
									{method.href ? (
										<a href={method.href} class="text-brand-400 hover:text-brand-300 transition-colors">
											{method.value}
										</a>
									) : (
										<span class="text-slate-300">{method.value}</span>
									)}
								</div>
							</div>
						))}
					</div>

					<!-- Response Time -->
					<div class="card p-6 bg-gradient-to-br from-brand-900/20 to-slate-900">
						<div class="flex items-center gap-4">
							<div class="w-12 h-12 rounded-xl bg-accent-500/20 flex items-center justify-center flex-shrink-0">
								<svg class="w-6 h-6 text-accent-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
									<path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
								</svg>
							</div>
							<div>
								<h3 class="text-white font-semibold">Fast Response Time</h3>
								<p class="text-slate-400 text-sm">We typically respond within 4 business hours</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- FAQ Section -->
	<section class="section-padding bg-slate-900/50">
		<div class="container-wide">
			<div class="text-center max-w-3xl mx-auto mb-16">
				<h2 class="text-4xl font-bold text-white mb-6">Frequently Asked Questions</h2>
				<p class="text-xl text-slate-400">
					Quick answers to questions you may have. Can't find what you're looking for? Contact us.
				</p>
			</div>

			<div class="max-w-3xl mx-auto space-y-4">
				{[
					{
						q: "What's included in a free security assessment?",
						a: "Our free assessment includes a review of your current security posture, identification of critical vulnerabilities, and a prioritized roadmap of recommendations. The full assessment typically takes 1-2 hours.",
					},
					{
						q: "Do you offer emergency support?",
						a: "Yes, we provide 24/7 emergency support for security incidents. Clients with monitoring contracts have priority response, but we're available for emergency consultations with any organization.",
					},
					{
						q: "What size businesses do you work with?",
						a: "We work with businesses of all sizes, from startups to enterprises. Our solutions scale to meet your needs, and we offer packages tailored to different organization sizes and budgets.",
					},
					{
						q: "How long does implementation typically take?",
						a: "Implementation timelines vary based on scope. Basic Microsoft 365 security can be deployed in 1-2 weeks, while comprehensive network infrastructure projects may take 4-8 weeks. We'll provide a detailed timeline during consultation.",
					},
				].map((faq) => (
					<div class="card p-6">
						<h3 class="text-lg font-semibold text-white mb-2">{faq.q}</h3>
						<p class="text-slate-400">{faq.a}</p>
					</div>
				))}
			</div>
		</div>
	</section>
</BaseLayout>
