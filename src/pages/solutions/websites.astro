---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { WEBSITE_PRODUCTS } from '../../consts';

const title = "Websites & Digital Platforms - Waymark";
const description = "Modern websites built like products. Fast, secure, and reliable. Website security, performance, and migration services for SMBs.";
---

<BaseLayout title={title} description={description}>
  <!-- Hero -->
  <section class="hero">
    <div class="container">
      <a href="/products" class="back-link">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
        </svg>
        All Products
      </a>
      <div class="hero-badge rose">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582" />
        </svg>
        Website Services
      </div>
      <h1 class="hero-title">Websites & Digital Platforms</h1>
      <p class="hero-description">
        Modern websites built like products. Fast, secure, and reliable from day one.
      </p>
    </div>
  </section>

  <!-- Products Grid -->
  <section class="products">
    <div class="container">
      <div class="products-grid">
        {WEBSITE_PRODUCTS.map((product) => (
          <div class="product-card">
            <div class="product-header">
              <span class={`product-type ${product.type}`}>{product.type}</span>
              {product.featured && <span class="product-featured">Popular</span>}
            </div>
            <h3 class="product-title">{product.title}</h3>
            <p class="product-description">{product.description}</p>

            {product.includes && product.includes.length > 0 && (
              <div class="product-includes">
                <p class="includes-label">What's included:</p>
                <ul>
                  {product.includes.map((item) => (
                    <li>
                      <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                      </svg>
                      {item}
                    </li>
                  ))}
                </ul>
              </div>
            )}

            <div class="product-outcome">
              <strong>You get:</strong> {product.outcome}
            </div>

            <a href="/contact" class="product-cta">Get Started</a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="cta">
    <div class="container">
      <div class="cta-content">
        <h2 class="cta-title">Ready to build a better website?</h2>
        <p class="cta-description">
          Get a free consultation to discuss your web project needs.
        </p>
        <a href="/contact" class="btn-primary">Schedule a Call</a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .container {
    max-width: 72rem;
    margin: 0 auto;
    padding: 0 1.25rem;
  }

  @media (min-width: 640px) {
    .container {
      padding: 0 2rem;
    }
  }

  .hero {
    padding: 8rem 0 4rem;
  }

  @media (min-width: 768px) {
    .hero {
      padding: 10rem 0 5rem;
    }
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--text-tertiary);
    text-decoration: none;
    margin-bottom: 1.5rem;
    transition: color 0.15s;
  }

  .back-link:hover {
    color: var(--text-primary);
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
    font-weight: 500;
    border-radius: 9999px;
    margin-bottom: 1.5rem;
  }

  .hero-badge.rose {
    background: rgba(244, 63, 94, 0.1);
    color: #f43f5e;
  }

  .hero-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
  }

  @media (min-width: 768px) {
    .hero-title {
      font-size: 3rem;
    }
  }

  .hero-description {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--text-secondary);
    max-width: 40rem;
  }

  .products {
    padding: 0 0 5rem;
  }

  .products-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  @media (min-width: 768px) {
    .products-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .products-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .product-card {
    display: flex;
    flex-direction: column;
    padding: 1.5rem;
    background: var(--bg-primary);
    border: 1px solid var(--border-primary);
    border-radius: 1rem;
    transition: border-color 0.2s, box-shadow 0.2s;
  }

  .product-card:hover {
    border-color: var(--border-secondary);
    box-shadow: 0 8px 30px -10px rgba(0, 0, 0, 0.1);
  }

  .product-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .product-type {
    padding: 0.25rem 0.625rem;
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-radius: 0.375rem;
  }

  .product-type.assessment {
    color: #3b82f6;
    background: rgba(59, 130, 246, 0.1);
  }

  .product-type.implementation {
    color: #8b5cf6;
    background: rgba(139, 92, 246, 0.1);
  }

  .product-type.managed {
    color: #10b981;
    background: rgba(16, 185, 129, 0.1);
  }

  .product-featured {
    padding: 0.25rem 0.5rem;
    font-size: 0.625rem;
    font-weight: 600;
    text-transform: uppercase;
    color: #f97316;
    background: rgba(249, 115, 22, 0.1);
    border-radius: 0.25rem;
  }

  .product-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
  }

  .product-description {
    font-size: 0.9375rem;
    line-height: 1.6;
    color: var(--text-secondary);
    margin-bottom: 1rem;
  }

  .product-includes {
    margin-bottom: 1rem;
    flex-grow: 1;
  }

  .includes-label {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-tertiary);
    margin-bottom: 0.5rem;
  }

  .product-includes ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .product-includes li {
    display: flex;
    align-items: flex-start;
    gap: 0.5rem;
    font-size: 0.8125rem;
    color: var(--text-secondary);
    margin-bottom: 0.375rem;
  }

  .product-includes li svg {
    flex-shrink: 0;
    margin-top: 0.125rem;
    color: var(--success);
  }

  .product-outcome {
    font-size: 0.8125rem;
    line-height: 1.5;
    color: var(--text-tertiary);
    padding: 1rem 0;
    border-top: 1px solid var(--border-primary);
    margin-top: auto;
  }

  .product-outcome strong {
    color: var(--text-secondary);
  }

  .product-cta {
    display: block;
    text-align: center;
    padding: 0.625rem 1rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--brand-primary);
    background: var(--bg-secondary);
    border: 1px solid var(--border-primary);
    border-radius: 0.5rem;
    text-decoration: none;
    transition: all 0.15s;
  }

  .product-cta:hover {
    background: var(--brand-primary);
    color: #ffffff;
    border-color: var(--brand-primary);
  }

  .cta {
    padding: 5rem 0;
    background: var(--bg-secondary);
  }

  .cta-content {
    max-width: 32rem;
    margin: 0 auto;
    text-align: center;
  }

  .cta-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 1rem;
  }

  .cta-description {
    font-size: 1.0625rem;
    color: var(--text-secondary);
    margin-bottom: 2rem;
  }

  .btn-primary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.75rem 1.5rem;
    font-size: 0.9375rem;
    font-weight: 500;
    color: #ffffff;
    background: var(--brand-primary);
    border-radius: 0.5rem;
    text-decoration: none;
    transition: background-color 0.15s;
  }

  .btn-primary:hover {
    background: var(--brand-hover);
  }
</style>
