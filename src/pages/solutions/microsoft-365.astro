---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ServiceCard from '../../components/ServiceCard.astro';

const title = "Microsoft 365 Security Solutions";
const description = "Enterprise-grade Microsoft 365 security with advanced threat protection, identity management, and compliance solutions.";

const features = [
	{
		title: "Advanced Threat Protection",
		description: "Protect against sophisticated cyber attacks with AI-powered threat detection and automated response.",
		icon: "shield",
	},
	{
		title: "Identity & Access Management",
		description: "Secure identity management with Azure AD, conditional access policies, and MFA enforcement.",
		icon: "lock",
	},
	{
		title: "Data Loss Prevention",
		description: "Prevent data leaks with intelligent DLP policies across emails, files, and collaboration tools.",
		icon: "cloud",
	},
	{
		title: "Compliance Management",
		description: "Meet regulatory requirements with compliance solutions for GDPR, HIPAA, and industry standards.",
		icon: "chart",
	},
];

const benefits = [
	"99.9% threat detection rate",
	"50% reduction in security incidents",
	"Compliance with major regulations",
	"24/7 security monitoring",
];
---

<BaseLayout title={title} description={description}>
	<!-- Hero Section -->
	<section class="hero">
		<div class="container-wide">
			<div class="hero-content">
				<span class="badge badge-primary">Microsoft 365 Security</span>
				<h1 class="hero-title">
					Secure Your Microsoft Environment
				</h1>
				<p class="hero-description">
					Comprehensive security solutions for Microsoft 365, Azure AD, and your entire Microsoft ecosystem with enterprise-grade protection.
				</p>
				<div class="hero-actions">
					<a href="/contact" class="btn btn-primary btn-lg">
						Get Security Assessment
					</a>
					<a href="#features" class="btn btn-secondary btn-lg">
						View Features
					</a>
				</div>
			</div>
		</div>
	</section>

	<!-- Partner Badge -->
	<section class="partner-section">
		<div class="container-wide">
			<div class="partner-content">
				<span class="partner-label">Certified Partner:</span>
				<div class="partner-badge">
					<svg class="partner-logo" viewBox="0 0 23 23" fill="none">
						<path fill="#f25022" d="M0 0h11v11H0z"/>
						<path fill="#00a4ef" d="M0 12h11v11H0z"/>
						<path fill="#7fba00" d="M12 0h11v11H12z"/>
						<path fill="#ffb900" d="M12 12h11v11H12z"/>
					</svg>
					<span>Microsoft Gold Partner</span>
				</div>
			</div>
		</div>
	</section>

	<!-- Features Section -->
	<section id="features" class="section-padding">
		<div class="container-wide">
			<div class="section-header">
				<h2 class="section-title">Complete Microsoft 365 Security</h2>
				<p class="section-description">
					Our comprehensive suite of security solutions protects every aspect of your Microsoft environment.
				</p>
			</div>

			<div class="features-grid">
				{features.map((feature) => (
					<ServiceCard
						title={feature.title}
						description={feature.description}
						icon={feature.icon}
					/>
				))}
			</div>
		</div>
	</section>

	<!-- Benefits Section -->
	<section class="section-padding section-alt">
		<div class="container-wide">
			<div class="benefits-grid">
				<div class="benefits-content">
					<h2 class="benefits-title">Why Choose Waymark for M365 Security?</h2>
					<p class="benefits-description">
						Our Microsoft-certified experts bring years of experience securing enterprise environments of all sizes.
					</p>
					<ul class="benefits-list">
						{benefits.map((benefit) => (
							<li class="benefits-item">
								<svg class="benefits-check" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
									<path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
								</svg>
								{benefit}
							</li>
						))}
					</ul>
					<a href="/contact" class="btn btn-primary">Get Started</a>
				</div>

				<div class="stats-grid">
					<div class="stat-card">
						<div class="stat-card-value">500+</div>
						<div class="stat-card-label">M365 Deployments</div>
					</div>
					<div class="stat-card">
						<div class="stat-card-value">99.9%</div>
						<div class="stat-card-label">Threat Detection</div>
					</div>
					<div class="stat-card">
						<div class="stat-card-value">85+</div>
						<div class="stat-card-label">Avg Security Score</div>
					</div>
					<div class="stat-card">
						<div class="stat-card-value">24/7</div>
						<div class="stat-card-label">Monitoring</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- CTA Section -->
	<section class="section-padding">
		<div class="container-wide">
			<div class="cta-card">
				<h2 class="cta-title">Ready to Secure Your Microsoft 365?</h2>
				<p class="cta-description">
					Get a free security assessment and discover vulnerabilities in your Microsoft environment.
				</p>
				<a href="/contact" class="btn btn-primary btn-lg">
					Schedule Free Assessment
				</a>
			</div>
		</div>
	</section>
</BaseLayout>

<style>
	/* Hero */
	.hero {
		padding-top: 8rem;
		padding-bottom: 5rem;
		background-color: var(--bg-secondary);
	}

	@media (min-width: 768px) {
		.hero {
			padding-top: 10rem;
			padding-bottom: 6rem;
		}
	}

	.hero-content {
		max-width: 42rem;
	}

	.hero-title {
		font-size: 2.5rem;
		font-weight: 700;
		line-height: 1.1;
		letter-spacing: -0.02em;
		color: var(--text-primary);
		margin: 1rem 0 1.5rem;
	}

	@media (min-width: 768px) {
		.hero-title {
			font-size: 3rem;
		}
	}

	.hero-description {
		font-size: 1.125rem;
		line-height: 1.6;
		color: var(--text-secondary);
		margin-bottom: 2rem;
	}

	.hero-actions {
		display: flex;
		flex-wrap: wrap;
		gap: 1rem;
	}

	/* Partner Section */
	.partner-section {
		padding: 1.5rem 0;
		border-bottom: 1px solid var(--border-primary);
	}

	.partner-content {
		display: flex;
		flex-wrap: wrap;
		align-items: center;
		justify-content: center;
		gap: 1rem;
	}

	.partner-label {
		font-size: 0.875rem;
		color: var(--text-tertiary);
	}

	.partner-badge {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		font-weight: 600;
		color: var(--text-primary);
	}

	.partner-logo {
		width: 1.5rem;
		height: 1.5rem;
	}

	/* Section Styles */
	.section-alt {
		background-color: var(--bg-secondary);
	}

	.section-header {
		text-align: center;
		max-width: 42rem;
		margin: 0 auto 3rem;
	}

	.section-title {
		font-size: 2rem;
		font-weight: 700;
		color: var(--text-primary);
		margin-bottom: 1rem;
		letter-spacing: -0.02em;
	}

	.section-description {
		font-size: 1.125rem;
		color: var(--text-secondary);
		line-height: 1.6;
	}

	/* Features Grid */
	.features-grid {
		display: grid;
		grid-template-columns: 1fr;
		gap: 1.5rem;
	}

	@media (min-width: 640px) {
		.features-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	/* Benefits Section */
	.benefits-grid {
		display: grid;
		grid-template-columns: 1fr;
		gap: 4rem;
		align-items: center;
	}

	@media (min-width: 1024px) {
		.benefits-grid {
			grid-template-columns: 1fr 1fr;
		}
	}

	.benefits-title {
		font-size: 2rem;
		font-weight: 700;
		color: var(--text-primary);
		margin-bottom: 1rem;
		letter-spacing: -0.02em;
	}

	.benefits-description {
		font-size: 1.125rem;
		color: var(--text-secondary);
		margin-bottom: 2rem;
	}

	.benefits-list {
		list-style: none;
		padding: 0;
		margin: 0 0 2rem;
	}

	.benefits-item {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		padding: 0.5rem 0;
		color: var(--text-secondary);
	}

	.benefits-check {
		width: 1.25rem;
		height: 1.25rem;
		flex-shrink: 0;
		color: var(--success);
	}

	/* Stats Grid */
	.stats-grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 1rem;
	}

	.stat-card {
		background-color: var(--bg-primary);
		border: 1px solid var(--border-primary);
		border-radius: 0.75rem;
		padding: 1.5rem;
		text-align: center;
	}

	.stat-card-value {
		font-size: 1.5rem;
		font-weight: 700;
		color: var(--text-primary);
		margin-bottom: 0.25rem;
	}

	.stat-card-label {
		font-size: 0.75rem;
		color: var(--text-tertiary);
	}

	/* CTA */
	.cta-card {
		background-color: var(--bg-secondary);
		border: 1px solid var(--border-primary);
		border-radius: 1rem;
		padding: 4rem 2rem;
		text-align: center;
	}

	.cta-title {
		font-size: 2rem;
		font-weight: 700;
		color: var(--text-primary);
		margin-bottom: 1rem;
		letter-spacing: -0.02em;
	}

	.cta-description {
		font-size: 1.125rem;
		color: var(--text-secondary);
		max-width: 32rem;
		margin: 0 auto 2rem;
	}
</style>
