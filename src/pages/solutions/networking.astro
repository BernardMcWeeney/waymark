---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ServiceCard from '../../components/ServiceCard.astro';

const title = "Enterprise Networking Solutions";
const description = "High-performance network infrastructure with Ubiquiti, secure VPN solutions, and professional network management.";

const features = [
	{
		title: "Network Design & Architecture",
		description: "Custom network topology design optimized for your business requirements and growth.",
		icon: "network",
	},
	{
		title: "Secure VPN & Remote Access",
		description: "Site-to-site VPN and secure remote access solutions for distributed teams.",
		icon: "lock",
	},
	{
		title: "Network Segmentation",
		description: "VLAN implementation and micro-segmentation for enhanced security.",
		icon: "shield",
	},
	{
		title: "24/7 Network Monitoring",
		description: "Real-time monitoring with proactive alerting and rapid response.",
		icon: "monitor",
	},
];

const stats = [
	{ value: "99.99%", label: "Uptime SLA" },
	{ value: "1000+", label: "Networks Deployed" },
	{ value: "<15min", label: "Response Time" },
	{ value: "10Gbps", label: "Max Throughput" },
];

const benefits = [
	"Hierarchical network design for scalability",
	"Zero-trust network segmentation",
	"Redundant internet and WAN connections",
	"Centralized management and monitoring",
];
---

<BaseLayout title={title} description={description}>
	<!-- Hero Section -->
	<section class="hero">
		<div class="container-wide">
			<div class="hero-content">
				<span class="badge badge-neutral">Network Solutions</span>
				<h1 class="hero-title">
					Enterprise-Grade Network Infrastructure
				</h1>
				<p class="hero-description">
					Build reliable, high-performance networks with Ubiquiti hardware and professional implementation from certified experts.
				</p>
				<div class="hero-actions">
					<a href="/contact" class="btn btn-primary btn-lg">
						Get Network Assessment
					</a>
					<a href="#features" class="btn btn-secondary btn-lg">
						View Services
					</a>
				</div>
			</div>
		</div>
	</section>

	<!-- Stats Section -->
	<section class="stats-section">
		<div class="container-wide">
			<div class="stats-bar">
				{stats.map((stat) => (
					<div class="stat-item">
						<div class="stat-value">{stat.value}</div>
						<div class="stat-label">{stat.label}</div>
					</div>
				))}
			</div>
		</div>
	</section>

	<!-- Features Section -->
	<section id="features" class="section-padding">
		<div class="container-wide">
			<div class="section-header">
				<h2 class="section-title">Network Services</h2>
				<p class="section-description">
					From design to deployment and ongoing management, we handle every aspect of your network infrastructure.
				</p>
			</div>

			<div class="features-grid">
				{features.map((feature) => (
					<ServiceCard
						title={feature.title}
						description={feature.description}
						icon={feature.icon}
					/>
				))}
			</div>
		</div>
	</section>

	<!-- Architecture Section -->
	<section class="section-padding section-alt">
		<div class="container-wide">
			<div class="architecture-grid">
				<div class="architecture-content">
					<h2 class="architecture-title">Modern Network Architecture</h2>
					<p class="architecture-description">
						We design networks that scale with your business, incorporating security best practices and high availability from day one.
					</p>

					<ul class="benefits-list">
						{benefits.map((benefit) => (
							<li class="benefits-item">
								<svg class="benefits-check" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
									<path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
								</svg>
								{benefit}
							</li>
						))}
					</ul>

					<a href="/contact" class="btn btn-primary">
						Design My Network
					</a>
				</div>

				<!-- Simple Network Visual -->
				<div class="network-visual">
					<div class="network-diagram">
						<div class="network-layer">
							<div class="network-node network-node-cloud">
								<svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
									<path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15a4.5 4.5 0 004.5 4.5H18a3.75 3.75 0 001.332-7.257 3 3 0 00-3.758-3.848 5.25 5.25 0 00-10.233 2.33A4.502 4.502 0 002.25 15z" />
								</svg>
								<span>Internet</span>
							</div>
						</div>
						<div class="network-connector"></div>
						<div class="network-layer">
							<div class="network-node network-node-firewall">
								<svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
									<path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
								</svg>
								<span>Firewall</span>
							</div>
						</div>
						<div class="network-connector"></div>
						<div class="network-layer">
							<div class="network-node network-node-switch">
								<svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
									<path stroke-linecap="round" stroke-linejoin="round" d="M21.75 17.25v-.228a4.5 4.5 0 00-.12-1.03l-2.268-9.64a3.375 3.375 0 00-3.285-2.602H7.923a3.375 3.375 0 00-3.285 2.602l-2.268 9.64a4.5 4.5 0 00-.12 1.03v.228m19.5 0a3 3 0 01-3 3H5.25a3 3 0 01-3-3m19.5 0a3 3 0 00-3-3H5.25a3 3 0 00-3 3m16.5 0h.008v.008h-.008v-.008zm-3 0h.008v.008h-.008v-.008z" />
								</svg>
								<span>Core Switch</span>
							</div>
						</div>
						<div class="network-connector-split"></div>
						<div class="network-layer network-layer-bottom">
							<div class="network-node network-node-endpoint">
								<svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
									<path stroke-linecap="round" stroke-linejoin="round" d="M9 17.25v1.007a3 3 0 01-.879 2.122L7.5 21h9l-.621-.621A3 3 0 0115 18.257V17.25m6-12V15a2.25 2.25 0 01-2.25 2.25H5.25A2.25 2.25 0 013 15V5.25m18 0A2.25 2.25 0 0018.75 3H5.25A2.25 2.25 0 003 5.25m18 0V12a2.25 2.25 0 01-2.25 2.25H5.25A2.25 2.25 0 013 12V5.25" />
								</svg>
							</div>
							<div class="network-node network-node-endpoint">
								<svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
									<path stroke-linecap="round" stroke-linejoin="round" d="M8.288 15.038a5.25 5.25 0 017.424 0M5.106 11.856c3.807-3.808 9.98-3.808 13.788 0M1.924 8.674c5.565-5.565 14.587-5.565 20.152 0M12.53 18.22l-.53.53-.53-.53a.75.75 0 011.06 0z" />
								</svg>
							</div>
							<div class="network-node network-node-endpoint">
								<svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
									<path stroke-linecap="round" stroke-linejoin="round" d="M10.5 1.5H8.25A2.25 2.25 0 006 3.75v16.5a2.25 2.25 0 002.25 2.25h7.5A2.25 2.25 0 0018 20.25V3.75a2.25 2.25 0 00-2.25-2.25H13.5m-3 0V3h3V1.5m-3 0h3m-3 18.75h3" />
								</svg>
							</div>
						</div>
					</div>
					<p class="network-caption">Ubiquiti Certified Installer</p>
				</div>
			</div>
		</div>
	</section>

	<!-- CTA Section -->
	<section class="section-padding">
		<div class="container-wide">
			<div class="cta-card">
				<h2 class="cta-title">Ready to Upgrade Your Network?</h2>
				<p class="cta-description">
					Get a free network assessment and discover how we can improve your infrastructure performance and security.
				</p>
				<a href="/contact" class="btn btn-primary btn-lg">
					Get Free Assessment
				</a>
			</div>
		</div>
	</section>
</BaseLayout>

<style>
	/* Hero */
	.hero {
		padding-top: 8rem;
		padding-bottom: 5rem;
		background-color: var(--bg-secondary);
	}

	@media (min-width: 768px) {
		.hero {
			padding-top: 10rem;
			padding-bottom: 6rem;
		}
	}

	.hero-content {
		max-width: 42rem;
	}

	.hero-title {
		font-size: 2.5rem;
		font-weight: 700;
		line-height: 1.1;
		letter-spacing: -0.02em;
		color: var(--text-primary);
		margin: 1rem 0 1.5rem;
	}

	@media (min-width: 768px) {
		.hero-title {
			font-size: 3rem;
		}
	}

	.hero-description {
		font-size: 1.125rem;
		line-height: 1.6;
		color: var(--text-secondary);
		margin-bottom: 2rem;
	}

	.hero-actions {
		display: flex;
		flex-wrap: wrap;
		gap: 1rem;
	}

	/* Stats Section */
	.stats-section {
		padding: 2rem 0;
		border-bottom: 1px solid var(--border-primary);
	}

	.stats-bar {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 2rem;
	}

	@media (min-width: 768px) {
		.stats-bar {
			grid-template-columns: repeat(4, 1fr);
		}
	}

	.stat-item {
		text-align: center;
	}

	/* Section Styles */
	.section-alt {
		background-color: var(--bg-secondary);
	}

	.section-header {
		text-align: center;
		max-width: 42rem;
		margin: 0 auto 3rem;
	}

	.section-title {
		font-size: 2rem;
		font-weight: 700;
		color: var(--text-primary);
		margin-bottom: 1rem;
		letter-spacing: -0.02em;
	}

	.section-description {
		font-size: 1.125rem;
		color: var(--text-secondary);
		line-height: 1.6;
	}

	/* Features Grid */
	.features-grid {
		display: grid;
		grid-template-columns: 1fr;
		gap: 1.5rem;
	}

	@media (min-width: 640px) {
		.features-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	/* Architecture Section */
	.architecture-grid {
		display: grid;
		grid-template-columns: 1fr;
		gap: 4rem;
		align-items: center;
	}

	@media (min-width: 1024px) {
		.architecture-grid {
			grid-template-columns: 1fr 1fr;
		}
	}

	.architecture-title {
		font-size: 2rem;
		font-weight: 700;
		color: var(--text-primary);
		margin-bottom: 1rem;
		letter-spacing: -0.02em;
	}

	.architecture-description {
		font-size: 1.125rem;
		color: var(--text-secondary);
		margin-bottom: 2rem;
	}

	.benefits-list {
		list-style: none;
		padding: 0;
		margin: 0 0 2rem;
	}

	.benefits-item {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		padding: 0.5rem 0;
		color: var(--text-secondary);
	}

	.benefits-check {
		width: 1.25rem;
		height: 1.25rem;
		flex-shrink: 0;
		color: var(--success);
	}

	/* Network Visual */
	.network-visual {
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	.network-diagram {
		display: flex;
		flex-direction: column;
		align-items: center;
		padding: 2rem;
		background-color: var(--bg-primary);
		border: 1px solid var(--border-primary);
		border-radius: 1rem;
		width: 100%;
		max-width: 20rem;
	}

	.network-layer {
		display: flex;
		justify-content: center;
	}

	.network-layer-bottom {
		display: flex;
		gap: 1rem;
	}

	.network-node {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 0.5rem;
		padding: 1rem;
		background-color: var(--bg-tertiary);
		border: 1px solid var(--border-primary);
		border-radius: 0.75rem;
		color: var(--text-secondary);
		font-size: 0.75rem;
	}

	.network-node-cloud {
		color: var(--brand-primary);
	}

	.network-node-firewall {
		color: var(--success);
	}

	.network-node-switch {
		color: var(--text-secondary);
	}

	.network-node-endpoint {
		padding: 0.75rem;
		color: var(--text-tertiary);
	}

	.network-connector {
		width: 2px;
		height: 1.5rem;
		background-color: var(--border-secondary);
	}

	.network-connector-split {
		width: 2px;
		height: 1.5rem;
		background-color: var(--border-secondary);
		position: relative;
	}

	.network-connector-split::after {
		content: '';
		position: absolute;
		top: 100%;
		left: 50%;
		transform: translateX(-50%);
		width: 6rem;
		height: 2px;
		background-color: var(--border-secondary);
	}

	.network-caption {
		margin-top: 1.5rem;
		font-size: 0.875rem;
		color: var(--text-tertiary);
	}

	/* CTA */
	.cta-card {
		background-color: var(--bg-secondary);
		border: 1px solid var(--border-primary);
		border-radius: 1rem;
		padding: 4rem 2rem;
		text-align: center;
	}

	.cta-title {
		font-size: 2rem;
		font-weight: 700;
		color: var(--text-primary);
		margin-bottom: 1rem;
		letter-spacing: -0.02em;
	}

	.cta-description {
		font-size: 1.125rem;
		color: var(--text-secondary);
		max-width: 32rem;
		margin: 0 auto 2rem;
	}
</style>
