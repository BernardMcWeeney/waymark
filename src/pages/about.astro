---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = "About Waymark";
const description = "Learn about Waymark's mission to protect businesses with enterprise IT security and networking solutions.";

const values = [
	{
		title: "Security First",
		description: "Every solution we implement prioritizes protection.",
	},
	{
		title: "Client Partnership",
		description: "We're partners invested in your long-term success.",
	},
	{
		title: "Continuous Innovation",
		description: "We stay ahead with cutting-edge solutions.",
	},
	{
		title: "Transparent Communication",
		description: "No jargon, no hidden costs.",
	},
];

const timeline = [
	{ year: "2010", event: "Founded with a focus on SMB security" },
	{ year: "2014", event: "Expanded to enterprise clients" },
	{ year: "2017", event: "Launched 24/7 Security Operations Center" },
	{ year: "2020", event: "Became Ubiquiti certified partner" },
	{ year: "2024", event: "Reached 500+ active clients" },
];
---

<BaseLayout title={title} description={description}>
	<!-- Hero Section -->
	<section class="hero">
		<div class="container-wide">
			<div class="hero-content">
				<span class="badge badge-primary">About Us</span>
				<h1 class="hero-title">Securing Businesses Since 2010</h1>
				<p class="hero-description">
					Waymark was founded with a simple mission: make enterprise-grade security accessible to businesses of all sizes. Today, we protect over 500 organizations worldwide.
				</p>
			</div>
		</div>
	</section>

	<!-- Mission Section -->
	<section class="section-padding">
		<div class="container-wide">
			<div class="mission-grid">
				<div class="mission-content">
					<h2 class="section-title">Our Mission</h2>
					<p class="mission-text">
						To democratize enterprise security by providing world-class protection and expertise to organizations regardless of size or budget.
					</p>
					<p class="mission-description">
						We believe every business deserves the same level of security protection that Fortune 500 companies enjoy. Through strategic partnerships with Microsoft and Ubiquiti, combined with our team's deep expertise, we deliver enterprise solutions at accessible price points.
					</p>
				</div>

				<div class="stats-grid">
					<div class="stat-card">
						<div class="stat-value">500+</div>
						<div class="stat-label">Clients Protected</div>
					</div>
					<div class="stat-card">
						<div class="stat-value">15+</div>
						<div class="stat-label">Years Experience</div>
					</div>
					<div class="stat-card">
						<div class="stat-value">50+</div>
						<div class="stat-label">Security Experts</div>
					</div>
					<div class="stat-card">
						<div class="stat-value">24/7</div>
						<div class="stat-label">SOC Coverage</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Values Section -->
	<section class="section-padding section-alt">
		<div class="container-wide">
			<div class="section-header">
				<h2 class="section-title">Our Values</h2>
				<p class="section-description">
					These principles guide everything we do.
				</p>
			</div>

			<div class="values-grid">
				{values.map((value) => (
					<div class="value-card">
						<h3 class="value-title">{value.title}</h3>
						<p class="value-description">{value.description}</p>
					</div>
				))}
			</div>
		</div>
	</section>

	<!-- Timeline Section -->
	<section class="section-padding">
		<div class="container-wide">
			<div class="section-header">
				<h2 class="section-title">Our Journey</h2>
				<p class="section-description">
					From a small consultancy to a leading security provider.
				</p>
			</div>

			<div class="timeline">
				{timeline.map((item) => (
					<div class="timeline-item">
						<div class="timeline-year">{item.year}</div>
						<div class="timeline-event">{item.event}</div>
					</div>
				))}
			</div>
		</div>
	</section>

	<!-- CTA Section -->
	<section class="section-padding section-alt">
		<div class="container-wide">
			<div class="cta-card">
				<h2 class="cta-title">Ready to Work With Us?</h2>
				<p class="cta-description">
					Let's discuss how Waymark can protect your organization with enterprise-grade security.
				</p>
				<div class="cta-actions">
					<a href="/contact" class="btn btn-primary btn-lg">Contact Us</a>
					<a href="/services" class="btn btn-secondary btn-lg">View Services</a>
				</div>
			</div>
		</div>
	</section>
</BaseLayout>

<style>
	/* Hero */
	.hero {
		padding-top: 8rem;
		padding-bottom: 5rem;
		background-color: var(--bg-secondary);
	}

	@media (min-width: 768px) {
		.hero {
			padding-top: 10rem;
			padding-bottom: 6rem;
		}
	}

	.hero-content {
		max-width: 42rem;
	}

	.hero-title {
		font-size: 2.5rem;
		font-weight: 700;
		line-height: 1.1;
		letter-spacing: -0.02em;
		color: var(--text-primary);
		margin: 1rem 0 1.5rem;
	}

	@media (min-width: 768px) {
		.hero-title {
			font-size: 3rem;
		}
	}

	.hero-description {
		font-size: 1.125rem;
		line-height: 1.6;
		color: var(--text-secondary);
	}

	/* Section Styles */
	.section-alt {
		background-color: var(--bg-secondary);
	}

	.section-header {
		text-align: center;
		max-width: 42rem;
		margin: 0 auto 3rem;
	}

	.section-title {
		font-size: 2rem;
		font-weight: 700;
		color: var(--text-primary);
		margin-bottom: 1rem;
		letter-spacing: -0.02em;
	}

	.section-description {
		font-size: 1.125rem;
		color: var(--text-secondary);
		line-height: 1.6;
	}

	/* Mission Section */
	.mission-grid {
		display: grid;
		grid-template-columns: 1fr;
		gap: 4rem;
		align-items: center;
	}

	@media (min-width: 1024px) {
		.mission-grid {
			grid-template-columns: 1fr 1fr;
		}
	}

	.mission-text {
		font-size: 1.25rem;
		color: var(--text-primary);
		margin-bottom: 1.5rem;
		font-weight: 500;
	}

	.mission-description {
		font-size: 1rem;
		color: var(--text-secondary);
		line-height: 1.7;
	}

	/* Stats Grid */
	.stats-grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 1rem;
	}

	.stat-card {
		background-color: var(--bg-secondary);
		border: 1px solid var(--border-primary);
		border-radius: 0.75rem;
		padding: 1.5rem;
		text-align: center;
	}

	.stat-value {
		font-size: 2rem;
		font-weight: 700;
		color: var(--text-primary);
		margin-bottom: 0.25rem;
	}

	.stat-label {
		font-size: 0.875rem;
		color: var(--text-tertiary);
	}

	/* Values Grid */
	.values-grid {
		display: grid;
		grid-template-columns: 1fr;
		gap: 1.5rem;
	}

	@media (min-width: 640px) {
		.values-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	@media (min-width: 1024px) {
		.values-grid {
			grid-template-columns: repeat(4, 1fr);
		}
	}

	.value-card {
		background-color: var(--bg-primary);
		border: 1px solid var(--border-primary);
		border-radius: 0.75rem;
		padding: 1.5rem;
		text-align: center;
	}

	.value-title {
		font-size: 1rem;
		font-weight: 600;
		color: var(--text-primary);
		margin-bottom: 0.5rem;
	}

	.value-description {
		font-size: 0.875rem;
		color: var(--text-secondary);
		line-height: 1.5;
	}

	/* Timeline */
	.timeline {
		max-width: 32rem;
		margin: 0 auto;
	}

	.timeline-item {
		display: flex;
		gap: 1.5rem;
		padding: 1.5rem 0;
		border-bottom: 1px solid var(--border-primary);
	}

	.timeline-item:last-child {
		border-bottom: none;
	}

	.timeline-year {
		font-size: 0.875rem;
		font-weight: 700;
		color: var(--brand-primary);
		min-width: 4rem;
	}

	.timeline-event {
		font-size: 0.9375rem;
		color: var(--text-secondary);
	}

	/* CTA */
	.cta-card {
		background-color: var(--bg-primary);
		border: 1px solid var(--border-primary);
		border-radius: 1rem;
		padding: 4rem 2rem;
		text-align: center;
	}

	.cta-title {
		font-size: 2rem;
		font-weight: 700;
		color: var(--text-primary);
		margin-bottom: 1rem;
		letter-spacing: -0.02em;
	}

	.cta-description {
		font-size: 1.125rem;
		color: var(--text-secondary);
		max-width: 32rem;
		margin: 0 auto 2rem;
	}

	.cta-actions {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		gap: 1rem;
	}
</style>
