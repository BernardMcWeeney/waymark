---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = "About Waymark";
const description = "Learn about Waymark's mission to protect businesses with enterprise IT security and networking solutions.";

const team = [
	{
		name: "Sarah Chen",
		role: "CEO & Founder",
		bio: "20+ years in cybersecurity, former Microsoft Security Architect",
	},
	{
		name: "Michael Roberts",
		role: "CTO",
		bio: "Network infrastructure expert, Ubiquiti certified trainer",
	},
	{
		name: "Emily Watson",
		role: "Head of Security Operations",
		bio: "CISSP, CISM certified with enterprise SOC experience",
	},
	{
		name: "David Kim",
		role: "Senior Solutions Architect",
		bio: "Microsoft MVP, Azure security specialist",
	},
];

const values = [
	{
		title: "Security First",
		description: "We believe security should be proactive, not reactive. Every solution we implement prioritizes protection.",
		icon: "shield",
	},
	{
		title: "Client Partnership",
		description: "We're not just vendors—we're partners invested in your long-term success and security posture.",
		icon: "users",
	},
	{
		title: "Continuous Innovation",
		description: "The threat landscape evolves daily. We stay ahead with cutting-edge solutions and constant learning.",
		icon: "bolt",
	},
	{
		title: "Transparent Communication",
		description: "No jargon, no hidden costs. We explain complex security in terms that make sense for your business.",
		icon: "globe",
	},
];

const timeline = [
	{ year: "2010", event: "Founded in San Francisco with a focus on SMB security" },
	{ year: "2014", event: "Expanded to enterprise clients and Microsoft partnership" },
	{ year: "2017", event: "Launched 24/7 Security Operations Center" },
	{ year: "2020", event: "Became Ubiquiti certified partner" },
	{ year: "2023", event: "Reached 500+ active clients milestone" },
	{ year: "2024", event: "Opened European operations center" },
];

const valueIcons: Record<string, string> = {
	shield: `<path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />`,
	users: `<path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z" />`,
	bolt: `<path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />`,
	globe: `<path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0121 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0112 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 013 12c0-1.605.42-3.113 1.157-4.418" />`,
};
---

<BaseLayout title={title} description={description}>
	<!-- Hero Section -->
	<section class="relative py-24 lg:py-32 overflow-hidden">
		<div class="absolute inset-0">
			<div class="absolute inset-0 bg-gradient-to-br from-slate-950 via-slate-900 to-slate-950"></div>
			<div class="absolute top-1/4 left-1/4 w-96 h-96 bg-brand-500/10 rounded-full blur-3xl"></div>
		</div>

		<div class="container-wide relative z-10">
			<div class="max-w-4xl">
				<span class="badge-brand mb-6">About Us</span>
				<h1 class="text-5xl md:text-6xl font-bold text-white mb-6">
					Securing Businesses Since 2010
				</h1>
				<p class="text-xl text-slate-400 max-w-2xl">
					Waymark was founded with a simple mission: make enterprise-grade security accessible to businesses of all sizes. Today, we protect over 500 organizations worldwide.
				</p>
			</div>
		</div>
	</section>

	<!-- Mission Section -->
	<section class="section-padding bg-slate-900/50">
		<div class="container-wide">
			<div class="grid lg:grid-cols-2 gap-16 items-center">
				<div>
					<h2 class="text-4xl font-bold text-white mb-6">Our Mission</h2>
					<p class="text-xl text-slate-400 mb-6">
						To democratize enterprise security by providing world-class protection and expertise to organizations regardless of size or budget.
					</p>
					<p class="text-slate-400">
						We believe every business deserves the same level of security protection that Fortune 500 companies enjoy. Through strategic partnerships with Microsoft and Ubiquiti, combined with our team's deep expertise, we deliver enterprise solutions at accessible price points.
					</p>
				</div>

				<div class="grid grid-cols-2 gap-4">
					<div class="glass-card text-center py-8">
						<div class="text-4xl font-bold text-white mb-2">500+</div>
						<div class="text-slate-400">Clients Protected</div>
					</div>
					<div class="glass-card text-center py-8">
						<div class="text-4xl font-bold text-white mb-2">15+</div>
						<div class="text-slate-400">Years Experience</div>
					</div>
					<div class="glass-card text-center py-8">
						<div class="text-4xl font-bold text-white mb-2">50+</div>
						<div class="text-slate-400">Security Experts</div>
					</div>
					<div class="glass-card text-center py-8">
						<div class="text-4xl font-bold text-white mb-2">24/7</div>
						<div class="text-slate-400">SOC Coverage</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Values Section -->
	<section class="section-padding">
		<div class="container-wide">
			<div class="text-center max-w-3xl mx-auto mb-16">
				<h2 class="text-4xl font-bold text-white mb-6">Our Values</h2>
				<p class="text-xl text-slate-400">
					These principles guide everything we do, from how we design solutions to how we support our clients.
				</p>
			</div>

			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
				{values.map((value) => (
					<div class="glass-card text-center">
						<div class="w-12 h-12 rounded-xl bg-gradient-to-br from-brand-500/20 to-accent-500/20 flex items-center justify-center mx-auto mb-4">
							<svg class="w-6 h-6 text-brand-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5" set:html={valueIcons[value.icon]} />
						</div>
						<h3 class="text-lg font-semibold text-white mb-2">{value.title}</h3>
						<p class="text-slate-400 text-sm">{value.description}</p>
					</div>
				))}
			</div>
		</div>
	</section>

	<!-- Timeline Section -->
	<section class="section-padding bg-slate-900/50">
		<div class="container-wide">
			<div class="text-center max-w-3xl mx-auto mb-16">
				<h2 class="text-4xl font-bold text-white mb-6">Our Journey</h2>
				<p class="text-xl text-slate-400">
					From a small consultancy to a leading security provider—here's how we've grown.
				</p>
			</div>

			<div class="max-w-3xl mx-auto">
				<div class="relative">
					<div class="absolute left-8 top-0 bottom-0 w-px bg-slate-700"></div>
					<div class="space-y-8">
						{timeline.map((item, index) => (
							<div class="relative flex gap-8 items-start">
								<div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-brand-500 to-accent-500 flex items-center justify-center flex-shrink-0 z-10">
									<span class="text-white font-bold text-sm">{item.year}</span>
								</div>
								<div class="glass-card flex-1 mt-2">
									<p class="text-slate-300">{item.event}</p>
								</div>
							</div>
						))}
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Team Section -->
	<section class="section-padding">
		<div class="container-wide">
			<div class="text-center max-w-3xl mx-auto mb-16">
				<h2 class="text-4xl font-bold text-white mb-6">Leadership Team</h2>
				<p class="text-xl text-slate-400">
					Our leadership brings decades of combined experience in cybersecurity and enterprise IT.
				</p>
			</div>

			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
				{team.map((member) => (
					<div class="card p-6 text-center">
						<div class="w-24 h-24 rounded-full bg-gradient-to-br from-brand-500/20 to-accent-500/20 mx-auto mb-4 flex items-center justify-center">
							<svg class="w-12 h-12 text-slate-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1">
								<path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
							</svg>
						</div>
						<h3 class="text-lg font-semibold text-white mb-1">{member.name}</h3>
						<p class="text-brand-400 text-sm mb-3">{member.role}</p>
						<p class="text-slate-400 text-sm">{member.bio}</p>
					</div>
				))}
			</div>
		</div>
	</section>

	<!-- CTA Section -->
	<section class="section-padding bg-slate-900/50">
		<div class="container-wide">
			<div class="text-center max-w-3xl mx-auto">
				<h2 class="text-4xl font-bold text-white mb-6">
					Ready to Work With Us?
				</h2>
				<p class="text-xl text-slate-400 mb-10">
					Let's discuss how Waymark can protect your organization with enterprise-grade security.
				</p>
				<div class="flex flex-wrap justify-center gap-4">
					<a href="/contact" class="btn-primary btn-lg">
						Contact Us
						<svg class="w-5 h-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
							<path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
						</svg>
					</a>
					<a href="/services" class="btn-secondary btn-lg">
						View Services
					</a>
				</div>
			</div>
		</div>
	</section>
</BaseLayout>
