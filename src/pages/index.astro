---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = "Waymark - IT Security for Growing Businesses";
const description = "Protect your business with expert IT security services. Microsoft 365, identity management, network security, and ongoing protection for small and medium businesses.";
---

<BaseLayout title={title} description={description}>
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <div class="hero-content">
        <p class="hero-eyebrow">IT Security for SMBs</p>
        <h1 class="hero-title">
          Secure your business.<br />
          <span class="hero-title-accent">Simply.</span>
        </h1>
        <p class="hero-description">
          We help small and medium businesses protect their data, manage their devices,
          and secure their cloud with clear, fixed-price services.
        </p>
        <div class="hero-actions">
          <a href="/contact" class="btn-primary">
            Get a Free Consultation
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
            </svg>
          </a>
          <a href="/services" class="btn-secondary">View Services</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Bar -->
  <section class="trust-bar">
    <div class="container">
      <div class="trust-items">
        <div class="trust-item">
          <span class="trust-value">100%</span>
          <span class="trust-label">Fixed Pricing</span>
        </div>
        <div class="trust-divider"></div>
        <div class="trust-item">
          <span class="trust-value">SMB</span>
          <span class="trust-label">Focused</span>
        </div>
        <div class="trust-divider"></div>
        <div class="trust-item">
          <span class="trust-value">Microsoft</span>
          <span class="trust-label">Partner</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Core Pillars -->
  <section class="pillars">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">How we help</h2>
        <p class="section-description">
          Three core areas of focus to keep your business secure and productive.
        </p>
      </div>

      <div class="pillars-grid">
        <!-- Microsoft 365 -->
        <a href="/solutions/microsoft-365" class="pillar-card">
          <div class="pillar-icon blue">
            <svg width="28" height="28" viewBox="0 0 24 24" fill="currentColor">
              <path d="M3 3h8v8H3V3zm10 0h8v8h-8V3zM3 13h8v8H3v-8zm10 0h8v8h-8v-8z"/>
            </svg>
          </div>
          <h3 class="pillar-title">Microsoft 365</h3>
          <p class="pillar-description">
            Secure your cloud productivity suite. Email protection, data governance,
            and compliance for your entire organization.
          </p>
          <ul class="pillar-features">
            <li>Security assessments & hardening</li>
            <li>Intune device management</li>
            <li>Identity with Entra ID</li>
            <li>Copilot readiness</li>
          </ul>
          <span class="pillar-link">
            Learn more
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
            </svg>
          </span>
        </a>

        <!-- Security -->
        <a href="/solutions/security" class="pillar-card">
          <div class="pillar-icon rose">
            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
            </svg>
          </div>
          <h3 class="pillar-title">Security Services</h3>
          <p class="pillar-description">
            Assess your risks, implement protections, and get ongoing monitoring.
            Cyber security that grows with your business.
          </p>
          <ul class="pillar-features">
            <li>Security assessments</li>
            <li>Managed security programs</li>
            <li>Incident response</li>
            <li>Compliance reviews</li>
          </ul>
          <span class="pillar-link">
            Learn more
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
            </svg>
          </span>
        </a>

        <!-- Infrastructure -->
        <a href="/solutions/infrastructure" class="pillar-card">
          <div class="pillar-icon emerald">
            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M8.288 15.038a5.25 5.25 0 017.424 0M5.106 11.856c3.807-3.808 9.98-3.808 13.788 0M1.924 8.674c5.565-5.565 14.587-5.565 20.152 0M12.53 18.22l-.53.53-.53-.53a.75.75 0 011.06 0z" />
            </svg>
          </div>
          <h3 class="pillar-title">Infrastructure</h3>
          <p class="pillar-description">
            Modern networks and smooth migrations. Get your foundation right
            with enterprise-grade infrastructure at SMB prices.
          </p>
          <ul class="pillar-features">
            <li>UniFi network deployment</li>
            <li>Cloud migrations</li>
            <li>Site technology</li>
            <li>Web security (Cloudflare)</li>
          </ul>
          <span class="pillar-link">
            Learn more
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
            </svg>
          </span>
        </a>
      </div>
    </div>
  </section>

  <!-- How We Work -->
  <section class="process">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">How we work</h2>
        <p class="section-description">
          Every engagement follows a clear path. No hidden fees, no surprises.
        </p>
      </div>

      <div class="process-grid">
        <div class="process-step">
          <div class="process-number">1</div>
          <h3 class="process-title">Assess</h3>
          <p class="process-description">
            We review your current setup, identify risks, and create a prioritized action plan.
          </p>
        </div>

        <div class="process-step">
          <div class="process-number">2</div>
          <h3 class="process-title">Implement</h3>
          <p class="process-description">
            Fixed-scope projects to deploy solutions. Clear deliverables with predictable timelines.
          </p>
        </div>

        <div class="process-step">
          <div class="process-number">3</div>
          <h3 class="process-title">Manage</h3>
          <p class="process-description">
            Ongoing monitoring and maintenance. Monthly plans that keep you protected.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Services -->
  <section class="featured">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Popular services</h2>
        <p class="section-description">
          Our most requested services for small and medium businesses.
        </p>
      </div>

      <div class="featured-grid">
        <div class="featured-card">
          <span class="featured-type">Assessment</span>
          <h3 class="featured-title">M365 Security Assessment</h3>
          <p class="featured-description">
            Comprehensive review of your Microsoft 365 security configuration with
            prioritized recommendations.
          </p>
          <div class="featured-footer">
            <span class="featured-time">5-7 days</span>
            <a href="/contact" class="featured-link">Get started</a>
          </div>
        </div>

        <div class="featured-card">
          <span class="featured-type">Implementation</span>
          <h3 class="featured-title">Intune Deployment</h3>
          <p class="featured-description">
            Full setup of Microsoft Intune for device management, security policies,
            and app deployment.
          </p>
          <div class="featured-footer">
            <span class="featured-time">2-4 weeks</span>
            <a href="/contact" class="featured-link">Get started</a>
          </div>
        </div>

        <div class="featured-card">
          <span class="featured-type">Managed</span>
          <h3 class="featured-title">Security Monitoring</h3>
          <p class="featured-description">
            Continuous monitoring of your environment with monthly reporting
            and incident response.
          </p>
          <div class="featured-footer">
            <span class="featured-time">Monthly</span>
            <a href="/contact" class="featured-link">Get started</a>
          </div>
        </div>
      </div>

      <div class="featured-cta">
        <a href="/services" class="btn-secondary">View all services</a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta">
    <div class="container">
      <div class="cta-content">
        <h2 class="cta-title">Ready to secure your business?</h2>
        <p class="cta-description">
          Get a free consultation to discuss your security needs.
          No obligation, just honest advice.
        </p>
        <div class="cta-actions">
          <a href="/contact" class="btn-primary">
            Schedule a Call
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero */
  .hero {
    padding: 8rem 0 4rem;
  }

  @media (min-width: 768px) {
    .hero {
      padding: 10rem 0 5rem;
    }
  }

  .hero-content {
    max-width: 40rem;
  }

  .hero-eyebrow {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--brand-primary);
    margin-bottom: 1rem;
    letter-spacing: 0.025em;
  }

  .hero-title {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.1;
    letter-spacing: -0.03em;
    color: var(--text-primary);
    margin-bottom: 1.5rem;
  }

  @media (min-width: 768px) {
    .hero-title {
      font-size: 3.5rem;
    }
  }

  .hero-title-accent {
    color: var(--brand-primary);
  }

  .hero-description {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--text-secondary);
    margin-bottom: 2rem;
  }

  @media (min-width: 768px) {
    .hero-description {
      font-size: 1.25rem;
    }
  }

  .hero-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  /* Trust Bar */
  .trust-bar {
    padding: 2rem 0;
    border-top: 1px solid var(--border-primary);
    border-bottom: 1px solid var(--border-primary);
    background: var(--bg-secondary);
  }

  .trust-items {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
  }

  @media (min-width: 768px) {
    .trust-items {
      gap: 4rem;
    }
  }

  .trust-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
  }

  .trust-value {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--text-primary);
  }

  .trust-label {
    font-size: 0.75rem;
    color: var(--text-tertiary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .trust-divider {
    width: 1px;
    height: 2rem;
    background: var(--border-primary);
    display: none;
  }

  @media (min-width: 768px) {
    .trust-divider {
      display: block;
    }
  }

  /* Pillars */
  .pillars {
    padding: 5rem 0;
  }

  @media (min-width: 768px) {
    .pillars {
      padding: 6rem 0;
    }
  }

  .pillars-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  @media (min-width: 768px) {
    .pillars-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
    }
  }

  .pillar-card {
    display: flex;
    flex-direction: column;
    padding: 2rem;
    background: var(--bg-primary);
    border: 1px solid var(--border-primary);
    border-radius: 1rem;
    text-decoration: none;
    transition: border-color 0.2s ease, box-shadow 0.2s ease, transform 0.2s ease;
  }

  .pillar-card:hover {
    border-color: var(--border-secondary);
    box-shadow: 0 8px 30px -10px rgba(0, 0, 0, 0.1);
    transform: translateY(-2px);
  }

  .pillar-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 3.5rem;
    height: 3.5rem;
    border-radius: 0.875rem;
    margin-bottom: 1.5rem;
  }

  .pillar-icon.blue {
    background: rgba(59, 130, 246, 0.1);
    color: #3b82f6;
  }

  .pillar-icon.rose {
    background: rgba(244, 63, 94, 0.1);
    color: #f43f5e;
  }

  .pillar-icon.emerald {
    background: rgba(16, 185, 129, 0.1);
    color: #10b981;
  }

  .pillar-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 0.75rem;
  }

  .pillar-description {
    font-size: 0.9375rem;
    line-height: 1.6;
    color: var(--text-secondary);
    margin-bottom: 1.25rem;
  }

  .pillar-features {
    list-style: none;
    padding: 0;
    margin: 0 0 1.5rem;
    flex-grow: 1;
  }

  .pillar-features li {
    position: relative;
    padding-left: 1.25rem;
    font-size: 0.875rem;
    color: var(--text-secondary);
    margin-bottom: 0.5rem;
  }

  .pillar-features li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0.5rem;
    width: 0.375rem;
    height: 0.375rem;
    border-radius: 50%;
    background: var(--brand-primary);
  }

  .pillar-link {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--brand-primary);
  }

  .pillar-card:hover .pillar-link svg {
    transform: translateX(3px);
  }

  .pillar-link svg {
    transition: transform 0.2s ease;
  }

  /* Process */
  .process {
    padding: 5rem 0;
    background: var(--bg-secondary);
  }

  @media (min-width: 768px) {
    .process {
      padding: 6rem 0;
    }
  }

  .process-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    max-width: 48rem;
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .process-grid {
      grid-template-columns: repeat(3, 1fr);
      max-width: none;
    }
  }

  .process-step {
    text-align: center;
  }

  .process-number {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 3rem;
    height: 3rem;
    margin: 0 auto 1rem;
    background: var(--brand-primary);
    color: #ffffff;
    font-size: 1.125rem;
    font-weight: 600;
    border-radius: 0.75rem;
  }

  .process-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
  }

  .process-description {
    font-size: 0.9375rem;
    line-height: 1.6;
    color: var(--text-secondary);
  }

  /* Featured Services */
  .featured {
    padding: 5rem 0;
  }

  @media (min-width: 768px) {
    .featured {
      padding: 6rem 0;
    }
  }

  .featured-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  @media (min-width: 768px) {
    .featured-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .featured-card {
    display: flex;
    flex-direction: column;
    padding: 1.5rem;
    background: var(--bg-primary);
    border: 1px solid var(--border-primary);
    border-radius: 0.875rem;
  }

  .featured-type {
    display: inline-block;
    padding: 0.25rem 0.625rem;
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--brand-primary);
    background: var(--brand-light);
    border-radius: 0.375rem;
    margin-bottom: 1rem;
    width: fit-content;
  }

  .featured-title {
    font-size: 1.0625rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
  }

  .featured-description {
    font-size: 0.875rem;
    line-height: 1.6;
    color: var(--text-secondary);
    margin-bottom: 1.25rem;
    flex-grow: 1;
  }

  .featured-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: 1rem;
    border-top: 1px solid var(--border-primary);
  }

  .featured-time {
    font-size: 0.8125rem;
    color: var(--text-tertiary);
  }

  .featured-link {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--brand-primary);
    text-decoration: none;
  }

  .featured-link:hover {
    text-decoration: underline;
  }

  .featured-cta {
    text-align: center;
    margin-top: 2.5rem;
  }

  /* CTA */
  .cta {
    padding: 5rem 0;
    background: var(--bg-secondary);
  }

  @media (min-width: 768px) {
    .cta {
      padding: 6rem 0;
    }
  }

  .cta-content {
    max-width: 32rem;
    margin: 0 auto;
    text-align: center;
  }

  .cta-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
  }

  @media (min-width: 768px) {
    .cta-title {
      font-size: 2rem;
    }
  }

  .cta-description {
    font-size: 1.0625rem;
    line-height: 1.6;
    color: var(--text-secondary);
    margin-bottom: 2rem;
  }

  .cta-actions {
    display: flex;
    justify-content: center;
  }

  /* Container */
  .container {
    max-width: 72rem;
    margin: 0 auto;
    padding: 0 1.25rem;
  }

  @media (min-width: 640px) {
    .container {
      padding: 0 2rem;
    }
  }

  /* Section Header */
  .section-header {
    text-align: center;
    max-width: 32rem;
    margin: 0 auto 3rem;
  }

  .section-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 0.75rem;
    letter-spacing: -0.02em;
  }

  @media (min-width: 768px) {
    .section-title {
      font-size: 2rem;
    }
  }

  .section-description {
    font-size: 1.0625rem;
    line-height: 1.6;
    color: var(--text-secondary);
  }

  /* Buttons */
  .btn-primary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    font-size: 0.9375rem;
    font-weight: 500;
    color: #ffffff;
    background: var(--brand-primary);
    border-radius: 0.5rem;
    text-decoration: none;
    transition: background-color 0.15s ease, transform 0.15s ease;
  }

  .btn-primary:hover {
    background: var(--brand-hover);
    transform: translateY(-1px);
  }

  .btn-secondary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--text-primary);
    background: var(--bg-primary);
    border: 1px solid var(--border-primary);
    border-radius: 0.5rem;
    text-decoration: none;
    transition: border-color 0.15s ease, background-color 0.15s ease;
  }

  .btn-secondary:hover {
    border-color: var(--border-secondary);
    background: var(--bg-secondary);
  }
</style>
