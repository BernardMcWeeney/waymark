---
import BaseLayout from '../layouts/BaseLayout.astro';
import { SITE_TITLE, SITE_DESCRIPTION, SERVICE_CATEGORIES } from '../consts';

const stats = [
  { value: '12', label: 'Service Categories' },
  { value: '50+', label: 'Productized Services' },
  { value: '24/7', label: 'Support Available' },
  { value: '100%', label: 'Fixed Pricing' },
];

const serviceHighlights = [
  {
    id: 'managed-security',
    title: 'Managed Security',
    description: 'Continuous protection with vulnerability management, monitoring, and incident response.',
    icon: 'shield',
    features: ['Vulnerability Management', 'Attack Surface Monitoring', 'Dark Web Monitoring', 'SOC-lite Foundations'],
    color: 'blue',
  },
  {
    id: 'microsoft-365',
    title: 'Microsoft 365',
    description: 'Complete M365 security from assessment to managed operations.',
    icon: 'microsoft',
    features: ['Security Assessment', 'Conditional Access', 'Defender Stack', 'Tenant Management'],
    color: 'purple',
  },
  {
    id: 'ai-services',
    title: 'AI Services',
    description: 'AI strategy, Copilot readiness, and workflow automation.',
    icon: 'ai',
    features: ['AI Readiness & Strategy', 'Copilot Readiness', 'AI Governance', 'Workflow Automation'],
    color: 'green',
  },
  {
    id: 'networking',
    title: 'Networking',
    description: 'Enterprise-grade UniFi networks with full site technology.',
    icon: 'network',
    features: ['UniFi Full Stack', 'Site Technology', 'Managed Operations', 'Security Reviews'],
    color: 'orange',
  },
];

const allCategories = [
  { title: 'Managed Security', count: 6, href: '/services#managed-security' },
  { title: 'Microsoft 365', count: 11, href: '/services#microsoft-365' },
  { title: 'Intune & Endpoint', count: 6, href: '/services#intune' },
  { title: 'Identity & Access', count: 4, href: '/services#identity' },
  { title: 'Google Workspace', count: 2, href: '/services#google-workspace' },
  { title: 'Migration Services', count: 2, href: '/services#migration' },
  { title: 'Networking', count: 4, href: '/services#networking' },
  { title: 'Web Security', count: 3, href: '/services#web-security' },
  { title: 'AI Services', count: 6, href: '/services#ai-services' },
  { title: 'Incident Response', count: 3, href: '/services#incident-response' },
  { title: 'Security Reviews', count: 5, href: '/services#configuration-reviews' },
];

const partners = [
  'Microsoft Partner',
  'UniFi Certified',
  'Cloudflare Partner',
];
---

<BaseLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <!-- Hero Section -->
  <section class="hero">
    <div class="container-wide">
      <div class="hero-grid">
        <div class="hero-content">
          <div class="hero-badge">
            <span class="hero-badge-dot"></span>
            <span>Productized IT Security Services</span>
          </div>

          <h1 class="hero-title">
            Security that scales<br/>
            <span class="hero-accent">with your business</span>
          </h1>

          <p class="hero-description">
            From Microsoft 365 security to AI readiness, we deliver fixed-scope services with clear outcomes and predictable pricing. No hourly billing surprises.
          </p>

          <div class="hero-actions">
            <a href="/contact" class="btn btn-primary btn-lg">
              Get Started
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
              </svg>
            </a>
            <a href="/services" class="btn btn-secondary btn-lg">
              Browse Services
            </a>
          </div>

          <div class="hero-partners">
            {partners.map((partner) => (
              <span class="partner-badge">{partner}</span>
            ))}
          </div>
        </div>

        <div class="hero-visual">
          <div class="hero-card-stack">
            <div class="hero-card hero-card-1">
              <div class="hero-card-icon blue">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
                </svg>
              </div>
              <div>
                <div class="hero-card-title">Security Assessment</div>
                <div class="hero-card-desc">M365 tenant review complete</div>
              </div>
              <span class="hero-card-badge green">Done</span>
            </div>

            <div class="hero-card hero-card-2">
              <div class="hero-card-icon purple">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09z" />
                </svg>
              </div>
              <div>
                <div class="hero-card-title">AI Readiness</div>
                <div class="hero-card-desc">Copilot deployment ready</div>
              </div>
              <span class="hero-card-badge blue">Active</span>
            </div>

            <div class="hero-card hero-card-3">
              <div class="hero-card-icon orange">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M8.288 15.038a5.25 5.25 0 017.424 0M5.106 11.856c3.807-3.808 9.98-3.808 13.788 0M1.924 8.674c5.565-5.565 14.587-5.565 20.152 0M12.53 18.22l-.53.53-.53-.53a.75.75 0 011.06 0z" />
                </svg>
              </div>
              <div>
                <div class="hero-card-title">Network Deployed</div>
                <div class="hero-card-desc">UniFi stack configured</div>
              </div>
              <span class="hero-card-badge green">Done</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Bar -->
  <section class="stats-bar">
    <div class="container-wide">
      <div class="stats-grid">
        {stats.map((stat) => (
          <div class="stat-item">
            <span class="stat-value">{stat.value}</span>
            <span class="stat-label">{stat.label}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Services Highlight Section -->
  <section class="section-padding">
    <div class="container-wide">
      <div class="section-header">
        <span class="badge badge-primary">Our Services</span>
        <h2 class="section-title">Everything you need to secure your business</h2>
        <p class="section-description">
          Comprehensive security services across 12 categories, from assessments to fully managed operations.
        </p>
      </div>

      <div class="services-showcase">
        {serviceHighlights.map((service) => (
          <a href={`/services#${service.id}`} class="service-showcase-card">
            <div class={`service-icon ${service.color}`}>
              {service.icon === 'shield' && (
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
                </svg>
              )}
              {service.icon === 'microsoft' && (
                <svg width="28" height="28" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M3 3h8v8H3V3zm10 0h8v8h-8V3zM3 13h8v8H3v-8zm10 0h8v8h-8v-8z"/>
                </svg>
              )}
              {service.icon === 'ai' && (
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 00-2.456 2.456z" />
                </svg>
              )}
              {service.icon === 'network' && (
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M8.288 15.038a5.25 5.25 0 017.424 0M5.106 11.856c3.807-3.808 9.98-3.808 13.788 0M1.924 8.674c5.565-5.565 14.587-5.565 20.152 0M12.53 18.22l-.53.53-.53-.53a.75.75 0 011.06 0z" />
                </svg>
              )}
            </div>
            <h3 class="service-showcase-title">{service.title}</h3>
            <p class="service-showcase-desc">{service.description}</p>
            <ul class="service-features">
              {service.features.map((feature) => (
                <li>{feature}</li>
              ))}
            </ul>
            <span class="service-link">
              View services
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
              </svg>
            </span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- All Categories Grid -->
  <section class="section-padding section-alt">
    <div class="container-wide">
      <div class="section-header">
        <span class="badge badge-neutral">Full Catalogue</span>
        <h2 class="section-title">Browse all service categories</h2>
        <p class="section-description">
          Every service follows our productized model: fixed scope, clear deliverables, predictable pricing.
        </p>
      </div>

      <div class="categories-grid">
        {allCategories.map((cat) => (
          <a href={cat.href} class="category-card">
            <span class="category-title">{cat.title}</span>
            <span class="category-count">{cat.count} services</span>
          </a>
        ))}
      </div>

      <div class="section-cta">
        <a href="/services" class="btn btn-primary btn-lg">
          View Complete Catalogue
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- AI Section (Key Differentiator) -->
  <section class="section-padding">
    <div class="container-wide">
      <div class="ai-section">
        <div class="ai-content">
          <span class="badge badge-primary">New for 2026</span>
          <h2 class="ai-title">AI-Ready Security</h2>
          <p class="ai-description">
            Prepare your organization for AI adoption with our comprehensive readiness services. From Microsoft 365 Copilot to custom AI workflows, we ensure your data is protected while enabling innovation.
          </p>

          <div class="ai-services-list">
            <div class="ai-service-item">
              <div class="ai-service-icon">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <strong>AI Readiness & Strategy</strong>
                <span>Business-aligned AI roadmap</span>
              </div>
            </div>
            <div class="ai-service-item">
              <div class="ai-service-icon">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <strong>Copilot Readiness</strong>
                <span>Safe M365 Copilot deployment</span>
              </div>
            </div>
            <div class="ai-service-item">
              <div class="ai-service-icon">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <strong>AI Governance</strong>
                <span>Policies and controls</span>
              </div>
            </div>
            <div class="ai-service-item">
              <div class="ai-service-icon">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <strong>Workflow Automation</strong>
                <span>AI-powered processes</span>
              </div>
            </div>
          </div>

          <a href="/services#ai-services" class="btn btn-primary">
            Explore AI Services
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
            </svg>
          </a>
        </div>

        <div class="ai-visual">
          <div class="ai-graphic">
            <div class="ai-orbit ai-orbit-1"></div>
            <div class="ai-orbit ai-orbit-2"></div>
            <div class="ai-center">
              <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 00-2.456 2.456z" />
              </svg>
            </div>
            <div class="ai-node ai-node-1">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                <path d="M3 3h8v8H3V3zm10 0h8v8h-8V3zM3 13h8v8H3v-8zm10 0h8v8h-8v-8z"/>
              </svg>
            </div>
            <div class="ai-node ai-node-2">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
              </svg>
            </div>
            <div class="ai-node ai-node-3">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />
              </svg>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section-padding section-alt">
    <div class="container-wide">
      <div class="cta-section">
        <h2 class="cta-title">Ready to get started?</h2>
        <p class="cta-description">
          Book a free consultation to discuss your security needs. We'll recommend the right services for your business.
        </p>
        <div class="cta-actions">
          <a href="/contact" class="btn btn-primary btn-lg">
            Schedule Consultation
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
            </svg>
          </a>
          <a href="/services" class="btn btn-secondary btn-lg">
            View All Services
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero */
  .hero {
    padding: 8rem 0 4rem;
    overflow: hidden;
  }

  @media (min-width: 768px) {
    .hero {
      padding: 10rem 0 6rem;
    }
  }

  .hero-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 4rem;
    align-items: center;
  }

  @media (min-width: 1024px) {
    .hero-grid {
      grid-template-columns: 1fr 1fr;
    }
  }

  .hero-content {
    max-width: 36rem;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--bg-tertiary);
    border: 1px solid var(--border-primary);
    border-radius: 9999px;
    font-size: 0.875rem;
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
  }

  .hero-badge-dot {
    width: 8px;
    height: 8px;
    background: var(--success);
    border-radius: 50%;
  }

  .hero-title {
    font-size: 2.75rem;
    font-weight: 700;
    line-height: 1.1;
    letter-spacing: -0.03em;
    color: var(--text-primary);
    margin-bottom: 1.5rem;
  }

  @media (min-width: 768px) {
    .hero-title {
      font-size: 3.5rem;
    }
  }

  @media (min-width: 1024px) {
    .hero-title {
      font-size: 4rem;
    }
  }

  .hero-accent {
    background: linear-gradient(135deg, var(--brand-primary), #8b5cf6);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-description {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--text-secondary);
    margin-bottom: 2rem;
  }

  @media (min-width: 768px) {
    .hero-description {
      font-size: 1.25rem;
    }
  }

  .hero-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-bottom: 2.5rem;
  }

  .hero-partners {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .partner-badge {
    padding: 0.375rem 0.875rem;
    background: var(--bg-secondary);
    border: 1px solid var(--border-primary);
    border-radius: 0.375rem;
    font-size: 0.8125rem;
    color: var(--text-tertiary);
  }

  /* Hero Visual */
  .hero-visual {
    display: none;
  }

  @media (min-width: 1024px) {
    .hero-visual {
      display: flex;
      justify-content: center;
    }
  }

  .hero-card-stack {
    position: relative;
    width: 100%;
    max-width: 400px;
    height: 300px;
  }

  .hero-card {
    position: absolute;
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.25rem;
    background: var(--bg-primary);
    border: 1px solid var(--border-primary);
    border-radius: 0.75rem;
    box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.05), 0 2px 4px -2px rgb(0 0 0 / 0.05);
    width: 320px;
  }

  .hero-card-1 {
    top: 0;
    left: 0;
    animation: float-1 6s ease-in-out infinite;
  }

  .hero-card-2 {
    top: 90px;
    left: 60px;
    animation: float-2 6s ease-in-out infinite;
  }

  .hero-card-3 {
    top: 180px;
    left: 20px;
    animation: float-3 6s ease-in-out infinite;
  }

  @keyframes float-1 {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-8px); }
  }

  @keyframes float-2 {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-12px); }
  }

  @keyframes float-3 {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-6px); }
  }

  .hero-card-icon {
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .hero-card-icon.blue {
    background: rgba(59, 130, 246, 0.1);
    color: #3b82f6;
  }

  .hero-card-icon.purple {
    background: rgba(139, 92, 246, 0.1);
    color: #8b5cf6;
  }

  .hero-card-icon.orange {
    background: rgba(249, 115, 22, 0.1);
    color: #f97316;
  }

  .hero-card-title {
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--text-primary);
  }

  .hero-card-desc {
    font-size: 0.8125rem;
    color: var(--text-tertiary);
  }

  .hero-card-badge {
    margin-left: auto;
    padding: 0.25rem 0.625rem;
    border-radius: 9999px;
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .hero-card-badge.green {
    background: rgba(34, 197, 94, 0.1);
    color: #22c55e;
  }

  .hero-card-badge.blue {
    background: rgba(59, 130, 246, 0.1);
    color: #3b82f6;
  }

  /* Stats Bar */
  .stats-bar {
    padding: 2.5rem 0;
    background: var(--bg-secondary);
    border-top: 1px solid var(--border-primary);
    border-bottom: 1px solid var(--border-primary);
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .stats-grid {
