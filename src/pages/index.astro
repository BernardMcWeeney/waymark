---
import BaseLayout from '../layouts/BaseLayout.astro';
import { SITE_TITLE, SITE_DESCRIPTION, PRODUCTS, STATS } from '../consts';

const trustedBy = [
	{ name: 'SOC 2 Type II Certified', desc: 'Audited Security' },
	{ name: 'ISO 27001', desc: 'Certified' },
	{ name: 'Microsoft Partner', desc: 'Gold Security' },
	{ name: 'CREST', desc: 'Accredited' },
];

const solutions = [
	{
		title: 'Microsoft 365 Security',
		description: 'Comprehensive protection for your Microsoft ecosystem with advanced threat detection and zero-trust architecture.',
		href: '/solutions/microsoft-365',
		icon: 'microsoft',
	},
	{
		title: 'Network Infrastructure',
		description: 'Enterprise-grade networking with Ubiquiti, secure VPN, and professional network management.',
		href: '/solutions/networking',
		icon: 'network',
	},
];
---

<BaseLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
	<!-- Hero Section - Premium & Professional -->
	<section class="relative min-h-screen flex items-center overflow-hidden">
		<!-- Background -->
		<div class="absolute inset-0">
			<div class="absolute inset-0 bg-slate-950"></div>
			<!-- Subtle grid pattern -->
			<div class="absolute inset-0 bg-[linear-gradient(rgba(59,130,246,0.03)_1px,transparent_1px),linear-gradient(90deg,rgba(59,130,246,0.03)_1px,transparent_1px)] bg-[size:60px_60px]"></div>
			<!-- Gradient orbs -->
			<div class="absolute top-1/4 -left-32 w-[500px] h-[500px] bg-brand-500/5 rounded-full blur-[120px]"></div>
			<div class="absolute bottom-1/4 -right-32 w-[500px] h-[500px] bg-accent-500/5 rounded-full blur-[120px]"></div>
		</div>

		<div class="container-wide relative z-10 py-32">
			<div class="max-w-5xl">
				<!-- Trust Signal -->
				<div class="inline-flex items-center gap-3 px-4 py-2 rounded-full bg-slate-900/80 border border-slate-800 mb-8">
					<div class="flex items-center gap-1">
						<span class="w-2 h-2 rounded-full bg-accent-500"></span>
						<span class="w-2 h-2 rounded-full bg-accent-500 animate-pulse"></span>
						<span class="w-2 h-2 rounded-full bg-accent-500"></span>
					</div>
					<span class="text-sm text-slate-400">Protecting 500+ enterprises worldwide</span>
				</div>

				<!-- Headline -->
				<h1 class="text-5xl md:text-6xl lg:text-7xl font-bold text-white mb-8 leading-[1.1] tracking-tight">
					Protect Your Business<br/>
					<span class="text-slate-400">From Modern Threats</span>
				</h1>

				<!-- Subheadline -->
				<p class="text-xl md:text-2xl text-slate-400 mb-12 max-w-3xl leading-relaxed">
					Enterprise-grade cybersecurity solutions designed to defend against sophisticated attacks. From phishing simulation to 24/7 threat monitoring.
				</p>

				<!-- CTAs -->
				<div class="flex flex-wrap gap-4 mb-16">
					<a href="/contact" class="group btn-primary btn-lg">
						Schedule Security Assessment
						<svg class="w-5 h-5 ml-2 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
							<path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
						</svg>
					</a>
					<a href="/products/phishing-simulation" class="btn-secondary btn-lg">
						View Products
					</a>
				</div>

				<!-- Certifications -->
				<div class="pt-8 border-t border-slate-800/50">
					<p class="text-xs uppercase tracking-wider text-slate-500 mb-4">Trusted & Certified</p>
					<div class="flex flex-wrap gap-6">
						{trustedBy.map((cert) => (
							<div class="flex items-center gap-2">
								<div class="w-8 h-8 rounded-lg bg-slate-800/50 flex items-center justify-center">
									<svg class="w-4 h-4 text-brand-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
										<path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
									</svg>
								</div>
								<div>
									<span class="text-sm text-white font-medium">{cert.name}</span>
								</div>
							</div>
						))}
					</div>
				</div>
			</div>
		</div>

		<!-- Scroll indicator -->
		<div class="absolute bottom-8 left-1/2 -translate-x-1/2">
			<div class="w-6 h-10 rounded-full border-2 border-slate-700 flex items-start justify-center p-2">
				<div class="w-1 h-2 bg-slate-500 rounded-full animate-bounce"></div>
			</div>
		</div>
	</section>

	<!-- Stats Bar -->
	<section class="py-12 bg-slate-900 border-y border-slate-800">
		<div class="container-wide">
			<div class="grid grid-cols-2 md:grid-cols-4 gap-8">
				{STATS.map((stat) => (
					<div class="text-center">
						<div class="text-3xl md:text-4xl font-bold text-white mb-1">{stat.value}</div>
						<div class="text-sm text-slate-500 uppercase tracking-wider">{stat.label}</div>
					</div>
				))}
			</div>
		</div>
	</section>

	<!-- Products Section -->
	<section class="section-padding bg-slate-950">
		<div class="container-wide">
			<div class="max-w-3xl mb-16">
				<p class="text-sm font-medium text-brand-400 uppercase tracking-wider mb-4">Security Products</p>
				<h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
					Comprehensive Protection Suite
				</h2>
				<p class="text-xl text-slate-400">
					Purpose-built security products to defend every layer of your organization—from your employees to your infrastructure.
				</p>
			</div>

			<div class="grid md:grid-cols-2 gap-6">
				{PRODUCTS.map((product) => (
					<a href={product.href} class="group card p-8 hover-lift">
						<div class="flex items-start justify-between mb-6">
							<div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-brand-500/20 to-brand-500/5 flex items-center justify-center">
								{product.icon === 'phishing' && (
									<svg class="w-7 h-7 text-brand-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
										<path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
									</svg>
								)}
								{product.icon === 'darkweb' && (
									<svg class="w-7 h-7 text-brand-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
										<path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
										<path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
									</svg>
								)}
								{product.icon === 'soc' && (
									<svg class="w-7 h-7 text-brand-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
										<path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
									</svg>
								)}
								{product.icon === 'vulnerability' && (
									<svg class="w-7 h-7 text-brand-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
										<path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
									</svg>
								)}
							</div>
							<span class="px-3 py-1 rounded-full text-xs font-medium bg-slate-800 text-slate-300 border border-slate-700">
								{product.badge}
							</span>
						</div>
						<h3 class="text-xl font-semibold text-white mb-3 group-hover:text-brand-400 transition-colors">
							{product.title}
						</h3>
						<p class="text-slate-400 mb-6">
							{product.description}
						</p>
						<div class="flex items-center text-sm text-brand-400 font-medium">
							Learn more
							<svg class="w-4 h-4 ml-2 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
								<path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
							</svg>
						</div>
					</a>
				))}
			</div>
		</div>
	</section>

	<!-- Why Waymark Section -->
	<section class="section-padding bg-slate-900/50">
		<div class="container-wide">
			<div class="grid lg:grid-cols-2 gap-16 items-center">
				<div>
					<p class="text-sm font-medium text-accent-400 uppercase tracking-wider mb-4">Why Waymark</p>
					<h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
						Security That Scales With Your Business
					</h2>
					<p class="text-xl text-slate-400 mb-8">
						We combine cutting-edge technology with human expertise to deliver security outcomes that matter. No false promises—just measurable protection.
					</p>

					<div class="space-y-6">
						{[
							{
								title: 'Proactive Threat Detection',
								description: 'We find vulnerabilities before attackers do, keeping you one step ahead of emerging threats.',
								icon: 'search',
							},
							{
								title: 'Expert Security Team',
								description: 'Certified analysts with decades of combined experience in enterprise security operations.',
								icon: 'users',
							},
							{
								title: 'Compliance Ready',
								description: 'Meet regulatory requirements with our SOC 2, ISO 27001, and GDPR-compliant solutions.',
								icon: 'check',
							},
						].map((item) => (
							<div class="flex gap-4">
								<div class="w-12 h-12 rounded-xl bg-slate-800 flex items-center justify-center flex-shrink-0">
									{item.icon === 'search' && (
										<svg class="w-6 h-6 text-accent-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
											<path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" />
										</svg>
									)}
									{item.icon === 'users' && (
										<svg class="w-6 h-6 text-accent-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
											<path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z" />
										</svg>
									)}
									{item.icon === 'check' && (
										<svg class="w-6 h-6 text-accent-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
											<path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12c0 1.268-.63 2.39-1.593 3.068a3.745 3.745 0 01-1.043 3.296 3.745 3.745 0 01-3.296 1.043A3.745 3.745 0 0112 21c-1.268 0-2.39-.63-3.068-1.593a3.746 3.746 0 01-3.296-1.043 3.745 3.745 0 01-1.043-3.296A3.745 3.745 0 013 12c0-1.268.63-2.39 1.593-3.068a3.745 3.745 0 011.043-3.296 3.746 3.746 0 013.296-1.043A3.746 3.746 0 0112 3c1.268 0 2.39.63 3.068 1.593a3.746 3.746 0 013.296 1.043 3.746 3.746 0 011.043 3.296A3.745 3.745 0 0121 12z" />
										</svg>
									)}
								</div>
								<div>
									<h4 class="text-lg font-semibold text-white mb-1">{item.title}</h4>
									<p class="text-slate-400">{item.description}</p>
								</div>
							</div>
						))}
					</div>
				</div>

				<!-- Stats Visual -->
				<div class="relative">
					<div class="aspect-square rounded-3xl bg-slate-900 border border-slate-800 p-8 overflow-hidden">
						<!-- Threat Dashboard Mockup -->
						<div class="h-full flex flex-col">
							<div class="flex items-center justify-between mb-6">
								<div>
									<p class="text-xs text-slate-500 uppercase tracking-wider">Threat Dashboard</p>
									<p class="text-lg font-semibold text-white">Real-time Overview</p>
								</div>
								<div class="flex items-center gap-2">
									<span class="w-2 h-2 rounded-full bg-accent-500 animate-pulse"></span>
									<span class="text-xs text-accent-400">Live</span>
								</div>
							</div>

							<div class="grid grid-cols-2 gap-4 mb-6">
								<div class="bg-slate-800/50 rounded-xl p-4">
									<p class="text-3xl font-bold text-white">847</p>
									<p class="text-xs text-slate-500">Threats Blocked Today</p>
								</div>
								<div class="bg-slate-800/50 rounded-xl p-4">
									<p class="text-3xl font-bold text-accent-400">0</p>
									<p class="text-xs text-slate-500">Active Incidents</p>
								</div>
							</div>

							<div class="flex-1 bg-slate-800/30 rounded-xl p-4">
								<p class="text-xs text-slate-500 mb-3">Recent Activity</p>
								<div class="space-y-3">
									{[
										{ time: '2 min ago', event: 'Phishing attempt blocked', status: 'blocked' },
										{ time: '5 min ago', event: 'Suspicious login prevented', status: 'blocked' },
										{ time: '12 min ago', event: 'Malware signature updated', status: 'info' },
										{ time: '18 min ago', event: 'Firewall rule applied', status: 'info' },
									].map((item) => (
										<div class="flex items-center gap-3">
											<span class={`w-2 h-2 rounded-full ${item.status === 'blocked' ? 'bg-red-500' : 'bg-brand-500'}`}></span>
											<span class="text-xs text-slate-400 flex-1">{item.event}</span>
											<span class="text-xs text-slate-600">{item.time}</span>
										</div>
									))}
								</div>
							</div>
						</div>
					</div>
					<!-- Decorative -->
					<div class="absolute -top-4 -right-4 w-32 h-32 bg-brand-500/10 rounded-full blur-2xl"></div>
					<div class="absolute -bottom-4 -left-4 w-32 h-32 bg-accent-500/10 rounded-full blur-2xl"></div>
				</div>
			</div>
		</div>
	</section>

	<!-- Solutions Section -->
	<section class="section-padding bg-slate-950">
		<div class="container-wide">
			<div class="text-center max-w-3xl mx-auto mb-16">
				<p class="text-sm font-medium text-brand-400 uppercase tracking-wider mb-4">Solutions</p>
				<h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
					Infrastructure Security
				</h2>
				<p class="text-xl text-slate-400">
					Secure your Microsoft 365 environment and network infrastructure with our managed solutions.
				</p>
			</div>

			<div class="grid md:grid-cols-2 gap-8">
				{solutions.map((solution) => (
					<a href={solution.href} class="group relative overflow-hidden rounded-3xl bg-gradient-to-br from-slate-800/50 to-slate-900/50 border border-slate-800 p-10 hover:border-slate-700 transition-all">
						<div class="relative z-10">
							<div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-brand-500/20 to-accent-500/10 flex items-center justify-center mb-6">
								{solution.icon === 'microsoft' && (
									<svg class="w-8 h-8 text-brand-400" viewBox="0 0 24 24" fill="currentColor">
										<path d="M11.4 24H0V12.6h11.4V24zM24 24H12.6V12.6H24V24zM11.4 11.4H0V0h11.4v11.4zm12.6 0H12.6V0H24v11.4z"/>
									</svg>
								)}
								{solution.icon === 'network' && (
									<svg class="w-8 h-8 text-brand-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
										<path stroke-linecap="round" stroke-linejoin="round" d="M8.288 15.038a5.25 5.25 0 017.424 0M5.106 11.856c3.807-3.808 9.98-3.808 13.788 0M1.924 8.674c5.565-5.565 14.587-5.565 20.152 0M12.53 18.22l-.53.53-.53-.53a.75.75 0 011.06 0z" />
									</svg>
								)}
							</div>
							<h3 class="text-2xl font-bold text-white mb-3 group-hover:text-brand-400 transition-colors">
								{solution.title}
							</h3>
							<p class="text-slate-400 mb-6">
								{solution.description}
							</p>
							<span class="inline-flex items-center text-brand-400 font-medium">
								Explore solution
								<svg class="w-4 h-4 ml-2 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
									<path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
								</svg>
							</span>
						</div>
						<!-- Background gradient on hover -->
						<div class="absolute inset-0 bg-gradient-to-br from-brand-500/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
					</a>
				))}
			</div>
		</div>
	</section>

	<!-- CTA Section -->
	<section class="section-padding">
		<div class="container-wide">
			<div class="relative rounded-3xl overflow-hidden">
				<!-- Background -->
				<div class="absolute inset-0 bg-gradient-to-br from-brand-900 via-slate-900 to-slate-900"></div>
				<div class="absolute inset-0">
					<div class="absolute top-0 right-0 w-[600px] h-[600px] bg-brand-500/10 rounded-full blur-[120px] -translate-y-1/2 translate-x-1/2"></div>
				</div>

				<div class="relative z-10 px-8 py-20 md:px-16 md:py-28">
					<div class="max-w-3xl mx-auto text-center">
						<h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
							Ready to Strengthen Your Security?
						</h2>
						<p class="text-xl text-slate-300 mb-10">
							Get a comprehensive security assessment and discover vulnerabilities before attackers do. Our experts will provide actionable recommendations tailored to your environment.
						</p>
						<div class="flex flex-wrap justify-center gap-4">
							<a href="/contact" class="group btn-primary btn-lg">
								Request Assessment
								<svg class="w-5 h-5 ml-2 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
									<path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
								</svg>
							</a>
							<a href="tel:+18007326275" class="btn-secondary btn-lg">
								<svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
									<path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
								</svg>
								Call (800) SEC-MARK
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
</BaseLayout>
