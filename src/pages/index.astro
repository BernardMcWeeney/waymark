---
import BaseLayout from '../layouts/BaseLayout.astro';
import { SITE_TITLE, SITE_DESCRIPTION, PRODUCTS } from '../consts';
---

<BaseLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <!-- Hero - Product-first, answers: What? Who? Why? -->
  <section class="section">
    <div class="container">
      <div class="max-w-3xl">
        <h1 class="mb-6">
          Enterprise Security<br />
          <span class="text-neutral-400">Products & Services</span>
        </h1>
        <p class="text-xl text-neutral-400 mb-10 max-w-2xl">
          Phishing simulation, dark web monitoring, vulnerability assessment, and 24/7 security operations for organizations that take security seriously.
        </p>
        <div class="flex flex-wrap gap-3">
          <a href="#products" class="btn-primary">
            View products
          </a>
          <a href="/contact" class="btn-secondary">
            Contact sales
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Products - Above the fold, clear naming -->
  <section id="products" class="section-sm border-t border-neutral-800">
    <div class="container">
      <div class="mb-12">
        <h2 class="text-2xl mb-2">Products</h2>
        <p class="text-neutral-500">Security products for every layer of your organization.</p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {PRODUCTS.map((product) => (
          <a href={product.href} class="product-card group">
            <div class="p-6">
              <!-- Icon -->
              <div class="w-10 h-10 rounded-lg bg-neutral-800 flex items-center justify-center mb-4">
                {product.icon === 'phishing' && (
                  <svg class="w-5 h-5 text-neutral-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                  </svg>
                )}
                {product.icon === 'darkweb' && (
                  <svg class="w-5 h-5 text-neutral-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                )}
                {product.icon === 'soc' && (
                  <svg class="w-5 h-5 text-neutral-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
                  </svg>
                )}
                {product.icon === 'vulnerability' && (
                  <svg class="w-5 h-5 text-neutral-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
                  </svg>
                )}
              </div>

              <!-- Content -->
              <h3 class="text-base font-semibold text-white mb-2 group-hover:text-primary-400 transition-colors">
                {product.shortTitle}
              </h3>
              <p class="text-sm text-neutral-500 mb-4 line-clamp-2">
                {product.description}
              </p>

              <!-- Link -->
              <span class="text-sm text-neutral-400 group-hover:text-white transition-colors inline-flex items-center">
                Learn more
                <svg class="w-4 h-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                </svg>
              </span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- How It Works - Diagram-led explanation -->
  <section class="section border-t border-neutral-800">
    <div class="container">
      <div class="mb-12">
        <h2 class="text-2xl mb-2">How it works</h2>
        <p class="text-neutral-500">A systematic approach to enterprise security.</p>
      </div>

      <!-- Architecture Diagram -->
      <div class="diagram mb-12">
        <div class="grid md:grid-cols-4 gap-6 text-center">
          <div>
            <div class="w-12 h-12 rounded-lg bg-neutral-800 flex items-center justify-center mx-auto mb-3">
              <span class="text-lg font-semibold text-white">1</span>
            </div>
            <h4 class="text-sm font-medium text-white mb-1">Assess</h4>
            <p class="text-xs text-neutral-500">Comprehensive security audit and vulnerability assessment</p>
          </div>
          <div>
            <div class="w-12 h-12 rounded-lg bg-neutral-800 flex items-center justify-center mx-auto mb-3">
              <span class="text-lg font-semibold text-white">2</span>
            </div>
            <h4 class="text-sm font-medium text-white mb-1">Implement</h4>
            <p class="text-xs text-neutral-500">Deploy security controls and monitoring infrastructure</p>
          </div>
          <div>
            <div class="w-12 h-12 rounded-lg bg-neutral-800 flex items-center justify-center mx-auto mb-3">
              <span class="text-lg font-semibold text-white">3</span>
            </div>
            <h4 class="text-sm font-medium text-white mb-1">Monitor</h4>
            <p class="text-xs text-neutral-500">24/7 threat detection and security operations</p>
          </div>
          <div>
            <div class="w-12 h-12 rounded-lg bg-neutral-800 flex items-center justify-center mx-auto mb-3">
              <span class="text-lg font-semibold text-white">4</span>
            </div>
            <h4 class="text-sm font-medium text-white mb-1">Respond</h4>
            <p class="text-xs text-neutral-500">Incident response and continuous improvement</p>
          </div>
        </div>
      </div>

      <!-- Key capabilities -->
      <div class="grid md:grid-cols-3 gap-8">
        <div>
          <h3 class="text-base font-semibold text-white mb-2">Proactive Testing</h3>
          <p class="text-sm text-neutral-500">
            Automated phishing simulations and penetration testing identify weaknesses before attackers find them.
          </p>
        </div>
        <div>
          <h3 class="text-base font-semibold text-white mb-2">Continuous Monitoring</h3>
          <p class="text-sm text-neutral-500">
            Dark web surveillance and 24/7 SOC monitoring provide early warning of credential leaks and active threats.
          </p>
        </div>
        <div>
          <h3 class="text-base font-semibold text-white mb-2">Expert Response</h3>
          <p class="text-sm text-neutral-500">
            Certified security analysts investigate alerts, contain threats, and provide remediation guidance.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Solutions -->
  <section class="section-sm border-t border-neutral-800">
    <div class="container">
      <div class="mb-12">
        <h2 class="text-2xl mb-2">Solutions</h2>
        <p class="text-neutral-500">Managed security for your infrastructure.</p>
      </div>

      <div class="grid md:grid-cols-2 gap-6">
        <a href="/solutions/microsoft-365" class="card group">
          <div class="p-6 sm:p-8">
            <div class="flex items-start gap-4">
              <div class="w-10 h-10 rounded-lg bg-neutral-800 flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-neutral-400" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M11.4 24H0V12.6h11.4V24zM24 24H12.6V12.6H24V24zM11.4 11.4H0V0h11.4v11.4zm12.6 0H12.6V0H24v11.4z"/>
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="text-lg font-semibold text-white mb-2 group-hover:text-primary-400 transition-colors">
                  Microsoft 365 Security
                </h3>
                <p class="text-sm text-neutral-500 mb-3">
                  Advanced threat protection, conditional access policies, and data loss prevention for your Microsoft environment.
                </p>
                <span class="text-sm text-neutral-400 group-hover:text-white transition-colors">
                  Learn more →
                </span>
              </div>
            </div>
          </div>
        </a>

        <a href="/solutions/networking" class="card group">
          <div class="p-6 sm:p-8">
            <div class="flex items-start gap-4">
              <div class="w-10 h-10 rounded-lg bg-neutral-800 flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-neutral-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M8.288 15.038a5.25 5.25 0 017.424 0M5.106 11.856c3.807-3.808 9.98-3.808 13.788 0M1.924 8.674c5.565-5.565 14.587-5.565 20.152 0M12.53 18.22l-.53.53-.53-.53a.75.75 0 011.06 0z" />
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="text-lg font-semibold text-white mb-2 group-hover:text-primary-400 transition-colors">
                  Network Infrastructure
                </h3>
                <p class="text-sm text-neutral-500 mb-3">
                  Enterprise networking with Ubiquiti, secure VPN configuration, and professional network management.
                </p>
                <span class="text-sm text-neutral-400 group-hover:text-white transition-colors">
                  Learn more →
                </span>
              </div>
            </div>
          </div>
        </a>
      </div>
    </div>
  </section>

  <!-- Trust Signals - Quiet, not shouted -->
  <section class="section-sm border-t border-neutral-800">
    <div class="container">
      <div class="flex flex-wrap items-center justify-between gap-8">
        <div>
          <p class="text-sm text-neutral-500 mb-4">Certifications & Compliance</p>
          <div class="flex flex-wrap gap-4">
            <div class="badge">SOC 2 Type II</div>
            <div class="badge">ISO 27001</div>
            <div class="badge">Microsoft Partner</div>
            <div class="badge">CREST Accredited</div>
          </div>
        </div>
        <div class="flex gap-8 text-center">
          <div>
            <div class="text-2xl font-semibold text-white">500+</div>
            <div class="text-xs text-neutral-500">Clients</div>
          </div>
          <div>
            <div class="text-2xl font-semibold text-white">99.9%</div>
            <div class="text-xs text-neutral-500">Uptime</div>
          </div>
          <div>
            <div class="text-2xl font-semibold text-white">&lt;15min</div>
            <div class="text-xs text-neutral-500">Response</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA - Non-aggressive -->
  <section class="section border-t border-neutral-800">
    <div class="container">
      <div class="max-w-2xl mx-auto text-center">
        <h2 class="text-2xl mb-4">Ready to improve your security posture?</h2>
        <p class="text-neutral-500 mb-8">
          Schedule a call to discuss your security requirements. No pressure, no sales pitch—just an honest assessment of how we can help.
        </p>
        <div class="flex flex-wrap justify-center gap-3">
          <a href="/contact" class="btn-primary">
            Schedule a call
          </a>
          <a href="/products/phishing-simulation" class="btn-secondary">
            See pricing
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
