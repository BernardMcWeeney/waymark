---
import BaseLayout from '../layouts/BaseLayout.astro';
import { SITE_TITLE, SITE_DESCRIPTION, SERVICE_CATEGORIES, SITE_STATS, PARTNERS, getFeaturedServices } from '../consts';

const featuredServices = getFeaturedServices();

// Get first 6 categories for the grid
const highlightCategories = SERVICE_CATEGORIES.slice(0, 6);

// Service type badges
const serviceTypes = [
  { label: 'Assessment', icon: 'search', color: 'blue' },
  { label: 'Implementation', icon: 'wrench', color: 'purple' },
  { label: 'Managed', icon: 'refresh', color: 'emerald' },
];
---

<BaseLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <!-- Hero Section -->
  <section class="hero">
    <!-- Background Effects -->
    <div class="hero-bg">
      <div class="hero-gradient"></div>
      <div class="hero-grid-pattern"></div>
      <div class="hero-glow hero-glow-1"></div>
      <div class="hero-glow hero-glow-2"></div>
    </div>

    <div class="container-wide hero-container">
      <div class="hero-content">
        <div class="hero-badge">
          <span class="hero-badge-dot"></span>
          <span>Productized IT Security Services</span>
        </div>

        <h1 class="hero-title">
          Enterprise security,<br/>
          <span class="gradient-text-animated">delivered simply</span>
        </h1>

        <p class="hero-description">
          From Microsoft 365 security to AI readiness, we deliver fixed-scope services
          with clear outcomes and predictable pricing. No hourly billing. No surprises.
        </p>

        <div class="hero-actions">
          <a href="/contact" class="btn btn-primary btn-lg">
            Get Started
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
            </svg>
          </a>
          <a href="/services" class="btn btn-secondary btn-lg">
            Browse Services
          </a>
        </div>

        <div class="hero-partners">
          {PARTNERS.map((partner) => (
            <span class="partner-badge">{partner}</span>
          ))}
        </div>
      </div>

      <div class="hero-visual">
        <!-- Floating Cards -->
        <div class="hero-cards">
          <div class="hero-card hero-card-1 float">
            <div class="hero-card-icon blue">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
              </svg>
            </div>
            <div class="hero-card-content">
              <span class="hero-card-title">M365 Assessment</span>
              <span class="hero-card-desc">Security score: 87/100</span>
            </div>
            <span class="hero-card-status green">Complete</span>
          </div>

          <div class="hero-card hero-card-2 float float-delay-1">
            <div class="hero-card-icon purple">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09z" />
              </svg>
            </div>
            <div class="hero-card-content">
              <span class="hero-card-title">Copilot Readiness</span>
              <span class="hero-card-desc">Permissions cleaned</span>
            </div>
            <span class="hero-card-status blue">Active</span>
          </div>

          <div class="hero-card hero-card-3 float float-delay-2">
            <div class="hero-card-icon cyan">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M8.288 15.038a5.25 5.25 0 017.424 0M5.106 11.856c3.807-3.808 9.98-3.808 13.788 0M1.924 8.674c5.565-5.565 14.587-5.565 20.152 0M12.53 18.22l-.53.53-.53-.53a.75.75 0 011.06 0z" />
              </svg>
            </div>
            <div class="hero-card-content">
              <span class="hero-card-title">UniFi Network</span>
              <span class="hero-card-desc">12 devices online</span>
            </div>
            <span class="hero-card-status green">Deployed</span>
          </div>
        </div>

        <!-- Decorative elements -->
        <div class="hero-orbit">
          <div class="orbit-ring orbit-ring-1"></div>
          <div class="orbit-ring orbit-ring-2"></div>
          <div class="orbit-dot orbit-dot-1"></div>
          <div class="orbit-dot orbit-dot-2"></div>
          <div class="orbit-dot orbit-dot-3"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Bar -->
  <section class="stats-section">
    <div class="container-wide">
      <div class="stats-grid">
        {SITE_STATS.map((stat, i) => (
          <div class="stat-item animate-in" style={`animation-delay: ${i * 100}ms`}>
            <span class="stat-value gradient-text">{stat.value}</span>
            <span class="stat-label">{stat.label}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Service Types Section -->
  <section class="section-padding">
    <div class="container-wide">
      <div class="section-header">
        <span class="badge badge-primary">How We Work</span>
        <h2 class="section-title">Three ways to engage</h2>
        <p class="section-description">
          Every service follows our productized model with clear scope and fixed pricing
        </p>
      </div>

      <div class="service-types-grid">
        <div class="service-type-card">
          <div class="service-type-icon icon-box icon-box-lg icon-box-blue">
            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" />
            </svg>
          </div>
          <h3 class="service-type-title">Assessment</h3>
          <p class="service-type-desc">Deep-dive reviews that identify risks and provide clear remediation roadmaps</p>
          <ul class="service-type-features">
            <li>Security posture review</li>
            <li>Risk prioritization</li>
            <li>Actionable recommendations</li>
          </ul>
        </div>

        <div class="service-type-card featured">
          <div class="service-type-icon icon-box icon-box-lg icon-box-purple">
            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M11.42 15.17L17.25 21A2.652 2.652 0 0021 17.25l-5.877-5.877M11.42 15.17l2.496-3.03c.317-.384.74-.626 1.208-.766M11.42 15.17l-4.655 5.653a2.548 2.548 0 11-3.586-3.586l6.837-5.63m5.108-.233c.55-.164 1.163-.188 1.743-.14a4.5 4.5 0 004.486-6.336l-3.276 3.277a3.004 3.004 0 01-2.25-2.25l3.276-3.276a4.5 4.5 0 00-6.336 4.486c.091 1.076-.071 2.264-.904 2.95l-.102.085m-1.745 1.437L5.909 7.5H4.5L2.25 3.75l1.5-1.5L7.5 4.5v1.409l4.26 4.26m-1.745 1.437l1.745-1.437m6.615 8.206L15.75 15.75M4.867 19.125h.008v.008h-.008v-.008z" />
            </svg>
          </div>
          <h3 class="service-type-title">Implementation</h3>
          <p class="service-type-desc">Hands-on deployment and configuration with documentation and handover</p>
          <ul class="service-type-features">
            <li>Expert configuration</li>
            <li>Best-practice setup</li>
            <li>Knowledge transfer</li>
          </ul>
        </div>

        <div class="service-type-card">
          <div class="service-type-icon icon-box icon-box-lg icon-box-emerald">
            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182m0-4.991v4.99" />
            </svg>
          </div>
          <h3 class="service-type-title">Managed</h3>
          <p class="service-type-desc">Ongoing operations with monthly reporting and continuous improvement</p>
          <ul class="service-type-features">
            <li>Recurring monitoring</li>
            <li>Monthly reporting</li>
            <li>Proactive maintenance</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Categories Grid Section -->
  <section class="section-padding section-alt">
    <div class="container-wide">
      <div class="section-header">
        <span class="badge badge-neutral">Service Catalogue</span>
        <h2 class="section-title">12 Categories. 60+ Services.</h2>
        <p class="section-description">
          From security assessments to AI implementation - everything your business needs
        </p>
      </div>

      <div class="categories-showcase">
        {SERVICE_CATEGORIES.map((cat, i) => (
          <a href={`/services#${cat.id}`} class={`category-showcase-card color-${cat.color}`} style={`animation-delay: ${i * 50}ms`}>
            <div class={`category-icon icon-${cat.color}`}>
              {cat.icon === "shield" && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
                </svg>
              )}
              {cat.icon === "microsoft" && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M3 3h8v8H3V3zm10 0h8v8h-8V3zM3 13h8v8H3v-8zm10 0h8v8h-8v-8z"/>
                </svg>
              )}
              {cat.icon === "device" && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 17.25v1.007a3 3 0 01-.879 2.122L7.5 21h9l-.621-.621A3 3 0 0115 18.257V17.25m6-12V15a2.25 2.25 0 01-2.25 2.25H5.25A2.25 2.25 0 013 15V5.25m18 0A2.25 2.25 0 0018.75 3H5.25A2.25 2.25 0 003 5.25m18 0V12a2.25 2.25 0 01-2.25 2.25H5.25A2.25 2.25 0 013 12V5.25" />
                </svg>
              )}
              {cat.icon === "user" && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
                </svg>
              )}
              {cat.icon === "google" && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                  <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                  <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                  <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                </svg>
              )}
              {cat.icon === "migration" && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 21L3 16.5m0 0L7.5 12M3 16.5h13.5m0-13.5L21 7.5m0 0L16.5 12M21 7.5H7.5" />
                </svg>
              )}
              {cat.icon === "network" && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M8.288 15.038a5.25 5.25 0 017.424 0M5.106 11.856c3.807-3.808 9.98-3.808 13.788 0M1.924 8.674c5.565-5.565 14.587-5.565 20.152 0M12.53 18.22l-.53.53-.53-.53a.75.75 0 011.06 0z" />
                </svg>
              )}
              {cat.icon === "globe" && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0121 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0112 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 013 12c0-1.605.42-3.113 1.157-4.418" />
                </svg>
              )}
              {cat.icon === "check" && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              )}
              {cat.icon === "ai" && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 00-2.456 2.456z" />
                </svg>
              )}
              {cat.icon === "alert" && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
                </svg>
              )}
              {cat.icon === "grid" && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6A2.25 2.25 0 016 3.75h2.25A2.25 2.25 0 0110.5 6v2.25a2.25 2.25 0 01-2.25 2.25H6a2.25 2.25 0 01-2.25-2.25V6zM3.75 15.75A2.25 2.25 0 016 13.5h2.25a2.25 2.25 0 012.25 2.25V18a2.25 2.25 0 01-2.25 2.25H6A2.25 2.25 0 013.75 18v-2.25zM13.5 6a2.25 2.25 0 012.25-2.25H18A2.25 2.25 0 0120.25 6v2.25A2.25 2.25 0 0118 10.5h-2.25a2.25 2.25 0 01-2.25-2.25V6zM13.5 15.75a2.25 2.25 0 012.25-2.25H18a2.25 2.25 0 012.25 2.25V18A2.25 2.25 0 0118 20.25h-2.25A2.25 2.25 0 0113.5 18v-2.25z" />
                </svg>
              )}
            </div>
            <div class="category-content">
              <h3 class="category-title">{cat.shortTitle}</h3>
              <p class="category-desc">{cat.description}</p>
            </div>
            <div class="category-footer">
              <span class="category-count">{cat.services.length} services</span>
              <svg class="category-arrow" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
              </svg>
            </div>
          </a>
        ))}
      </div>

      <div class="section-cta">
        <a href="/services" class="btn btn-primary btn-lg">
          View Complete Catalogue
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- AI Spotlight Section -->
  <section class="section-padding ai-spotlight">
    <div class="container-wide">
      <div class="ai-grid">
        <div class="ai-content">
          <span class="badge badge-glow">New for 2026</span>
          <h2 class="ai-title">AI-Ready Security</h2>
          <p class="ai-description">
            Prepare your organization for AI adoption with our comprehensive readiness services.
            From Microsoft 365 Copilot to custom AI workflows, we ensure your data is protected
            while enabling innovation.
          </p>

          <div class="ai-services">
            <a href="/services#ai-readiness-strategy" class="ai-service-item">
              <div class="ai-service-icon">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09z" />
                </svg>
              </div>
              <div class="ai-service-content">
                <strong>AI Readiness & Strategy</strong>
                <span>Business-aligned AI roadmap</span>
              </div>
              <svg class="ai-service-arrow" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
              </svg>
            </a>
            <a href="/services#copilot-readiness" class="ai-service-item">
              <div class="ai-service-icon">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M3 3h8v8H3V3zm10 0h8v8h-8V3zM3 13h8v8H3v-8zm10 0h8v8h-8v-8z"/>
                </svg>
              </div>
              <div class="ai-service-content">
                <strong>Copilot Readiness</strong>
                <span>Safe M365 Copilot deployment</span>
              </div>
              <svg class="ai-service-arrow" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
              </svg>
            </a>
            <a href="/services#ai-governance-baseline" class="ai-service-item">
              <div class="ai-service-icon">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
                </svg>
              </div>
              <div class="ai-service-content">
                <strong>AI Governance</strong>
                <span>Policies and controls</span>
              </div>
              <svg class="ai-service-arrow" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
              </svg>
            </a>
            <a href="/services#ai-workflow-automation" class="ai-service-item">
              <div class="ai-service-icon">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />
                </svg>
              </div>
              <div class="ai-service-content">
                <strong>Workflow Automation</strong>
                <span>AI-powered processes</span>
