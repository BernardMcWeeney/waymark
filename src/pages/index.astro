---
import BaseLayout from '../layouts/BaseLayout.astro';
import { BUNDLES, PRODUCT_CATEGORIES, getFeaturedProducts } from '../consts';

const featuredProducts = getFeaturedProducts().slice(0, 6);
const title = "Waymark - Enterprise IT Security for SMBs";
const description = "Enterprise-grade security, Microsoft, AI, cloud and digital delivery — productised for small and medium businesses. Clear, fixed-scope, outcome-led.";
---

<BaseLayout title={title} description={description}>
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <div class="hero-content">
        <p class="hero-eyebrow">Enterprise IT for SMBs</p>
        <h1 class="hero-title">
          Security you can<br />
          <span class="hero-title-accent">actually buy.</span>
        </h1>
        <p class="hero-description">
          Enterprise-grade security, Microsoft 365, AI, cloud and digital delivery —
          productised for small and medium businesses. Clear scope. Fixed price. Real outcomes.
        </p>
        <div class="hero-actions">
          <a href="/contact" class="btn-primary">
            Get a Free Consultation
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
            </svg>
          </a>
          <a href="/products" class="btn-secondary">View All Products</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Bar -->
  <section class="trust-bar">
    <div class="container">
      <div class="trust-items">
        <div class="trust-item">
          <span class="trust-value">50+</span>
          <span class="trust-label">Products</span>
        </div>
        <div class="trust-divider"></div>
        <div class="trust-item">
          <span class="trust-value">100%</span>
          <span class="trust-label">Fixed Pricing</span>
        </div>
        <div class="trust-divider"></div>
        <div class="trust-item">
          <span class="trust-value">SMB</span>
          <span class="trust-label">Focused</span>
        </div>
        <div class="trust-divider"></div>
        <div class="trust-item">
          <span class="trust-value">Microsoft</span>
          <span class="trust-label">Partner</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Bundles Section -->
  <section class="bundles">
    <div class="container">
      <div class="section-header">
        <p class="section-eyebrow">Packages</p>
        <h2 class="section-title">Choose your level of protection</h2>
        <p class="section-description">
          Three packages designed for different needs. Start with Core and scale up as you grow.
        </p>
      </div>

      <div class="bundles-grid">
        {BUNDLES.map((bundle) => (
          <div class={`bundle-card ${bundle.featured ? 'featured' : ''}`}>
            {bundle.featured && <span class="bundle-badge">Most Popular</span>}
            <h3 class="bundle-name">{bundle.name}</h3>
            <p class="bundle-tagline">{bundle.tagline}</p>
            <p class="bundle-description">{bundle.description}</p>
            <ul class="bundle-includes">
              {bundle.includes.map((item) => (
                <li>
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                  </svg>
                  {item}
                </li>
              ))}
            </ul>
            <a href="/contact" class={`bundle-cta ${bundle.featured ? 'primary' : 'secondary'}`}>
              Get Started
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Solutions Grid -->
  <section class="solutions">
    <div class="container">
      <div class="section-header">
        <p class="section-eyebrow">Solutions</p>
        <h2 class="section-title">Six areas of expertise</h2>
        <p class="section-description">
          Every product is clear, fixed-scope, and outcome-led. You'll see exactly what you're getting, and what it achieves.
        </p>
      </div>

      <div class="solutions-grid">
        {PRODUCT_CATEGORIES.map((category) => (
          <a href={category.href} class={`solution-card ${category.color}`}>
            <div class="solution-icon">
              {category.icon === 'sparkles' && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 00-2.456 2.456zM16.894 20.567L16.5 21.75l-.394-1.183a2.25 2.25 0 00-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 001.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 001.423 1.423l1.183.394-1.183.394a2.25 2.25 0 00-1.423 1.423z" />
                </svg>
              )}
              {category.icon === 'shield' && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
                </svg>
              )}
              {category.icon === 'grid' && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M3 3h8v8H3V3zm10 0h8v8h-8V3zM3 13h8v8H3v-8zm10 0h8v8h-8v-8z"/>
                </svg>
              )}
              {category.icon === 'laptop' && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 17.25v1.007a3 3 0 01-.879 2.122L7.5 21h9l-.621-.621A3 3 0 0115 18.257V17.25m6-12V15a2.25 2.25 0 01-2.25 2.25H5.25A2.25 2.25 0 013 15V5.25m18 0A2.25 2.25 0 0018.75 3H5.25A2.25 2.25 0 003 5.25m18 0V12a2.25 2.25 0 01-2.25 2.25H5.25A2.25 2.25 0 013 12V5.25" />
                </svg>
              )}
              {category.icon === 'server' && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5.25 14.25h13.5m-13.5 0a3 3 0 01-3-3m3 3a3 3 0 100 6h13.5a3 3 0 100-6m-16.5-3a3 3 0 013-3h13.5a3 3 0 013 3m-19.5 0a4.5 4.5 0 01.9-2.7L5.737 5.1a3.375 3.375 0 012.7-1.35h7.126c1.062 0 2.062.5 2.7 1.35l2.587 3.45a4.5 4.5 0 01.9 2.7m0 0a3 3 0 01-3 3m0 3h.008v.008h-.008v-.008zm0-6h.008v.008h-.008v-.008zm-3 6h.008v.008h-.008v-.008zm0-6h.008v.008h-.008v-.008z" />
                </svg>
              )}
              {category.icon === 'globe' && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0121 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0112 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 013 12c0-1.605.42-3.113 1.157-4.418" />
                </svg>
              )}
            </div>
            <div class="solution-content">
              <h3 class="solution-title">{category.shortTitle}</h3>
              <p class="solution-description">{category.description}</p>
              <span class="solution-count">{category.products.length} products</span>
            </div>
            <svg class="solution-arrow" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
            </svg>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- How We Work -->
  <section class="process">
    <div class="container">
      <div class="section-header">
        <p class="section-eyebrow">How it works</p>
        <h2 class="section-title">Three ways to engage</h2>
        <p class="section-description">
          Every product follows a clear delivery model. No hidden fees, no surprises.
        </p>
      </div>

      <div class="process-grid">
        <div class="process-step">
          <div class="process-icon assessment">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" />
            </svg>
          </div>
          <h3 class="process-title">Assess</h3>
          <p class="process-description">
            We review your current setup, identify risks, and create a prioritised action plan. Know exactly where you stand.
          </p>
          <span class="process-tag">Fixed scope</span>
        </div>

        <div class="process-step">
          <div class="process-icon implementation">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M11.42 15.17L17.25 21A2.652 2.652 0 0021 17.25l-5.877-5.877M11.42 15.17l2.496-3.03c.317-.384.74-.626 1.208-.766M11.42 15.17l-4.655 5.653a2.548 2.548 0 11-3.586-3.586l6.837-5.63m5.108-.233c.55-.164 1.163-.188 1.743-.14a4.5 4.5 0 004.486-6.336l-3.276 3.277a3.004 3.004 0 01-2.25-2.25l3.276-3.276a4.5 4.5 0 00-6.336 4.486c.091 1.076-.071 2.264-.904 2.95l-.102.085m-1.745 1.437L5.909 7.5H4.5L2.25 3.75l1.5-1.5L7.5 4.5v1.409l4.26 4.26m-1.745 1.437l1.745-1.437m6.615 8.206L15.75 15.75M4.867 19.125h.008v.008h-.008v-.008z" />
            </svg>
          </div>
          <h3 class="process-title">Implement</h3>
          <p class="process-description">
            Fixed-scope projects to deploy solutions. Clear deliverables, predictable timelines, documented handover.
          </p>
          <span class="process-tag">Fixed price</span>
        </div>

        <div class="process-step">
          <div class="process-icon managed">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182m0-4.991v4.99" />
            </svg>
          </div>
          <h3 class="process-title">Manage</h3>
          <p class="process-description">
            Ongoing monitoring, maintenance, and improvement. Monthly plans that keep you protected and moving forward.
          </p>
          <span class="process-tag">Monthly</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Products -->
  <section class="featured">
    <div class="container">
      <div class="section-header">
        <p class="section-eyebrow">Popular</p>
        <h2 class="section-title">Featured products</h2>
        <p class="section-description">
          Our most requested products for small and medium businesses.
        </p>
      </div>

      <div class="featured-grid">
        {featuredProducts.map((product) => (
          <div class="featured-card">
            <span class={`featured-type ${product.type}`}>{product.type}</span>
            <h3 class="featured-title">{product.shortTitle || product.title}</h3>
            <p class="featured-description">{product.description}</p>
            <div class="featured-outcome">
              <strong>You get:</strong> {product.outcome}
            </div>
            <a href="/contact" class="featured-link">Get started</a>
          </div>
        ))}
      </div>

      <div class="featured-cta">
        <a href="/products" class="btn-secondary">View all 50+ products</a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta">
    <div class="container">
      <div class="cta-content">
        <h2 class="cta-title">Ready to secure your business?</h2>
        <p class="cta-description">
          Get a free consultation to discuss your needs. No obligation, just honest advice about what you actually need.
        </p>
        <div class="cta-actions">
          <a href="/contact" class="btn-primary">
            Schedule a Call
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Container */
  .container {
    max-width: 72rem;
    margin: 0 auto;
    padding: 0 1.25rem;
  }

  @media (min-width: 640px) {
    .container {
      padding: 0 2rem;
    }
  }

  /* Section Header */
  .section-header {
    text-align: center;
    max-width: 36rem;
    margin: 0 auto 3rem;
  }

  .section-eyebrow {
    font-size: 0.8125rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--brand-primary);
    margin-bottom: 0.75rem;
  }

  .section-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 0.75rem;
    letter-spacing: -0.02em;
  }

  @media (min-width: 768px) {
    .section-title {
      font-size: 2.25rem;
    }
  }

  .section-description {
    font-size: 1.0625rem;
    line-height: 1.6;
    color: var(--text-secondary);
  }

  /* Hero */
  .hero {
    padding: 8rem 0 4rem;
  }

  @media (min-width: 768px) {
    .hero {
      padding: 10rem 0 5rem;
    }
  }

  .hero-content {
    max-width: 42rem;
  }

  .hero-eyebrow {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--brand-primary);
    margin-bottom: 1rem;
    letter-spacing: 0.025em;
  }

  .hero-title {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.1;
    letter-spacing: -0.03em;
    color: var(--text-primary);
    margin-bottom: 1.5rem;
  }

  @media (min-width: 768px) {
    .hero-title {
      font-size: 3.5rem;
    }
  }

  .hero-title-accent {
    color: var(--brand-primary);
  }

  .hero-description {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--text-secondary);
    margin-bottom: 2rem;
  }

  @media (min-width: 768px) {
    .hero-description {
      font-size: 1.25rem;
    }
  }

  .hero-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  /* Trust Bar */
  .trust-bar {
    padding: 2rem 0;
    border-top: 1px solid var(--border-primary);
    border-bottom: 1px solid var(--border-primary);
    background: var(--bg-secondary);
  }

  .trust-items {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  @media (min-width: 768px) {
    .trust-items {
      gap: 3rem;
    }
  }

  .trust-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
  }

  .trust-value {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--text-primary);
  }

  .trust-label {
    font-size: 0.6875rem;
    color: var(--text-tertiary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .trust-divider {
    width: 1px;
    height: 2rem;
    background: var(--border-primary);
    display: none;
  }

  @media (min-width: 768px) {
    .trust-divider {
      display: block;
    }
  }

  /* Bundles */
  .bundles {
    padding: 5rem 0;
  }

  @media (min-width: 768px) {
    .bundles {
      padding: 6rem 0;
    }
  }

  .bundles-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  @media (min-width: 768px) {
    .bundles-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
    }
  }

  .bundle-card {
    position: relative;
    display: flex;
    flex-direction: column;
    padding: 2rem;
    background: var(--bg-primary);
    border: 1px solid var(--border-primary);
    border-radius: 1rem;
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
  }

  .bundle-card:hover {
    border-color: var(--border-secondary);
    box-shadow: 0 8px 30px -10px rgba(0, 0, 0, 0.1);
  }

  .bundle-card.featured {
    border-color: var(--brand-primary);
    box-shadow: 0 0 0 1px var(--brand-primary);
  }

  .bundle-badge {
    position: absolute;
    top: -0.75rem;
    left: 50%;
    transform: translateX(-50%);
    padding: 0.25rem 0.875rem;
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #ffffff;
    background: var(--brand-primary);
    border-radius: 9999px;
  }

  .bundle-name {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 0.25rem;
  }

  .bundle-tagline {
    font-size: 0.875rem;
    color: var(--brand-primary);
    margin-bottom: 1rem;
  }

  .bundle-description {
    font-size: 0.9375rem;
    line-height: 1.6;
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
  }

  .bundle-includes {
    list-style: none;
    padding: 0;
    margin: 0 0 2rem;
    flex-grow: 1;
  }

  .bundle-includes li {
    display: flex;
    align-items: flex-start;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--text-secondary);
    margin-bottom: 0.625rem;
  }

  .bundle-includes li svg {
    flex-shrink: 0;
    margin-top: 0.125rem;
    color: var(--success);
  }

  .bundle-cta {
    display: block;
    text-align: center;
    padding: 0.75rem 1.5rem;
    font-size: 0.9375rem;
    font-weight: 500;
    border-radius: 0.5rem;
    text-decoration: none;
    transition: all 0.15s ease;
  }

  .bundle-cta.primary {
    color: #ffffff;
    background: var(--brand-primary);
  }

  .bundle-cta.primary:hover {
    background: var(--brand-hover);
  }

  .bundle-cta.secondary {
    color: var(--text-primary);
    background: var(--bg-primary);
    border: 1px solid var(--border-primary);
  }

  .bundle-cta.secondary:hover {
    border-color: var(--border-secondary);
    background: var(--bg-secondary);
  }

  /* Solutions */
  .solutions {
    padding: 5rem 0;
    background: var(--bg-secondary);
  }

  @media (min-width: 768px) {
    .solutions {
      padding: 6rem 0;
    }
  }

  .solutions-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }

  @media (min-width: 640px) {
    .solutions-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .solutions-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .solution-card {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1.5rem;
    background: var(--bg-primary);
    border: 1px solid var(--border-primary);
    border-radius: 0.875rem;
    text-decoration: none;
    transition: border-color 0.2s ease, box-shadow 0.2s ease, transform 0.2s ease;
  }

  .solution-card:hover {
    border-color: var(--border-secondary);
    box-shadow: 0 4px 20px -8px rgba(0, 0, 0, 0.1);
    transform: translateY(-2px);
  }

  .solution-card:hover .solution-arrow {
    transform: translateX(3px);
  }

  .solution-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 3rem;
    height: 3rem;
    border-radius: 0.75rem;
    flex-shrink: 0;
  }

  .solution-card.purple .solution-icon {
    background: rgba(139, 92, 246, 0.1);
    color: #8b5cf6;
  }

  .solution-card.blue .solution-icon {
    background: rgba(59, 130, 246, 0.1);
    color: #3b82f6;
  }

  .solution-card.cyan .solution-icon {
    background: rgba(6, 182, 212, 0.1);
    color: #06b6d4;
  }

  .solution-card.emerald .solution-icon {
    background: rgba(16, 185, 129, 0.1);
    color: #10b981;
  }

  .solution-card.orange .solution-icon {
    background: rgba(249, 115, 22, 0.1);
    color: #f97316;
  }

  .solution-card.rose .solution-icon {
