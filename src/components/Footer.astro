---
import { SITE_TITLE, COMPANY_INFO } from '../consts';

const currentYear = new Date().getFullYear();

const footerLinks = {
  products: [
    { label: 'Phishing Simulation', href: '/products/phishing-simulation' },
    { label: 'Dark Web Monitoring', href: '/products/dark-web-monitoring' },
    { label: '24/7 SOC', href: '/products/soc' },
    { label: 'Vulnerability Assessment', href: '/products/vulnerability-assessment' },
  ],
  solutions: [
    { label: 'Microsoft 365 Security', href: '/solutions/microsoft-365' },
    { label: 'Network Infrastructure', href: '/solutions/networking' },
  ],
  company: [
    { label: 'About', href: '/about' },
    { label: 'Services', href: '/services' },
    { label: 'Resources', href: '/blog' },
    { label: 'Contact', href: '/contact' },
  ],
  resources: [
    { label: 'Documentation', href: '/blog' },
    { label: 'Support', href: '/contact' },
  ],
};
---

<footer class="border-t border-neutral-800">
  <div class="container section-sm">
    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-8 lg:gap-12">
      <!-- Brand -->
      <div class="col-span-2 md:col-span-4 lg:col-span-1">
        <a href="/" class="flex items-center gap-2 text-white mb-4">
          <div class="w-7 h-7 bg-primary-500 rounded-md flex items-center justify-center">
            <svg class="w-4 h-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
            </svg>
          </div>
          <span class="font-semibold">{SITE_TITLE}</span>
        </a>
        <p class="text-sm text-neutral-500 max-w-xs">
          Enterprise security products and services.
        </p>
      </div>

      <!-- Products -->
      <div>
        <h4 class="text-xs font-semibold text-neutral-400 uppercase tracking-wider mb-4">Products</h4>
        <ul class="space-y-2.5">
          {footerLinks.products.map((link) => (
            <li>
              <a href={link.href} class="text-sm text-neutral-500 hover:text-white transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Solutions -->
      <div>
        <h4 class="text-xs font-semibold text-neutral-400 uppercase tracking-wider mb-4">Solutions</h4>
        <ul class="space-y-2.5">
          {footerLinks.solutions.map((link) => (
            <li>
              <a href={link.href} class="text-sm text-neutral-500 hover:text-white transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h4 class="text-xs font-semibold text-neutral-400 uppercase tracking-wider mb-4">Company</h4>
        <ul class="space-y-2.5">
          {footerLinks.company.map((link) => (
            <li>
              <a href={link.href} class="text-sm text-neutral-500 hover:text-white transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Resources -->
      <div>
        <h4 class="text-xs font-semibold text-neutral-400 uppercase tracking-wider mb-4">Resources</h4>
        <ul class="space-y-2.5">
          {footerLinks.resources.map((link) => (
            <li>
              <a href={link.href} class="text-sm text-neutral-500 hover:text-white transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>

  <!-- Bottom -->
  <div class="border-t border-neutral-800">
    <div class="container py-6">
      <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
        <p class="text-xs text-neutral-500">
          &copy; {currentYear} {COMPANY_INFO.name}
        </p>
        <div class="flex gap-6">
          <a href="/privacy" class="text-xs text-neutral-500 hover:text-white transition-colors">Privacy</a>
          <a href="/terms" class="text-xs text-neutral-500 hover:text-white transition-colors">Terms</a>
        </div>
      </div>
    </div>
  </div>
</footer>
