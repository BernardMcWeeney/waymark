---
import { SITE_TITLE, NAV_LINKS } from '../consts';
import ThemeToggle from './ThemeToggle.astro';

const pathname = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 z-50 transition-all duration-300" id="main-header">
	<div class="container-wide">
		<nav class="flex items-center justify-between h-20">
			<!-- Logo -->
			<a href="/" class="flex items-center gap-3 group" style="color: var(--text-primary);">
				<div class="w-10 h-10 bg-gradient-to-br from-brand-500 to-accent-500 rounded-xl flex items-center justify-center transition-transform group-hover:scale-105">
					<svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
						<path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
					</svg>
				</div>
				<span class="text-xl font-bold tracking-tight">{SITE_TITLE}</span>
			</a>

			<!-- Desktop Navigation -->
			<div class="hidden lg:flex items-center gap-1">
				{NAV_LINKS.slice(0, -1).map((link) => (
					<a
						href={link.href}
						class:list={[
							"px-4 py-2 rounded-lg text-sm font-medium transition-all duration-200",
							pathname === link.href || (link.href !== "/" && pathname.startsWith(link.href))
								? "nav-link-active"
								: "nav-link"
						]}
					>
						{link.label}
					</a>
				))}
			</div>

			<!-- CTA Button & Theme Toggle -->
			<div class="hidden lg:flex items-center gap-3">
				<ThemeToggle />
				<a href="/contact" class="btn-primary">
					Get Started
					<svg class="w-4 h-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
						<path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
					</svg>
				</a>
			</div>

			<!-- Mobile Menu Button -->
			<div class="lg:hidden flex items-center gap-2">
				<ThemeToggle />
				<button
					class="p-2 transition-colors rounded-lg"
					style="color: var(--text-secondary);"
					id="mobile-menu-btn"
					aria-label="Toggle menu"
				>
					<svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
						<path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
					</svg>
				</button>
			</div>
		</nav>
	</div>

	<!-- Mobile Menu -->
	<div class="lg:hidden hidden" id="mobile-menu">
		<div class="container-wide py-4 border-t" style="border-color: var(--border-primary);">
			<div class="flex flex-col gap-2">
				{NAV_LINKS.map((link) => (
					<a
						href={link.href}
						class:list={[
							"px-4 py-3 rounded-xl text-base font-medium transition-all duration-200",
							pathname === link.href || (link.href !== "/" && pathname.startsWith(link.href))
								? "nav-link-active"
								: "nav-link"
						]}
					>
						{link.label}
					</a>
				))}
				<a href="/contact" class="btn-primary mt-4 text-center">
					Get Started
				</a>
			</div>
		</div>
	</div>
</header>

<style>
	.nav-link {
		color: var(--text-secondary);
	}

	.nav-link:hover {
		color: var(--text-primary);
		background-color: var(--bg-tertiary);
	}

	.nav-link-active {
		color: var(--text-primary);
		background-color: var(--bg-tertiary);
	}

	#main-header.scrolled {
		background-color: var(--header-bg);
		backdrop-filter: blur(16px);
		-webkit-backdrop-filter: blur(16px);
		border-bottom: 1px solid var(--border-primary);
	}
</style>

<script>
	// Header scroll effect
	const header = document.getElementById('main-header');
	let lastScroll = 0;

	function handleScroll() {
		const currentScroll = window.pageYOffset;

		if (currentScroll > 50) {
			header?.classList.add('scrolled');
		} else {
			header?.classList.remove('scrolled');
		}

		lastScroll = currentScroll;
	}

	window.addEventListener('scroll', handleScroll);

	// Mobile menu toggle
	const mobileMenuBtn = document.getElementById('mobile-menu-btn');
	const mobileMenu = document.getElementById('mobile-menu');

	mobileMenuBtn?.addEventListener('click', () => {
		mobileMenu?.classList.toggle('hidden');
	});

	// Re-initialize on Astro page transitions
	document.addEventListener('astro:after-swap', () => {
		handleScroll();
	});
</script>
