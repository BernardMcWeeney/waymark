---
import { SERVICE_CATEGORIES } from '../consts';

// Group categories for mega menu layout - 4 columns
const menuColumns = [
  {
    title: "Security",
    categories: SERVICE_CATEGORIES.filter(c =>
      ['managed-security', 'incident-response', 'configuration-reviews'].includes(c.id)
    ),
  },
  {
    title: "Microsoft Cloud",
    categories: SERVICE_CATEGORIES.filter(c =>
      ['microsoft-365', 'intune', 'identity'].includes(c.id)
    ),
  },
  {
    title: "Platforms",
    categories: SERVICE_CATEGORIES.filter(c =>
      ['google-workspace', 'migration', 'workload-services'].includes(c.id)
    ),
  },
  {
    title: "Infrastructure & AI",
    categories: SERVICE_CATEGORIES.filter(c =>
      ['networking', 'web-security', 'ai-services'].includes(c.id)
    ),
  },
];

const featuredServices = [
  { title: "M365 Security Assessment", href: "/services#m365-security-assessment", badge: "Popular" },
  { title: "AI Readiness & Strategy", href: "/services#ai-readiness-strategy", badge: "New" },
  { title: "UniFi Network Deployment", href: "/services#unifi-implementation", badge: null },
];
---

<nav class="mega-menu" aria-label="Main navigation">
  <ul class="nav-list">
    <li class="nav-item">
      <a href="/" class="nav-link">Home</a>
    </li>

    <li class="nav-item has-dropdown">
      <button class="nav-link dropdown-trigger" aria-expanded="false" aria-haspopup="true">
        Services
        <svg class="dropdown-icon" width="12" height="12" viewBox="0 0 12 12" fill="none">
          <path d="M3 4.5L6 7.5L9 4.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>

      <div class="dropdown-panel mega-panel">
        <div class="mega-content">
          <!-- Gradient Header -->
          <div class="mega-header">
            <div class="mega-header-content">
              <h3 class="mega-header-title">Service Catalogue</h3>
              <p class="mega-header-desc">60+ productized services across 12 categories</p>
            </div>
            <div class="mega-header-actions">
              <a href="/services" class="mega-view-all">
                View All Services
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                </svg>
              </a>
            </div>
          </div>

          <!-- Categories Grid -->
          <div class="mega-grid">
            {menuColumns.map((column) => (
              <div class="mega-column">
                <h4 class="mega-column-title">{column.title}</h4>
                <ul class="mega-list">
                  {column.categories.map((cat) => (
                    <li>
                      <a href={`/services#${cat.id}`} class={`mega-link color-${cat.color}`}>
                        <div class={`mega-link-icon icon-${cat.color}`}>
                          {cat.icon === "shield" && (
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
                            </svg>
                          )}
                          {cat.icon === "alert" && (
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
                            </svg>
                          )}
                          {cat.icon === "check" && (
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                          )}
                          {cat.icon === "microsoft" && (
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                              <path d="M3 3h8v8H3V3zm10 0h8v8h-8V3zM3 13h8v8H3v-8zm10 0h8v8h-8v-8z"/>
                            </svg>
                          )}
                          {cat.icon === "device" && (
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M9 17.25v1.007a3 3 0 01-.879 2.122L7.5 21h9l-.621-.621A3 3 0 0115 18.257V17.25m6-12V15a2.25 2.25 0 01-2.25 2.25H5.25A2.25 2.25 0 013 15V5.25m18 0A2.25 2.25 0 0018.75 3H5.25A2.25 2.25 0 003 5.25m18 0V12a2.25 2.25 0 01-2.25 2.25H5.25A2.25 2.25 0 013 12V5.25" />
                            </svg>
                          )}
                          {cat.icon === "user" && (
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
                            </svg>
                          )}
                          {cat.icon === "google" && (
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                              <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                              <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                              <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                              <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                            </svg>
                          )}
                          {cat.icon === "migration" && (
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 21L3 16.5m0 0L7.5 12M3 16.5h13.5m0-13.5L21 7.5m0 0L16.5 12M21 7.5H7.5" />
                            </svg>
                          )}
                          {cat.icon === "grid" && (
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6A2.25 2.25 0 016 3.75h2.25A2.25 2.25 0 0110.5 6v2.25a2.25 2.25 0 01-2.25 2.25H6a2.25 2.25 0 01-2.25-2.25V6zM3.75 15.75A2.25 2.25 0 016 13.5h2.25a2.25 2.25 0 012.25 2.25V18a2.25 2.25 0 01-2.25 2.25H6A2.25 2.25 0 013.75 18v-2.25zM13.5 6a2.25 2.25 0 012.25-2.25H18A2.25 2.25 0 0120.25 6v2.25A2.25 2.25 0 0118 10.5h-2.25a2.25 2.25 0 01-2.25-2.25V6zM13.5 15.75a2.25 2.25 0 012.25-2.25H18a2.25 2.25 0 012.25 2.25V18A2.25 2.25 0 0118 20.25h-2.25A2.25 2.25 0 0113.5 18v-2.25z" />
                            </svg>
                          )}
                          {cat.icon === "network" && (
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M8.288 15.038a5.25 5.25 0 017.424 0M5.106 11.856c3.807-3.808 9.98-3.808 13.788 0M1.924 8.674c5.565-5.565 14.587-5.565 20.152 0M12.53 18.22l-.53.53-.53-.53a.75.75 0 011.06 0z" />
                            </svg>
                          )}
                          {cat.icon === "globe" && (
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0121 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0112 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 013 12c0-1.605.42-3.113 1.157-4.418" />
                            </svg>
                          )}
                          {cat.icon === "ai" && (
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 00-2.456 2.456z" />
                            </svg>
                          )}
                        </div>
                        <div class="mega-link-content">
                          <span class="mega-link-title">{cat.shortTitle}</span>
                          <span class="mega-link-count">{cat.services.length} services</span>
                        </div>
                        <svg class="mega-link-arrow" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
                        </svg>
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
            ))}
          </div>

          <!-- Featured Services Footer -->
          <div class="mega-footer">
            <div class="mega-footer-label">Featured</div>
            <div class="mega-footer-services">
              {featuredServices.map((service) => (
                <a href={service.href} class="mega-featured-link">
                  <span class="mega-featured-title">{service.title}</span>
                  {service.badge && (
                    <span class={`mega-featured-badge ${service.badge === 'New' ? 'new' : 'popular'}`}>
                      {service.badge}
                    </span>
                  )}
                </a>
              ))}
            </div>
            <a href="/contact" class="mega-cta">
              Get a Quote
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </li>

    <li class="nav-item has-dropdown">
      <button class="nav-link dropdown-trigger" aria-expanded="false" aria-haspopup="true">
        Solutions
        <svg class="dropdown-icon" width="12" height="12" viewBox="0 0 12 12" fill="none">
          <path d="M3 4.5L6 7.5L9 4.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>

      <div class="dropdown-panel solutions-panel">
        <ul class="solutions-list">
          <li>
            <a href="/solutions/microsoft-365" class="solution-link">
              <div class="solution-icon purple">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M3 3h8v8H3V3zm10 0h8v8h-8V3zM3 13h8v8H3v-8zm10 0h8v8h-8v-8z"/>
                </svg>
              </div>
              <div class="solution-content">
                <span class="solution-title">Microsoft 365</span>
                <span class="solution-desc">Complete M365 security and management</span>
              </div>
            </a>
          </li>
          <li>
            <a href="/solutions/networking" class="solution-link">
              <div class="solution-icon blue">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M8.288 15.038a5.25 5.25 0 017.424 0M5.106 11.856c3.807-3.808 9.98-3.808 13.788 0M1.924 8.674c5.565-5.565 14.587-5.565 20.152 0M12.53 18.22l-.53.53-.53-.53a.75.75 0 011.06 0z" />
                </svg>
              </div>
              <div class="solution-content">
                <span class="solution-title">Networking</span>
                <span class="solution-desc">UniFi deployment and site technology</span>
              </div>
            </a>
          </li>
          <li>
            <a href="/services#ai-services" class="solution-link">
              <div class="solution-icon emerald">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09z" />
                </svg>
              </div>
              <div class="solution-content">
                <span class="solution-title">AI & Automation</span>
                <span class="solution-desc">Copilot readiness and AI workflows</span>
              </div>
            </a>
          </li>
          <li>
            <a href="/services#managed-security" class="solution-link">
              <div class="solution-icon rose">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
                </svg>
              </div>
              <div class="solution-content">
                <span class="solution-title">Managed Security</span>
                <span class="solution-desc">Continuous protection programs</span>
              </div>
            </a>
          </li>
        </ul>
      </div>
    </li>

    <li class="nav-item">
      <a href="/about" class="nav-link">About</a>
    </li>

    <li class="nav-item">
      <a href="/blog" class="nav-link">Blog</a>
    </li>
  </ul>
</nav>

<!-- Mobile Menu Button -->
<button class="mobile-menu-btn" aria-label="Toggle menu" aria-expanded="false">
  <span class="hamburger">
    <span></span>
    <span></span>
    <span></span>
  </span>
</button>

<!-- Mobile Menu -->
<div class="mobile-menu" aria-hidden="true">
  <div class="mobile-menu-content">
    <ul class="mobile-nav-list">
      <li><a href="/" class="mobile-nav-link">Home</a></li>

      <li class="mobile-nav-group">
        <button class="mobile-nav-accordion" aria-expanded="false">
          Services
          <svg class="accordion-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
          </svg>
        </button>
        <ul class="mobile-nav-submenu">
          {SERVICE_CATEGORIES.map((cat) => (
            <li>
              <a href={`/services#${cat.id}`} class="mobile-nav-category">
                <span class={`mobile-cat-dot color-${cat.color}`}></span>
                <span class="mobile-cat-name">{cat.shortTitle}</span>
                <span class="mobile-cat-count">{cat.services.length}</span>
              </a>
            </li>
          ))}
          <li class="mobile-nav-cta">
            <a href="/services" class="btn btn-primary">View All Services</a>
          </li>
        </ul>
      </li>

      <li class="mobile-nav-group">
        <button class="mobile-nav-accordion" aria-expanded="false">
          Solutions
          <svg class="accordion-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
          </svg>
        </button>
        <ul class="mobile-nav-submenu">
          <li><a href="/solutions/microsoft-365" class="mobile-nav-sublink">Microsoft 365</a></li>
          <li><a href="/solutions/networking" class="mobile-nav-sublink">Networking</a></li>
          <li><a href="/services#ai-services" class="mobile-nav-sublink">AI & Automation</a></li>
          <li><a href="/services#managed-security" class="mobile-nav-sublink">Managed Security</a></li>
        </ul>
      </li>

      <li><a href="/about" class="mobile-nav-link">About</a></li>
      <li><a href="/blog" class="mobile-nav-link">Blog</a></li>
    </ul>

    <div class="mobile-menu-footer">
      <a href="/contact" class="btn btn-primary btn-lg">Get in Touch</a>
    </div>
  </div>
</div>

<style>
  /* Desktop Navigation */
  .mega-menu {
    display: none;
  }

  @media (min-width: 1024px) {
    .mega-menu {
      display: block;
    }
  }

  .nav-list {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-item {
    position: relative;
  }

  .nav-link {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.625rem 1rem;
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--text-secondary);
    text-decoration: none;
    border-radius: 0.625rem;
    transition: all 0.2s ease;
    background: none;
    border: none;
    cursor: pointer;
    font-family: inherit;
  }

  .nav-link:hover {
    color: var(--text-primary);
    background-color: var(--bg-tertiary);
  }

  .dropdown-icon {
    transition: transform 0.2s;
  }

  .has-dropdown:hover .dropdown-icon {
    transform: rotate(180deg);
  }

  /* Dropdown Panels */
  .dropdown-panel {
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%) translateY(12px);
    opacity: 0;
    visibility: hidden;
    transition: all 0.25s ease;
    z-index: 100;
    padding-top: 0.75rem;
  }

  .has-dropdown:hover .dropdown-panel {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(0);
  }

  /* Mega Menu Panel */
  .mega-panel {
    width: 100vw;
    max-width: 1000px;
    left: 50%;
  }

  .mega-content {
    background: var(--bg-primary);
    border: 1px solid var(--border-primary);
    border-radius: 1.25rem;
    box-shadow:
      0 25px 50px -12px rgba(0, 0, 0, 0.15),
      0 0 0 1px rgba(0, 0, 0, 0.05);
    overflow: hidden;
  }

  /* Mega Header */
  .mega-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.25rem 1.5rem;
    background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-tertiary) 100%);
    border-bottom: 1px solid var(--border-primary);
  }

  .mega-header-title {
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0;
  }

  .mega-header-desc {
    font-size: 0.8125rem;
    color: var(--text-tertiary);
    margin: 0.25rem 0 0;
  }

  .mega-view-all {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--brand-primary);
    text-decoration: none;
    padding: 0.5rem 1rem;
    background: var(--bg-primary);
    border: 1px solid var(--border-primary);
    border-radius: 0.5rem;
    transition: all 0.2s ease;
  }

  .mega-view-all:hover {
    background: var(--brand-primary);
    color: white;
    border-color: var(--brand-primary);
  }

  .mega-view-all svg {
    transition: transform 0.2s;
  }

  .mega-view-all:hover svg {
    transform: translateX(2px);
  }

  /* Categories Grid */
  .mega-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 0;
    padding: 1rem;
  }

  .mega-column {
    padding: 0.5rem 0.75rem;
    border-right: 1px solid var(--border-primary);
  }

  .mega-column:last-child {
    border-right: none;
  }

  .mega-column-title {
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--text-tertiary);
    margin: 0 0 0.5rem 0.75rem;
  }

  .mega-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .mega-link {
    display: flex;
    align-items: center;
