---
import { SERVICE_CATEGORIES } from '../consts';

// Group categories for mega menu layout
const serviceGroups = [
  {
    title: "Security Services",
    categories: [
      { id: "managed-security", title: "Managed Security", icon: "shield", description: "Continuous protection" },
      { id: "incident-response", title: "Incident Response", icon: "alert", description: "Rapid response" },
      { id: "configuration-reviews", title: "Security Reviews", icon: "check", description: "Configuration audits" },
    ]
  },
  {
    title: "Microsoft & Cloud",
    categories: [
      { id: "microsoft-365", title: "Microsoft 365", icon: "microsoft", description: "M365 platform services" },
      { id: "intune", title: "Intune & Endpoint", icon: "device", description: "Device management" },
      { id: "identity", title: "Identity & Access", icon: "user", description: "Entra ID security" },
      { id: "google-workspace", title: "Google Workspace", icon: "google", description: "Google admin & security" },
    ]
  },
  {
    title: "Infrastructure & AI",
    categories: [
      { id: "networking", title: "Networking", icon: "network", description: "UniFi & site tech" },
      { id: "ai-services", title: "AI Services", icon: "ai", description: "AI strategy & implementation" },
      { id: "migration", title: "Migration", icon: "migration", description: "Platform migrations" },
      { id: "web-security", title: "Web Security", icon: "globe", description: "Application security" },
    ]
  }
];

const quickLinks = [
  { title: "View All Services", href: "/services", description: "Browse our complete catalogue" },
  { title: "Get a Quote", href: "/contact", description: "Request pricing for your project" },
];
---

<nav class="mega-menu" aria-label="Main navigation">
  <ul class="nav-list">
    <li class="nav-item">
      <a href="/" class="nav-link">Home</a>
    </li>

    <li class="nav-item has-dropdown">
      <button class="nav-link dropdown-trigger" aria-expanded="false" aria-haspopup="true">
        Services
        <svg class="dropdown-icon" width="12" height="12" viewBox="0 0 12 12" fill="none">
          <path d="M3 4.5L6 7.5L9 4.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>

      <div class="dropdown-panel mega-panel">
        <div class="mega-content">
          <div class="mega-grid">
            {serviceGroups.map((group) => (
              <div class="mega-column">
                <h3 class="mega-heading">{group.title}</h3>
                <ul class="mega-list">
                  {group.categories.map((cat) => (
                    <li>
                      <a href={`/services#${cat.id}`} class="mega-link">
                        <div class="mega-link-icon">
