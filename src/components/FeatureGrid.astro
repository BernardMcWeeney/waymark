---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
	{features.map((feature) => (
		<div class="flex gap-4">
			<div class="flex-shrink-0 w-10 h-10 rounded-lg bg-brand-500/10 flex items-center justify-center">
				<svg class="w-5 h-5 text-brand-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5" set:html={icons[feature.icon] || icons.check} />
			</div>
			<div>
				<h4 class="text-white font-medium mb-1">{feature.title}</h4>
				<p class="text-slate-400 text-sm">{feature.description}</p>
			</div>
		</div>
	))}
</div>
