---
import type { CollectionEntry } from 'astro:content';
import BaseLayout from './BaseLayout.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<BaseLayout title={title} description={description} image={heroImage}>
	<article>
		<!-- Hero Section -->
		<section class="relative py-24 lg:py-32 overflow-hidden">
			<div class="absolute inset-0">
				<div class="absolute inset-0 bg-gradient-to-br from-slate-950 via-slate-900 to-slate-950"></div>
				<div class="absolute top-1/4 left-1/4 w-96 h-96 bg-brand-500/10 rounded-full blur-3xl"></div>
			</div>

			<div class="container-narrow relative z-10">
				<div class="text-center">
					<a href="/blog" class="inline-flex items-center text-sm text-slate-400 hover:text-white transition-colors mb-6">
						<svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
							<path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
						</svg>
						Back to Blog
					</a>
					<div class="flex items-center justify-center gap-4 text-sm text-slate-400 mb-6">
						<FormattedDate date={pubDate} />
						{updatedDate && (
							<span class="text-slate-500">
								(Updated: <FormattedDate date={updatedDate} />)
							</span>
						)}
					</div>
					<h1 class="text-4xl md:text-5xl font-bold text-white mb-6 text-balance">
						{title}
					</h1>
					{description && (
						<p class="text-xl text-slate-400 max-w-2xl mx-auto">
							{description}
						</p>
					)}
				</div>
			</div>
		</section>

		<!-- Hero Image -->
		{heroImage && (
			<div class="container-narrow -mt-8 mb-16 relative z-10">
				<div class="rounded-2xl overflow-hidden border border-slate-800">
					<img
						src={heroImage}
						alt={title}
						class="w-full aspect-video object-cover"
					/>
				</div>
			</div>
		)}

		<!-- Content -->
		<section class="pb-20">
			<div class="container-narrow">
				<div class="prose prose-lg prose-invert max-w-none">
					<slot />
				</div>
			</div>
		</section>

		<!-- Share & Navigation -->
		<section class="py-12 border-t border-slate-800">
			<div class="container-narrow">
				<div class="flex flex-col sm:flex-row justify-between items-center gap-6">
					<div class="flex items-center gap-4">
						<span class="text-slate-400 text-sm">Share this article:</span>
						<div class="flex gap-2">
							<a href="#" class="w-10 h-10 rounded-lg bg-slate-800 hover:bg-slate-700 flex items-center justify-center text-slate-400 hover:text-white transition-all">
								<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
									<path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
								</svg>
							</a>
							<a href="#" class="w-10 h-10 rounded-lg bg-slate-800 hover:bg-slate-700 flex items-center justify-center text-slate-400 hover:text-white transition-all">
								<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
									<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
								</svg>
							</a>
						</div>
					</div>
					<a href="/blog" class="btn-secondary">
						<svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
							<path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
						</svg>
						All Articles
					</a>
				</div>
			</div>
		</section>
	</article>
</BaseLayout>

<style is:global>
	/* Blog content styles */
	.prose {
		color: var(--color-slate-300);
	}

	.prose h2,
	.prose h3,
	.prose h4 {
		color: white;
		margin-top: 2em;
		margin-bottom: 1em;
	}

	.prose h2 {
		font-size: 1.875rem;
		font-weight: 700;
	}

	.prose h3 {
		font-size: 1.5rem;
		font-weight: 600;
	}

	.prose p {
		margin-bottom: 1.5em;
		line-height: 1.8;
	}

	.prose a {
		color: var(--color-brand-400);
		text-decoration: underline;
		text-underline-offset: 2px;
	}

	.prose a:hover {
		color: var(--color-brand-300);
	}

	.prose strong {
		color: white;
	}

	.prose ul,
	.prose ol {
		margin-bottom: 1.5em;
		padding-left: 1.5em;
	}

	.prose li {
		margin-bottom: 0.5em;
	}

	.prose blockquote {
		border-left: 4px solid var(--color-brand-500);
		padding-left: 1.5em;
		margin: 2em 0;
		font-style: italic;
		color: var(--color-slate-400);
	}

	.prose code {
		background: var(--color-slate-800);
		padding: 0.25em 0.5em;
		border-radius: 0.375rem;
		font-size: 0.875em;
	}

	.prose pre {
		background: var(--color-slate-900);
		border: 1px solid var(--color-slate-800);
		border-radius: 0.75rem;
		padding: 1.5em;
		overflow-x: auto;
		margin: 2em 0;
	}

	.prose pre code {
		background: transparent;
		padding: 0;
	}

	.prose img {
		border-radius: 0.75rem;
		margin: 2em 0;
	}

	.prose hr {
		border-color: var(--color-slate-800);
		margin: 3em 0;
	}
</style>
